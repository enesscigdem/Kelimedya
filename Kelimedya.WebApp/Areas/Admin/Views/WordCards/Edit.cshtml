@model Kelimedya.WebApp.Areas.Admin.Models.WordCardViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kelime Kartı Düzenle";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <h2 class="page-title">Kelime Kartı Düzenle</h2>
        <div class="text-muted mt-1">Kelime kartı bilgilerini güncelleyin.</div>
    </div>
</div>

<div class="page-body pt-2">
    <div class="container-xl">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id"/>
                    <input type="hidden" asp-for="LessonId"/>
                    <div class="mb-3">
                        <label class="form-label">Kelime</label>
                        <input type="text" class="form-control" asp-for="Word"/>
                        <span asp-validation-for="Word" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Eş Anlam</label>
                        <input type="text" class="form-control" asp-for="Synonym" placeholder="Eş Anlam"/>
                        <span asp-validation-for="Synonym" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tanım</label>
                        <textarea id="wcEditDefinition" class="form-control" asp-for="Definition" rows="4"></textarea>
                        <span asp-validation-for="Definition" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Örnek Cümle</label>
                        <textarea class="form-control" asp-for="ExampleSentence" rows="3"></textarea>
                        <span asp-validation-for="ExampleSentence" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mevcut Resim</label>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl.ToDriveThumbnail()" alt="Kelime Kartı Resmi" style="max-height:50px;"/>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yeni Resim Yükle (Değiştirmek için)</label>
                        <input type="file" class="form-control" asp-for="ImageFile"/>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                   @for (int i = 0; i < Model.GameQuestions.Count; i++)
                   {
                       var q = Model.GameQuestions[i];
                       <div class="border rounded p-3 mb-3">
                           <h5 class="mb-2">@q.GameTitle</h5>
                           <input type="hidden" asp-for="GameQuestions[i].GameId" />
                   
                           <div class="mb-2">
                               <label class="form-label">Soru</label>
                               <textarea class="form-control tinymce-sm"  asp-for="GameQuestions[i].QuestionText" rows="2"></textarea>
                           </div>
                   
                           @* 1. Adam Asmaca *@
                           @if (q.GameTitle == "Adam Asmaca")
                           {
                               <div class="mb-2">
                                   <label class="form-label">Cevap</label>
                                   <textarea class="form-control tinymce-sm" asp-for="GameQuestions[i].AnswerText" rows="2"></textarea>
                               </div>
                           }
                           @* 2. Boşluk Doldurma *@
                           else if (q.GameTitle == "Boşluk Doldurma")
                           {
                               <div class="row g-2">
                                   <div class="col-md-6">
                                       <label class="form-label">Seçenek A</label>
                                       <input type="text" class="form-control" asp-for="GameQuestions[i].OptionA" />
                                   </div>
                                   <div class="col-md-6">
                                       <label class="form-label">Seçenek B</label>
                                       <input type="text" class="form-control" asp-for="GameQuestions[i].OptionB" />
                                   </div>
                                   <div class="col-md-6">
                                       <label class="form-label">Seçenek C</label>
                                       <input type="text" class="form-control" asp-for="GameQuestions[i].OptionC" />
                                   </div>
                                   <div class="col-md-6">
                                       <label class="form-label">Seçenek D</label>
                                       <input type="text" class="form-control" asp-for="GameQuestions[i].OptionD" />
                                   </div>
                                   <div class="col-md-4">
                                       <label class="form-label">Doğru Seçenek</label>
                                       <input type="number" class="form-control" asp-for="GameQuestions[i].CorrectOption" />
                                   </div>
                               </div>
                           }
                           @* 3. Görselden Soru *@
                           else if (q.GameTitle == "Görselden Soru")
                           {
                               <div class="mb-2">
                                   <label class="form-label">Resim 1</label>
                                   <input type="file" class="form-control" asp-for="GameQuestions[i].ImageFile" />
                               </div>
                               <div class="row g-2">
                                   <div class="col-md-6">
                                       <label class="form-label">Seçenek A</label>
                                       <input type="text" class="form-control" asp-for="GameQuestions[i].OptionA" />
                                   </div>
                                   <div class="col-md-6">
                                       <label class="form-label">Seçenek B</label>
                                       <input type="text" class="form-control" asp-for="GameQuestions[i].OptionB" />
                                   </div>
                                   <div class="col-md-6">
                                       <label class="form-label">Seçenek C</label>
                                       <input type="text" class="form-control" asp-for="GameQuestions[i].OptionC" />
                                   </div>
                                   <div class="col-md-6">
                                       <label class="form-label">Seçenek D</label>
                                       <input type="text" class="form-control" asp-for="GameQuestions[i].OptionD" />
                                   </div>
                                   <div class="col-md-4">
                                       <label class="form-label">Doğru Seçenek</label>
                                       <input type="number" class="form-control" asp-for="GameQuestions[i].CorrectOption" />
                                   </div>
                               </div>
                           }
                           @* 4. Kelimeden Görsel *@
                           else if (q.GameTitle == "Kelimeden Görsel")
                           {
                               <div class="mb-2">
                                   <label class="form-label">Resim 1</label>
                                   <input type="file" class="form-control" asp-for="GameQuestions[i].ImageFile" />
                               </div>
                               <div class="mb-2">
                                   <label class="form-label">Resim 2</label>
                                   <input type="file" class="form-control" asp-for="GameQuestions[i].ImageFile2" />
                               </div>
                               <div class="mb-2">
                                   <label class="form-label">Resim 3</label>
                                   <input type="file" class="form-control" asp-for="GameQuestions[i].ImageFile3" />
                               </div>
                               <div class="mb-2">
                                   <label class="form-label">Resim 4</label>
                                   <input type="file" class="form-control" asp-for="GameQuestions[i].ImageFile4" />
                               </div>
                               <div class="col-md-4">
                                   <label class="form-label">Doğru Seçenek</label>
                                   <input type="number" class="form-control" asp-for="GameQuestions[i].CorrectOption" />
                               </div>
                           }
                           @* 5. Kabarcık Harfler *@
                           else if (q.GameTitle == "Kabarcık Harfler")
                           {
                               <div class="mb-2">
                                   <label class="form-label">Cevap</label>
                                   <textarea class="form-control tinymce-sm" asp-for="GameQuestions[i].AnswerText" rows="2"></textarea>
                               </div>
                               <div class="mb-2">
                                   <label class="form-label">Resim</label>
                                   <input type="file" class="form-control" asp-for="GameQuestions[i].ImageFile" />
                               </div>
                           }
                           @* 6. Çengel Bulmaca *@
                           else if (q.GameTitle == "Çengel Bulmaca")
                           {
                               <div class="mb-2">
                                   <label class="form-label">Cevap</label>
                                   <textarea class="form-control tinymce-sm" asp-for="GameQuestions[i].AnswerText" rows="2"></textarea>
                               </div>
                           }
                           @* 7. Cümle Kurma *@
                           else if (q.GameTitle == "Cümle Kurma")
                           {
                               <div class="mb-2">
                                   <label class="form-label">Cevap</label>
                                   <textarea class="form-control tinymce-sm" asp-for="GameQuestions[i].AnswerText" rows="2"></textarea>
                               </div>
                           }
                           @* 8. Eş Yakın Eşleştirme *@
                           else if (q.GameTitle == "Eş Yakın Eşleştirme")
                           {
                               <div class="mb-2">
                                   <label class="form-label">Cevap</label>
                                   <textarea class="form-control tinymce-sm" asp-for="GameQuestions[i].AnswerText" rows="2"></textarea>
                               </div>
                           }
                       </div>
                   }


                    @for (int i = 0; i < 1; i++)
                    {
                        <div class="border rounded p-3 mb-3">
                            <h5 class="mb-2">Test Sorusu @(i + 1)</h5>
                            <div class="mb-2">
                                <label class="form-label">Soru</label>
                                <input type="text" class="form-control" asp-for="TestQuestions[i].QuestionText" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">A</label>
                                <input type="text" class="form-control" asp-for="TestQuestions[i].OptionA" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">B</label>
                                <input type="text" class="form-control" asp-for="TestQuestions[i].OptionB" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">C</label>
                                <input type="text" class="form-control" asp-for="TestQuestions[i].OptionC" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">D</label>
                                <input type="text" class="form-control" asp-for="TestQuestions[i].OptionD" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Doğru Seçenek (1-4)</label>
                                <input type="number" class="form-control" asp-for="TestQuestions[i].CorrectOption" />
                            </div>
                        </div>
                    }
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a asp-action="Index" asp-route-lessonId="@Model.LessonId" class="btn btn-link link-secondary">Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            tinymce.init({ selector: '#wcEditDefinition', height: 200, menubar: false });
            tinymce.init({ selector: '.tinymce-sm', height: 180, menubar: false });
        });
    </script>
}