@using System.Security.Claims
@{
    bool embed = Context.Request.Query.ContainsKey("embed");
    string singleWord = Context.Request.Query["word"];
    Layout = embed ? "~/Areas/Student/Views/Shared/_GameLayout.cshtml" : "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Adam Asmaca";
    var studentId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<link href="~/css/AdamAsmaca.css" rel="stylesheet"/>

<div id="gameRoot" class="container-xl" data-student-id="@studentId" data-game-id="@ViewData["GameId"]" data-word="@singleWord" data-embed="@embed.ToString().ToLower()" style="margin-top:1rem;">
    <div class="fullscreen-container">
        <div class="asmaca-header">
            Adam Asmaca Oyunu
        </div>
        <div class="game-area">
            
            <div class="hangman-canvas" id="hangmanCanvas"></div>
            <div id="hangmanWord" class="hangman-word"></div>
            <div>Hatalar: <span id="wrongCount">0</span></div>
            <div>
                <div class="letters">
                    
                    @foreach (var c in "ABCÇDEFGĞHIİJKLMNOÖPRSŞTUÜVYZ".ToCharArray())
                    {
                        <button class="letter-btn">@c</button>
                    }
                </div>
                <div style="margin-top:1rem;">
                    <button id="endGameBtn" class="simple-btn" data-home="@Url.Action("Index","Games", new {area="Student"})">Oyunu Sonlandır</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module">
        import {initHangman} from '@Url.Content("~/js/games/AdamAsmaca.js")';
        const el = document.getElementById('gameRoot');
        initHangman(el.dataset.studentId, el.dataset.gameId, el.dataset.word);
    </script>
}
