@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Mesajlar";
}

<!-- Sayfa Başlığı -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <h2 class="page-title">
          Mesajlar
        </h2>
        <div class="text-muted mt-1">
          Gelen kutunuzdaki mesajları görüntüleyip, detaylarını okuyabilirsiniz.
        </div>
      </div>
      <div class="col-auto ms-auto d-print-none">
        <!-- İsteğe bağlı yeni mesaj oluşturma butonu eklenebilir -->
      </div>
    </div>
  </div>
</div>

<!-- Arama / Filtre Alanı -->
<div class="page-body pt-1">
  <div class="container-xl">
    <div class="row mb-3">
      <div class="col-12 col-lg-4">
        <form method="get" class="mb-2">
          <div class="input-icon">
            <span class="input-icon-addon">
              <svg xmlns="http://www.w3.org/2000/svg" 
                   class="icon icon-tabler icon-tabler-search" 
                   width="24" height="24" viewBox="0 0 24 24" 
                   stroke-width="2" stroke="currentColor" 
                   fill="none" stroke-linecap="round" 
                   stroke-linejoin="round">
                <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                <path d="M10 10a7 7 0 1 0 7 7" />
                <path d="M21 21l-6 -6" />
              </svg>
            </span>
            <input type="text" name="search" class="form-control" placeholder="Mesaj ara…" />
          </div>
        </form>
      </div>
      <div class="col-12 col-lg-8 text-end">
        <div class="btn-group">
          <button class="btn btn-white">
            <svg xmlns="http://www.w3.org/2000/svg" 
                 class="icon icon-tabler icon-tabler-filter me-1" 
                 width="24" height="24" viewBox="0 0 24 24" 
                 stroke-width="2" stroke="currentColor" 
                 fill="none" stroke-linecap="round" 
                 stroke-linejoin="round">
              <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
              <path d="M5.5 5h13" />
              <path d="M7 10h9" />
              <path d="M8.5 15h5" />
            </svg>
            Filtre
          </button>
          <button class="btn btn-white">
            <svg xmlns="http://www.w3.org/2000/svg" 
                 class="icon icon-tabler icon-tabler-arrows-sort me-1" 
                 width="24" height="24" viewBox="0 0 24 24" 
                 stroke-width="2" stroke="currentColor" 
                 fill="none" stroke-linecap="round" 
                 stroke-linejoin="round">
              <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
              <path d="M3 9l4 -4l4 4m-4 -4v14" />
              <path d="M21 15l-4 4l-4 -4m4 4v-14" />
            </svg>
            Sırala
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Mesajlar Tablosu -->
<div class="page-body pt-2">
  <div class="container-xl">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Mesaj Kutusu</h3>
      </div>
      <div class="table-responsive">
        <table class="table card-table">
          <thead class="table-dark">
            <tr>
              <th>Gönderen</th>
              <th>Konu</th>
              <th>Tarih</th>
              <th class="w-1 text-end">İşlemler</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>info@example.com</td>
              <td>Yeni Üyelik Talebi</td>
              <td>2025-01-01</td>
              <td class="text-end">
                <a class="btn btn-sm btn-info" href="#">Oku</a>
              </td>
            </tr>
            <!-- Diğer mesaj satırları dinamik olarak eklenecek -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>