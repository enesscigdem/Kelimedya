@model IEnumerable<Kelimedya.WebApp.Areas.Admin.Models.GameViewModel>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Oyunlar";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="page-title">Oyunlar</h2>
            </div>
            <div class="col-auto ms-auto d-print-none">
                <a class="btn btn-primary" asp-action="Create">Yeni Oyun Ekle</a>
            </div>
        </div>
    </div>
</div>

<div class="page-body pt-2">
    <div class="container-xl">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Mevcut Oyunlar</h3>
            </div>
            <div class="table-responsive">
                <table class="table card-table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Oyun Adı</th>
                            <th>Türü</th>
                            <th>Zorluk</th>
                            <th>Aktif mi?</th>
                            <th class="w-1 text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var game in Model)
                        {
                            <tr>
                                <td>@game.Title</td>
                                <td>@game.GameType</td>
                                <td>@game.Difficulty</td>
                                <td>
                                    <span class="badge @(game.IsActive ? "bg-green" : "bg-red")">@(game.IsActive ? "Evet" : "Hayır")</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-success me-1">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-danger delete-btn">Sil</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
