@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Roller";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Rol Listesi
                </h2>
            </div>
            <div class="col-auto ms-auto">
                <a asp-area="Admin" asp-controller="Roles" asp-action="Create" class="btn btn-primary">
                    Yeni Rol Ekle
                </a>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="container-xl">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Roller</h3>
            </div>
            <div class="table-responsive">
                <table class="table card-table table-vcenter">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Rol Adı</th>
                            <th>Açıklama</th>
                            <th class="w-1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= 3; i++)
                        {
                            <tr>
                                <td>@i</td>
                                <td>Admin</td>
                                <td>Tüm yetkilere sahip</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@i" class="btn btn-sm btn-warning">Düzenle</a>
                                        <a asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-id="@i" class="btn btn-sm btn-danger">Sil</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>