@using System.Security.Claims
@{
    bool embed = Context.Request.Query.ContainsKey("embed");
    string singleWord = Context.Request.Query["word"];
    string wordId = Context.Request.Query["id"];
    Layout = embed
        ? "~/Areas/Student/Views/Shared/_GameLayout.cshtml"
        : "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kelimeden Görsel";
    var studentId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<link href="~/css/WordImage.css" rel="stylesheet"/>

<div id="gameRoot" class="gb-container container-xl"
     data-student-id="@studentId"
     data-game-id="@ViewData["GameId"]"
     data-word="@singleWord"
     data-word-id="@wordId"
     data-embed="@embed.ToString().ToLower()">

    <header class="gb-header">
        <h2>Kelimeden Görsel</h2>
        <div class="gb-progress">
            <div class="gb-progress-bar" style="width:100%"></div>
        </div>
        <p class="gb-subtitle">Kelimeye uygun görseli seçiniz.</p>ı
    </header>

    <div class="gb-gamecard wti-gamecard">
        <h3 id="wtiWord" class="wti-word"></h3>
        <div id="wtiOptions" class="wti-options"></div>

        <div class="gb-feedback wti-feedback" id="wtiFeedback"></div>

        <div class="gb-controls wti-footer">
            @if (!embed)
            {
                <button id="wtiBack" class="btn-secondary">Geri Dön</button>
                <button id="wtiNext" class="btn-primary">Sonraki</button>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script type="module">
import {initWordImage} from '@Url.Content("~/js/games/WordImage.js")';
const root = document.getElementById('gameRoot');
initWordImage(
  root.dataset.studentId,
  root.dataset.gameId,
  root.dataset.word,
  root.dataset.wordId
);
</script>
}