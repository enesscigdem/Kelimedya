@using System.Security.Claims
@{
    bool embed = Context.Request.Query.ContainsKey("embed");
    Layout = embed ? "~/Areas/Student/Views/Shared/_GameLayout.cshtml" : "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Çengel Bulmaca";
    var studentId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<link href="~/css/CrossPuzzle.css" rel="stylesheet" />

<div id="gameRoot" class="container-xl" data-student-id="@studentId" data-game-id="@ViewData["GameId"]" data-embed="@embed.ToString().ToLower()" style="margin-top:1rem;">
  <div class="fullscreen-container">
    <header class="cp-header">
      <h1>Çengel Bulmaca</h1>
      <p>Yatay ve dikey kelimeleri doldurarak bulmacayı tamamlayın.</p>
    </header>

    <div class="cp-gamecard">
      <div class="cp-main">
        <div class="cp-grid" id="puzzleGrid"></div>
        <div class="cp-sidebar">
          <div class="cp-clues">
            <div class="cp-clue-block">
              <h3>Yatay</h3>
              <ul id="across-clues"></ul>
            </div>
            <div class="cp-clue-block">
              <h3>Dikey</h3>
              <ul id="down-clues"></ul>
            </div>
          </div>
          <div class="cp-controls">
            <button id="cpCheck" class="cp-btn primary">Kontrol Et</button>
            <button id="cpReveal" class="cp-btn secondary">Cevabı Göster</button>
            <button id="cpBack" data-home="@Url.Action("Index","Games", new { area = "Student" })" class="cp-btn tertiary">Geri Dön</button>
          </div>
        </div>
      </div>

      <div class="cp-feedback" id="cpFeedback"></div>
    </div>
  </div>
</div>

@section Scripts {
    <script type="module">
        import {initCrossPuzzle} from '@Url.Content("~/js/games/CrossPuzzle.js")';
        const r=document.getElementById('gameRoot');
        initCrossPuzzle(r.dataset.studentId, r.dataset.gameId);
    </script>
}
