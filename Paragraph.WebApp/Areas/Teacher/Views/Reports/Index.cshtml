@{
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Raporlar";
}

<style>
    .reports-wrapper {
        margin-top: 1rem;
    }
    .reports-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
    .reports-title {
        font-size: 1.8rem;
        margin: 0;
        color: #2f3b5d;
    }
    .reports-sub {
        color: #777;
        font-size: 0.95rem;
    }
    .gold-btn {
        background: #c8a800;
        border: none;
        color: #fff;
        padding: 0.6rem 1.2rem;
        border-radius: 6px;
        font-weight: 500;
    }
    .gold-btn:hover {
        background: #b08f00;
    }

    /* Stat Cards */
    .reports-stats {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px,1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }
    .reports-stat {
        background: #fff;
        border-left: 5px solid #c8a800;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.06);
        padding: 1rem;
        text-align: center;
    }
    .reports-stat .subheader {
        font-size: 0.8rem;
        color: #999;
        text-transform: uppercase;
        margin-bottom: 0.2rem;
    }
    .reports-stat .number {
        font-size: 2rem;
        color: #c8a800;
        margin: 0;
    }

    /* Rapor Tablosu */
    .reports-table-wrap {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.06);
        overflow: hidden;
    }
    .reports-table-wrap .card-header {
        background: #ecf0f1;
        border-radius: 10px 10px 0 0;
    }
    .reports-table-wrap table thead {
        background: #2f3b5d;
        color: #fff;
    }
    .reports-table-wrap table thead th {
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
    }
</style>

<div class="reports-wrapper container-xl">
    <div class="reports-header">
        <div>
            <h2 class="reports-title">Raporlar</h2>
            <div class="reports-sub">Öğrenci performans raporlarını düzenleyin ve yönetin.</div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="reports-stats">
        <div class="reports-stat">
            <div class="subheader">Toplam Rapor</div>
            <h2 class="number">8</h2>
        </div>
        <div class="reports-stat">
            <div class="subheader">Yeni Rapor</div>
            <h2 class="number">2</h2>
        </div>
        <!-- Diğer stat kutuları -->
    </div>

    <!-- Filtre / Arama -->
    <div class="d-flex flex-wrap mb-3">
        <div style="flex: 1;">
            <form method="get" class="mb-2" style="max-width: 300px;">
                <div class="input-icon">
                    <span class="input-icon-addon">
                        <!-- Search Icon -->
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="icon icon-tabler icon-tabler-search"
                             width="24" height="24"
                             viewBox="0 0 24 24" stroke-width="2"
                             stroke="currentColor" fill="none"
                             stroke-linecap="round" stroke-linejoin="round">
                          <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                          <path d="M10 10a7 7 0 1 0 7 7"/>
                          <path d="M21 21l-6 -6"/>
                        </svg>
                    </span>
                    <input type="text" class="form-control" placeholder="Rapor ara…" />
                </div>
            </form>
        </div>
        <div style="text-align: right;">
            <button class="gold-btn me-1">Filtre</button>
            <button class="gold-btn">Sırala</button>
        </div>
    </div>

    <!-- Rapor Listesi -->
    <div class="reports-table-wrap">
        <div class="card-header">
            <h3 class="card-title">Mevcut Raporlar</h3>
        </div>
        <div class="table-responsive">
            <table class="table card-table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Rapor Adı</th>
                        <th>Oluşturma Tarihi</th>
                        <th class="w-1 text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>A1 Grup Sınav Sonuçları</td>
                        <td>2025-01-18</td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a href="/Teacher/Reports/Edit/1" class="gold-btn me-1" style="background:#27ae60;">
                                    Düzenle
                                </a>
                                <a href="/Teacher/Reports/Delete/1" class="gold-btn" style="background:#e74c3c;">
                                    Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                    <!-- Diğer raporlar -->
                </tbody>
            </table>
        </div>
    </div>
</div>
