@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Oyunlar";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <h2 class="page-title">Oyunlar</h2>
        <div class="text-muted mt-1">
            Kelime oyunları ile pratik yapabilirsiniz.
        </div>
    </div>
</div>

<div class="page-body pt-2">
    <div class="container-xl">
        <div class="row row-cards">
            <!-- Oyun 1 -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Adam Asmaca</h3>
                    </div>
                    <div class="card-body">
                        <p>Verilen kelimeyi harf tahmini yaparak bulmaya çalışın.</p>
                        <a href="#" class="btn btn-primary d-flex align-items-center">
                            <!-- Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="icon me-1" width="20" height="20"
                                 viewBox="0 0 24 24" stroke-width="2"
                                 stroke="currentColor" fill="none" stroke-linecap="round"
                                 stroke-linejoin="round">
                                <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                                <path d="M13 7l5 5l-5 5m5 -5h-8
                                         a4 4 0 1 1 0 -8h1"/>
                            </svg>
                            Oyuna Başla
                        </a>
                    </div>
                </div>
            </div>
            <!-- Oyun 2 -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Kelime Bulmaca</h3>
                    </div>
                    <div class="card-body">
                        <p>Çoktan seçmeli veya yazılı kelime tahmin oyunu.</p>
                        <a href="#" class="btn btn-primary d-flex align-items-center">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="icon me-1" width="20" height="20"
                                 viewBox="0 0 24 24" stroke-width="2"
                                 stroke="currentColor" fill="none" stroke-linecap="round"
                                 stroke-linejoin="round">
                                <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                                <path d="M13 7l5 5l-5 5m5 -5h-8
                                         a4 4 0 1 1 0 -8h1"/>
                            </svg>
                            Oyuna Başla
                        </a>
                    </div>
                </div>
            </div>
            <!-- Diğer oyunlar... -->
        </div>
    </div>
</div>
