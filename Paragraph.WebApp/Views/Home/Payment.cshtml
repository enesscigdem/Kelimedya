@model Paragraph.WebApp.Models.PaymentModel

@{
    ViewData["Title"] = "Ödeme";
}

<main>
    <!-- Gradient Hero Section -->
        <section class="td_page_heading td_center td_bg_filed td_heading_bg text-center td_hobble" 
                 style="background-image: url('~/theme/web_UI/assets/img/home_5/page_heading_bg.jpg'); background-size: cover; min-height: 200px; position: relative;">
            <div class="container">
                <div class="td_page_heading_in">
                    <h1 class="td_white_color td_fs_48 td_mb_10">Ödeme</h1>
                    <ol class="breadcrumb m-0 td_fs_20 td_opacity_8 td_semibold td_white_color">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index" class="td_white_color">Anasayfa</a>
                        </li>
                        <li class="breadcrumb-item active">Ödeme</li>
                    </ol>
                </div>
            </div>
            <!-- Dekoratif Şekiller -->
            <div class="td_page_heading_shape_1 position-absolute td_hover_layer_3"></div>
            <div class="td_page_heading_shape_2 position-absolute td_hover_layer_5"></div>
            <div class="td_page_heading_shape_3 position-absolute">
                <img src="~/theme/web_UI/assets/img/home_5/page_heading_shape_3.svg" alt="">
            </div>
            <div class="td_page_heading_shape_4 position-absolute">
                <img src="~/theme/web_UI/assets/img/home_5/page_heading_shape_4.svg" alt="">
            </div>
            <div class="td_page_heading_shape_5 position-absolute">
                <img src="~/theme/web_UI/assets/img/home_5/page_heading_shape_5.svg" alt="">
            </div>
            <div class="td_page_heading_shape_6 position-absolute td_hover_layer_3"></div>
        </section>
    
        <div class="td_height_120 td_height_lg_80"></div>

    <!-- Payment Section -->
    <div class="container">
        <div class="row g-5">
            <!-- Payment Form -->
            <div class="col-lg-8">
                <div class="payment-card">
                    <div class="payment-card-header">
                        <h2 class="mb-1">Ödeme Bilgileri</h2>
                        <p class="text-muted">Lütfen kredi kartı bilgilerinizi girin</p>
                    </div>
                    
                    <form method="post" asp-action="Payment" class="payment-form">
                        <!-- Card Number -->
                        <div class="form-group animated-input">
                            <label>Kart Numarası</label>
                            <div class="input-wrapper">
                                <input type="text" name="CardNumber" class="form-control" 
                                       placeholder="4242 4242 4242 4242" required>
                                <i class="bi bi-credit-card"></i>
                            </div>
                        </div>

                        <!-- Card Holder -->
                        <div class="form-group animated-input">
                            <label>Kart Üzerindeki İsim</label>
                            <div class="input-wrapper">
                                <input type="text" name="CardHolderName" class="form-control" 
                                       placeholder="Ad Soyad" required>
                                <i class="bi bi-person-badge"></i>
                            </div>
                        </div>

                        <!-- Expiry & CVV -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group animated-input">
                                    <label>Son Kullanma Tarihi</label>
                                    <div class="input-wrapper">
                                        <input type="text" name="ExpiryDate" class="form-control" 
                                               placeholder="AA/YY" required>
                                        <i class="bi bi-calendar2-month"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group animated-input">
                                    <label>CVV</label>
                                    <div class="input-wrapper">
                                        <input type="text" name="CCV" class="form-control" 
                                               placeholder="123" required>
                                        <i class="bi bi-lock"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Terms -->
                        <div class="form-check terms-check">
                            <input class="form-check-input" type="checkbox" id="terms" required>
                            <label class="form-check-label" for="terms">
                                <a href="#" class="text-decoration-none">Hüküm ve Koşulları</a> okudum ve kabul ediyorum
                            </label>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex flex-column flex-lg-row gap-3 mt-5">
                            <a href="@Url.Action("Cart", "Home")" class="btn btn-back">
                                <i class="bi bi-arrow-left me-2"></i>Sepete Dön
                            </a>
                            <button type="submit" class="btn btn-payment">
                                Ödemeyi Tamamla <i class="bi bi-lock-fill ms-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="summary-card">
                    <h3 class="summary-title">Sipariş Özeti</h3>
                    
                    <div class="summary-items">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Ara Toplam</span>
                            <span class="fw-semibold">₺1,299.00</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Kargo</span>
                            <span class="text-success">Ücretsiz</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fs-5">
                            <span class="fw-bold">Toplam</span>
                            <span class="fw-bold">₺1,299.00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="spacer-120"></div>
</main>

    <style>
        /* Custom Variables */
        :root {
            --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
            --primary-color: #6366f1;
            --secondary-color: #a855f7;
            --soft-shadow: 0 8px 32px rgba(0,0,0,0.05);
        }

        /* Hero Section */
        .payment-hero {
            padding: 8rem 0;
            background: var(--primary-gradient);
        }

        .bg-gradient {
            background: linear-gradient(45deg, rgba(99,102,241,0.9) 0%, rgba(168,85,247,0.9) 100%);
        }

        .hero-shape-1,
        .hero-shape-2 {
            position: absolute;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
        }

        .hero-shape-1 {
            width: 400px;
            height: 400px;
            top: -150px;
            left: -100px;
        }

        .hero-shape-2 {
            width: 300px;
            height: 300px;
            bottom: -100px;
            right: -50px;
        }

        /* Payment Card */
        .payment-card {
            background: #fff;
            border-radius: 1.5rem;
            padding: 2.5rem;
            box-shadow: var(--soft-shadow);
            border: 1px solid rgba(0,0,0,0.05);
            margin-bottom: 1.5rem;
        }

        .payment-card-header {
            margin-bottom: 2.5rem;
        }

        .payment-card-header h2 {
            font-weight: 700;
            color: #1e293b;
            font-size: 2rem;
        }

        /* Animated Inputs */
        .animated-input {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .animated-input label {
            display: block;
            margin-bottom: 0.5rem;
            color: #475569;
            font-weight: 500;
        }

        .input-wrapper {
            position: relative;
        }

        .animated-input i {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            z-index: 2;
        }

        .animated-input input {
            width: 100%;
            padding: 1rem 1.25rem;
            border: 2px solid #e2e8f0;
            border-radius: 0.75rem;
            transition: all 0.3s ease;
            background: #f8fafc;
        }

        .animated-input input:focus {
            background: #fff;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(99,102,241,0.15);
        }

        /* Summary Card */
        .summary-card {
            background: #fff;
            border-radius: 1.5rem;
            padding: 2rem;
            box-shadow: var(--soft-shadow);
            border: 1px solid rgba(0,0,0,0.05);
        }

        .summary-title {
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }

        /* Buttons */
        .btn-payment {
            background: var(--primary-gradient);
            color: white;
            padding: 1rem 2rem;
            border-radius: 0.75rem;
            border: none;
            font-weight: 600;
            transition: all 0.3s ease;
            flex: 1;
        }

        .btn-payment:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(99,102,241,0.3);
        }

        .btn-back {
            background: #f1f5f9;
            color: #64748b;
            padding: 1rem 2rem;
            border-radius: 0.75rem;
            font-weight: 600;
            transition: all 0.3s ease;
            flex: 1;
        }

        .btn-back:hover {
            background: #e2e8f0;
            color: #475569;
        }

        /* Terms Checkbox */
        .terms-check {
            margin-top: 2rem;
            padding: 1rem;
            background: #f8fafc;
            border-radius: 0.75rem;
        }

        .terms-check .form-check-input {
            margin-top: 0.3em;
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .payment-card, .summary-card {
                padding: 1.5rem;
            }
            
            .spacer-120 {
                height: 60px !important;
            }
        }
    </style>
