@model Kelimedya.WebApp.Models.UserProfileModel

@{
    ViewData["Title"] = "Bilgilerim";
}

<section class="td_page_heading td_center td_bg_filed td_heading_bg text-center td_hobble" data-src="~/assets/img/others/page_heading_bg.jpg">
    <div class="container">
        <div class="td_page_heading_in">
            <h1 class="td_white_color td_fs_48 td_mb_10">Bilgilerim</h1>
            <ol class="breadcrumb m-0 td_fs_20 td_opacity_8 td_semibold td_white_color">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item active">Bilgilerim</li>
            </ol>
        </div>
    </div>
    <!-- Diğer şekiller aynı kalabilir -->
</section>

<div class="td_height_120 td_height_lg_80"></div>
<div class="container">
    <h2 class="td_fs_48 td_mb_30">Kullanıcı Profili</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <form asp-action="Profile" method="post">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="td_form_field_3 td_mb_30">
                    <input asp-for="FirstName" class="td_form_control" placeholder="Adınız" required />
                    <label class="td_fs_20 td_semibold td_accent_bg td_white_color">Adınız</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="td_form_field_3 td_mb_30">
                    <input asp-for="LastName" class="td_form_control" placeholder="Soyadınız" required />
                    <label class="td_fs_20 td_semibold td_accent_bg td_white_color">Soyadınız</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="td_form_field_3 td_mb_30">
            <input asp-for="Email" class="td_form_control" placeholder="E-posta adresiniz" required />
            <label class="td_fs_20 td_semibold td_accent_bg td_white_color">E-posta Adresiniz</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="td_form_field_3 td_mb_30">
            <input asp-for="PhoneNumber" class="td_form_control" placeholder="Telefon Numaranız" required />
            <label class="td_fs_20 td_semibold td_accent_bg td_white_color">Telefon Numaranız</label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="td_form_field_3 td_mb_30">
            <textarea asp-for="Address" class="td_form_control" placeholder="Adresiniz"></textarea>
            <label class="td_fs_20 td_semibold td_accent_bg td_white_color">Adresiniz</label>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <!-- Diğer alanlar ekleyebilirsiniz -->
        <button type="submit" class="td_btn td_style_1 td_radius_10 td_medium">
            <span class="td_btn_in td_white_color td_accent_bg">
                <span>Bilgileri Güncelle</span>
            </span>
        </button>
    </form>
</div>
<div class="td_height_120 td_height_lg_80"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
