@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Oyunlar";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@600&display=swap"/>
<style>
    body {
        background-color: #fefefe;
        font-family: 'Josefin Sans', sans-serif;
        color: #333;
    }
    .games-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        position: relative;
    }
    .games-hero {
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    .games-sub {
        font-size: 1.1rem;
        color: #777;
        margin-bottom: 2rem;
    }
    .circle-decor {
        position: absolute;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: #ffded2;
        z-index: -1;
        opacity: 0.4;
    }
    .circle-decor:nth-child(1) {
        top: -40px;
        right: 10%;
    }
    .circle-decor:nth-child(2) {
        bottom: -40px;
        left: 5%;
        background: #ffc2c2;
    }
    .simple-btn {
        display: inline-block;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        background-color: #f05232;
        color: #fff;
        text-decoration: none;
        font-weight: 600;
        transition: background 0.3s ease;
    }
    .simple-btn:hover {
        background-color: #d74322;
    }
    .games-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px,1fr));
        gap: 1.5rem;
    }
    .game-block {
        background: linear-gradient(130deg, #ffe5e0 0%, #ffd9bf 100%);
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        padding: 1.5rem;
    }
    .game-block h3 {
        margin: 0 0 0.5rem;
        font-size: 1.4rem;
        color: #c94a2c;
    }
    .game-block p {
        color: #555;
        font-size: 0.95rem;
        margin-bottom: 1rem;
    }
</style>

<div class="games-container">
    <div class="circle-decor"></div>
    <div class="circle-decor"></div>

    <div class="games-hero">Oyunlar</div>
    <div class="games-sub">Kelime oyunları ile pratik yapabilirsiniz.</div>

    <!-- Örnek Filtre / Arama -->
    <div style="margin-bottom: 2rem; display: flex; flex-wrap: wrap; gap:1rem;">
        <div style="flex:1;">
            <form>
                <input type="text" class="form-control" placeholder="Oyun adı ara…" style="max-width:300px;" />
            </form>
        </div>
        <div>
            <button class="simple-btn" style="margin-right:0.5rem;">Filtre</button>
            <button class="simple-btn">Sırala</button>
        </div>
    </div>

    <!-- Oyun Ekle butonu -->
    <div style="margin-bottom:1.5rem;">
        <a href="#" class="simple-btn">Yeni Oyun Ekle</a>
    </div>

    <!-- Oyun Kartları -->
    <div class="games-grid">
        <!-- Oyun 1: Adam Asmaca -->
        <div class="game-block">
            <h3>Adam Asmaca</h3>
            <p>Verilen kelimeyi harf tahmini yaparak bulmaya çalışın.</p>
            <a asp-area="Student"
               asp-controller="Games"
               asp-action="AdamAsmaca"
               class="simple-btn">
               Oyuna Başla
            </a>
        </div>
        <!-- Oyun 2: Kelime Bulmaca -->
        <div class="game-block">
            <h3>Kelime Bulmaca</h3>
            <p>Çoktan seçmeli veya yazılı kelime tahmin oyunu.</p>
            <a asp-area="Student"
               asp-controller="Games"
               asp-action="KelimeBulmaca"
               class="simple-btn">
               Oyuna Başla
            </a>
        </div>
    </div>
</div>
