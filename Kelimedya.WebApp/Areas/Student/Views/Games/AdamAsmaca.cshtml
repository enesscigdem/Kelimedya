@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Adam Asmaca - Fullscreen";
}

<link href="~/css/AdamAsmaca.css" rel="stylesheet"/>

<div class="container-xl" style="margin-top:1rem;">
    <div class="fullscreen-container">
        <div class="asmaca-header">
            Adam Asmaca Oyunu
        </div>
        <div class="game-area">
            
            <div class="hangman-canvas" id="hangmanCanvas">
                
            </div>
            <div>
                <div class="letters">
                    
                    @foreach (var c in "ABCÇDEFGĞHIİJKLMNOÖPRSŞTUÜVYZ".ToCharArray())
                    {
                        <button class="letter-btn">@c</button>
                    }
                </div>
                <div style="margin-top:1rem;">
                    <button class="simple-btn" onclick="EndGame()">Oyunu Sonlandır</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function EndGame() {
            // Örnek: Yönlendirme ya da popup
            window.location = '@Url.Action("Index","Games", new {area="Student"})';
        }

        // Burada AdamAsmaca oyununun JS logic'i, canvas çizimi vb. devreye girebilir
        document.addEventListener("DOMContentLoaded", function(){
            // init game...
        });
    </script>
}
