@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Oyunlar";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@600&display=swap"/>
<link href="~/css/myGames.css" rel="stylesheet"/>


<div class="games-container">
    <div class="circle-decor"></div>
    <div class="circle-decor"></div>

    <div class="games-hero">Oyunlar</div>
    <div class="games-sub">Kelime oyunları ile pratik yapabilirsiniz.</div>


    <div style="margin-bottom: 2rem; display: flex; flex-wrap: wrap; gap:1rem;">
        <div style="flex:1;">
            <form>
                <input type="text" class="form-control" placeholder="Oyun adı ara…" style="max-width:300px;"/>
            </form>
        </div>
        <div>
            <button class="simple-btn" style="margin-right:0.5rem;">Filtre</button>
            <button class="simple-btn">Sırala</button>
        </div>
    </div>


    <div style="margin-bottom:1.5rem;">
        <a href="#" class="simple-btn">Yeni Oyun Ekle</a>
    </div>


    @{ bool disabled = !(ViewBag.HasCourses as bool? ?? false); }
    @if (disabled)
    {
        <p class="text-muted">Oyunlara erişmek için önce bir eğitime kaydolmalısınız.</p>
    }

    <div class="games-grid">

        <div class="game-block">
            <h3>Adam Asmaca</h3>
            <p>Verilen kelimeyi harf tahmini yaparak bulmaya çalışın.</p>
            <a asp-area="Student"
               asp-controller="Games"
               asp-action="AdamAsmaca"
               class="simple-btn @(disabled ? "disabled" : "")"
               style="@(disabled ? "pointer-events:none;opacity:0.6;" : null)"
               tabindex="@(disabled ? -1 : 0)">
                Oyuna Başla
            </a>
        </div>

        <div class="game-block">
            <h3>Kelime Bulmaca</h3>
            <p>Çoktan seçmeli veya yazılı kelime tahmin oyunu.</p>
            <a asp-area="Student"
               asp-controller="Games"
               asp-action="KelimeBulmaca"
               class="simple-btn @(disabled ? "disabled" : "")"
               style="@(disabled ? "pointer-events:none;opacity:0.6;" : null)"
               tabindex="@(disabled ? -1 : 0)">
                Oyuna Başla
            </a>
        </div>
        <div class="game-block">
            <h3>Görselden Soru</h3>
            <p>Görsel size hangi kelimeyi çağrıştırıyor?</p>
            <a asp-area="Student" asp-controller="Games" asp-action="VisualPrompt"
               class="simple-btn @(disabled ? "disabled" : "")"
               style="@(disabled ? "pointer-events:none;opacity:0.6;" : null)"
               tabindex="@(disabled ? -1 : 0)">Oyuna Başla</a>
        </div>
        <div class="game-block">
            <h3>Kabarcık Harfler</h3>
            <p>Doğru kelimeyi oluşturmak için baloncuklara tıklayın.</p>
            <a asp-area="Student" asp-controller="Games" asp-action="BubbleLetters"
               class="simple-btn @(disabled ? "disabled" : "")"
               style="@(disabled ? "pointer-events:none;opacity:0.6;" : null)"
               tabindex="@(disabled ? -1 : 0)">
                Oyuna Başla
            </a>
        </div>
        <div class="game-block">
            <h3>Çengel Bulmaca</h3>
            <p>Yatay ve dikey kelimeleri doldurarak bulmacayı tamamlayın.</p> <a asp-area="Student" asp-controller="Games" asp-action="CrossPuzzle" class="simple-btn @(disabled ? "disabled" : "")" style="@(disabled ? "pointer-events:none;opacity:0.6;" : null)" tabindex="@(disabled ? -1 : 0)"> Oyuna Başla </a>
        </div>
        <div class="game-block">
            <h3>Boşluk Doldurma</h3>
            <p>Cümledeki eksik kelimeleri tamamlayın.</p>
            <a asp-area="Student"
               asp-controller="Games"
               asp-action="FillBlanks"
               class="simple-btn @(disabled ? "disabled" : "")"
               style="@(disabled ? "pointer-events:none;opacity:0.6;" : null)"
               tabindex="@(disabled ? -1 : 0)">
                Oyuna Başla
            </a>
        </div>
    </div>
</div>