@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <h2 class="page-title">Kategori Düzenle</h2>
        <div class="text-muted mt-1">
            Kategori bilgilerini güncelleyin.
        </div>
    </div>
</div>

<!-- Kartlarla mini istatistik (opsiyonel) -->
<div class="page-body pt-1">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-sm-6 col-lg-3">
                <div class="card card-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="subheader">Toplam Kategori</div>
                        <div class="ms-auto lh-1">
                            <span class="h2 mb-0 text-blue">10</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Diğer kartlar -->
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <form method="post" asp-action="Edit">
                    <input type="hidden" name="Id" value="1" /> <!-- Dummy -->

                    <!-- Kategori Adı -->
                    <div class="mb-3">
                        <label class="form-label">Kategori Adı</label>
                        <input type="text" class="form-control" name="Name" value="Yazılım" />
                    </div>
                    <!-- Kategori Açıklaması -->
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea class="form-control" rows="3" name="Description">Yazılımla ilgili ürünler ve hizmetler</textarea>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a asp-action="Index" class="btn btn-link link-secondary">Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
