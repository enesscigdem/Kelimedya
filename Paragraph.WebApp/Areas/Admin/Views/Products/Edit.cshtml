@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Ürün Düzenle
                </h2>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl">
        <div class="card">
            <div class="card-body">
                <form asp-area="Admin" asp-controller="Products" asp-action="Edit" method="post">
                    <input type="hidden" name="Id" value="@ViewBag.Id" />

                    <div class="mb-3">
                        <label class="form-label">Ürün Adı</label>
                        <input type="text" name="ProductName" value="@ViewBag.ProductName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fiyat</label>
                        <input type="number" step="0.01" name="Price" value="@ViewBag.Price" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Stok</label>
                        <input type="number" name="Stock" value="@ViewBag.Stock" class="form-control" />
                    </div>
                    <div class="card-footer text-end">
                        <button class="btn btn-primary" type="submit">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>