@model IEnumerable<Kelimedya.WebApp.Areas.Admin.Models.ProductViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Ürün Listesi";
}

<!-- Sayfa Başlığı -->
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    <!-- Products Icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-package me-1" width="28"
                        height="28" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path d="M0 0h24v24H0z" fill="none" stroke="none" />
                        <path d="M12 3l8 4.5v9l-8 4.5l-8 -4.5v-9z" />
                        <path d="M12 12l8 -4.5" />
                        <path d="M12 12l0 9" />
                        <path d="M12 12l-8 -4.5" />
                        <path d="M16 5.25l-8 4.5" />
                    </svg>
                    Ürün Listesi
                </h2>
                <div class="text-muted mt-1">
                    Sistemde kayıtlı tüm ürünleri buradan yönetebilirsiniz.
                </div>
            </div>
            <div class="col-auto ms-auto d-print-none">
                <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-plus me-1"
                        width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                        stroke-linecap="round" stroke-linejoin="round">
                        <path d="M0 0h24v24H0z" fill="none" stroke="none" />
                        <circle cx="12" cy="12" r="9" />
                        <line x1="9" y1="12" x2="15" y2="12" />
                        <line x1="12" y1="9" x2="12" y2="15" />
                    </svg>
                    Yeni Ürün
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Hızlı İstatistik Kartları -->
<div class="page-body pt-1">
    <div class="container-xl">
        <div class="row row-cards">
            <!-- Toplam Ürün Kartı -->
            <div class="col-sm-6 col-lg-3">
                <div class="card card-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="subheader">Toplam Ürün</div>
                        <div class="ms-auto lh-1">
                            <span class="h2 mb-0 text-orange">@Model.Count()</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- İçerik Alanı -->
<div class="page-body pt-2">
    <div class="container-xl">
        <!-- Arama Alanı -->
        <div class="row mb-3">
            <div class="col-12 col-lg-4">
                <div class="input-icon">
                    <span class="input-icon-addon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-search" width="24"
                            height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                            stroke-linecap="round" stroke-linejoin="round">
                            <path d="M0 0h24v24H0z" fill="none" stroke="none" />
                            <path d="M10 10a7 7 0 1 0 7 7" />
                            <path d="M21 21l-6 -6" />
                        </svg>
                    </span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Ürün ara..." />
                </div>
            </div>
            <!-- Ek Filtre / Sıralama Alanı -->
            <div class="col-12 col-lg-8 text-end">
                <select id="sortSelect" class="form-select d-inline-block w-auto me-2">
                    <option value="">-- Sıralama Seçeneği --</option>
                    <option value="nameAsc">Ürün Adı (A - Z)</option>
                    <option value="nameDesc">Ürün Adı (Z - A)</option>
                    <option value="priceAsc">Fiyat (Düşükten Yükseğe)</option>
                    <option value="priceDesc">Fiyat (Yüksekten Düşüğe)</option>
                </select>
            </div>
        </div>

        <!-- Ürünler Tablosu -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kayıtlı Ürünler</h3>
            </div>
            <div class="table-responsive">
                <table class="table card-table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Fotoğraf</th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>Eğitimler</th>
                            <th class="w-1 text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="@product.Name" style="max-width:80px; max-height:80px;" />
                                    }
                                    else { <span>Fotoğraf Yok</span> }
                                </td>
                                <td>@product.Name</td>
                                <td>@($"{product.Price} TL")</td>
                                <td>
                                    @if(product.ProductCourses != null && product.ProductCourses.Any())
                                    {
                                        @string.Join(", ", product.ProductCourses.Select(c => c.Course.Title))
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-area="Admin" asp-controller="Products" asp-action="Edit"
                                            asp-route-id="@product.Id"
                                            class="btn btn-success me-1 d-flex align-items-center" title="Düzenle">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="20" height="20"
                                                viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                                stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                <path d="M8 18h4" />
                                                <path d="M4 14v4h4l10 -10a2 2 0 1 0 -4 -4z" />
                                            </svg>
                                            Düzenle
                                        </a>
                                        <a asp-area="Admin" asp-controller="Products" asp-action="Delete"
                                            asp-route-id="@product.Id"
                                            class="btn btn-danger d-flex align-items-center delete-btn" title="Sil">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="20" height="20"
                                                viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                                stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                <path d="M4 7h16" />
                                                <path d="M10 11v6" />
                                                <path d="M14 11v6" />
                                                <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                                <path d="M9 7v-2a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v2" />
                                            </svg>
                                            Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Arama işlevi
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function () {
                    var nameText = $(this).find("td:eq(1)").text().toLowerCase();
                    var priceText = $(this).find("td:eq(2)").text().toLowerCase();
                    $(this).toggle(nameText.indexOf(value) > -1 || priceText.indexOf(value) > -1);
                });
            });

            // Sıralama işlevi
            $("#sortSelect").on("change", function () {
                var option = $(this).val();
                var rows = $("table tbody tr").get();

                rows.sort(function (a, b) {
                    var nameA = $(a).find("td:eq(1)").text().toUpperCase();
                    var nameB = $(b).find("td:eq(1)").text().toUpperCase();
                    var priceA = parseFloat($(a).find("td:eq(2)").text().replace(" TL", ""));
                    var priceB = parseFloat($(b).find("td:eq(2)").text().replace(" TL", ""));
                    
                    switch (option) {
                        case "nameAsc":
                            return (nameA < nameB) ? -1 : (nameA > nameB) ? 1 : 0;
                        case "nameDesc":
                            return (nameA > nameB) ? -1 : (nameA < nameB) ? 1 : 0;
                        case "priceAsc":
                            return priceA - priceB;
                        case "priceDesc":
                            return priceB - priceA;
                        default:
                            return 0;
                    }
                });

                $.each(rows, function (index, row) {
                    $("table tbody").append(row);
                });
            });
        });
    </script>
}
