@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kategoriler";
}

<!-- Sayfa Başlığı -->
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Kategori Listesi
                </h2>
                <div class="text-muted mt-1">
                    Sistemdeki tüm kategorileri görüntüleyip yönetebilirsiniz.
                </div>
            </div>
            <div class="col-auto ms-auto d-print-none">
                <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class="btn btn-primary">
                    <!-- Yeni Kategori Ekle Icon (opsiyonel) -->
                    <svg xmlns="http://www.w3.org/2000/svg"
                         class="icon icon-tabler icon-tabler-circle-plus me-1"
                         width="24" height="24" viewBox="0 0 24 24"
                         stroke-width="2" stroke="currentColor" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                        <circle cx="12" cy="12" r="9"/>
                        <line x1="9" y1="12" x2="15" y2="12"/>
                        <line x1="12" y1="9" x2="12" y2="15"/>
                    </svg>
                    Yeni Kategori Ekle
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Hızlı İstatistik Kartları (Opsiyonel – gerek duyarsanız ekleyin) -->
<div class="page-body pt-1">
    <div class="container-xl">
        <div class="row row-cards">
            <!-- Toplam Kategori Kartı -->
            <div class="col-sm-6 col-lg-3">
                <div class="card card-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="subheader">Toplam Kategori</div>
                        <div class="ms-auto lh-1">
                            <span class="h2 mb-0 text-blue">10</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Ek kartlar eklenebilir -->
            <!-- Örneğin, aktif kategori veya pasif kategori sayısı gibi -->
            <div class="col-sm-6 col-lg-3">
                <div class="card card-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="subheader">Aktif Kategori</div>
                        <div class="ms-auto lh-1">
                            <span class="h2 mb-0 text-green">8</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card card-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="subheader">Pasif Kategori</div>
                        <div class="ms-auto lh-1">
                            <span class="h2 mb-0 text-red">2</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Boş kart ya da farklı bir istatistik için -->
            <div class="col-sm-6 col-lg-3">
                <div class="card card-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="subheader">Yeni Eklenen</div>
                        <div class="ms-auto lh-1">
                            <span class="h2 mb-0 text-orange">1</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- İçerik Alanı -->
<div class="page-body pt-2">
    <div class="container-xl">
        <!-- Arama Alanı -->
        <div class="row mb-3">
            <div class="col-12 col-lg-4">
                <form method="get" class="mb-2">
                    <div class="input-icon">
                        <span class="input-icon-addon">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="icon icon-tabler icon-tabler-search"
                                 width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
                                 stroke="currentColor" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                                <path d="M10 10a7 7 0 1 0 7 7"/>
                                <path d="M21 21l-6 -6"/>
                            </svg>
                        </span>
                        <input type="text" name="search" class="form-control" placeholder="Kategori ara…"/>
                    </div>
                </form>
            </div>
            <!-- Ek Filtre / Sıralama -->
            <div class="col-12 col-lg-8 text-end">
                <div class="btn-group">
                    <button class="btn btn-white">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="icon icon-tabler icon-tabler-filter me-1"
                             width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
                             stroke="currentColor" fill="none"
                             stroke-linecap="round" stroke-linejoin="round">
                            <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                            <path d="M5.5 5h13"/>
                            <path d="M7 10h9"/>
                            <path d="M8.5 15h5"/>
                        </svg>
                        Filtre
                    </button>
                    <button class="btn btn-white">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="icon icon-tabler icon-tabler-arrows-sort me-1"
                             width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
                             stroke="currentColor" fill="none"
                             stroke-linecap="round" stroke-linejoin="round">
                            <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                            <path d="M3 9l4 -4l4 4m-4 -4v14"/>
                            <path d="M21 15l-4 4l-4 -4m4 4v-14"/>
                        </svg>
                        Sırala
                    </button>
                </div>
            </div>
        </div>

        <!-- Kategori Tablosu -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategoriler</h3>
            </div>
            <div class="table-responsive">
                <table class="table card-table table-vcenter">
                    <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th class="w-1 text-end">İşlemler</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- Örnek Satır -->
                    <tr>
                        <td>1</td>
                        <td>Yazılım</td>
                        <td>Yazılımla ilgili ürünler ve hizmetler</td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Categories" asp-action="Edit"
                                   asp-route-id="1" class="btn btn-success me-1 d-flex align-items-center" title="Düzenle">
                                    <!-- Düzenle Icon -->
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="icon me-1" width="20" height="20"
                                         viewBox="0 0 24 24" stroke-width="2"
                                         stroke="currentColor" fill="none" stroke-linecap="round"
                                         stroke-linejoin="round">
                                        <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                                        <path d="M8 18h4"/>
                                        <path d="M4 14v4h4l10 -10a2 2 0 1 0 -4 -4z"/>
                                    </svg>
                                    Düzenle
                                </a>
                                <a asp-area="Admin" asp-controller="Categories" asp-action="Delete"
                                   asp-route-id="1" class="btn btn-danger d-flex align-items-center" title="Sil">
                                    <!-- Sil Icon -->
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="icon me-1" width="20" height="20"
                                         viewBox="0 0 24 24" stroke-width="2"
                                         stroke="currentColor" fill="none" stroke-linecap="round"
                                         stroke-linejoin="round">
                                        <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                                        <path d="M4 7h16"/>
                                        <path d="M10 11v6"/>
                                        <path d="M14 11v6"/>
                                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"/>
                                        <path d="M9 7v-2a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v2"/>
                                    </svg>
                                    Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                    <!-- Diğer satırlar dinamik olarak eklenebilir -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>