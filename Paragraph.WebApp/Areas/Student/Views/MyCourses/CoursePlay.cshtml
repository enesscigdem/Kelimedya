@section Scripts {
<script>
let mevcutIndex = 0;
let toplamKart = 10;
let kartlar = [];

function kartlariHazirla() {
    for(let i = 0; i < toplamKart; i++){
        let el = document.getElementById("kart"+i);
        if(el) kartlar.push(el);
    }
    if(kartlar[0]) {
        kartlar[0].classList.add("aktif");
        ilerlemeyiGuncelle(0);
    }
}

/* Kartı göster */
function kartiGoster(yeniIndex, direction="left") {
    // Mevcut kartı kapat
    if(kartlar[mevcutIndex]) {
        kartlar[mevcutIndex].classList.remove("aktif");
        kartlar[mevcutIndex].classList.add("cikis-sola");
        setTimeout(()=>{
            kartlar[mevcutIndex].classList.remove("cikis-sola");
        },700);
    }
    // Yeni kart
    kartlar[yeniIndex].classList.add("aktif");
    ilerlemeyiGuncelle(yeniIndex);
}

function ilerlemeyiGuncelle(idx) {
    let yuzde = ((idx+1) / toplamKart) * 100;
    document.getElementById("ilerlemeDolgu").style.width = yuzde + "%";
}

/* Sonraki */
function sonrakiKelime() {
    // 5. kart => rastgele oyun
    if(mevcutIndex === 4) {
        rastgeleOyunAc();
        return;
    }
    if(mevcutIndex < toplamKart - 1) {
        mevcutIndex++;
        kartiGoster(mevcutIndex);
    }
}

/* Önceki */
function oncekiKelime() {
    if(mevcutIndex > 0) {
        mevcutIndex--;
        kartiGoster(mevcutIndex);
    }
}

/* Rastgele Oyun (AdamAsmaca %50, KelimeBulmaca %50) */
function rastgeleOyunAc(){
    let rasgele = Math.random();
    if(rasgele < 0.5) {
        // Adam asmaca
        window.location = '@Url.Action("AdamAsmaca","Games", new { area="Student", ReturnToCourse=true })';
    } else {
        // Kelime bulmaca
        window.location = '@Url.Action("KelimeBulmaca","Games", new { area="Student", ReturnToCourse=true })';
    }
}

/* Dersi Bitir */
function dersiBitir() {
    alert("Tebrikler, ders bitti!");
    window.location = '@Url.Action("Index","MyCourses", new { area="Student" })';
}

/* Sayfa yüklenince */
document.addEventListener("DOMContentLoaded", function(){
    kartlariHazirla();
});
</script>
