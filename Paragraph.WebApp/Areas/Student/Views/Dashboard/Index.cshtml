@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Öğrenci Paneli - Farklı Dashboard";
}

<!-- Google Fonts veya özel font -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@600&display=swap" />

<style>
    body {
        background-color: #fefefe;
        font-family: 'Josefin Sans', sans-serif;
        color: #333;
    }

    .student-dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        position: relative;
    }

    /* Büyük Karşılama Başlığı */
    .hero-welcome {
        font-size: 3rem;
        font-weight: 600;
        margin-bottom: 1rem;
        line-height: 1.2;
        position: relative;
    }

    /* Pastel daireler: asimetrik dekor */
    .circle-decor {
        position: absolute;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background: #ffc2c2; /* pastel pembe/turuncu */
        z-index: -1;
        opacity: 0.4;
    }
    .circle-decor:nth-child(1) {
        top: -50px;
        left: 70%;
    }
    .circle-decor:nth-child(2) {
        bottom: 50px;
        left: 10%;
        background: #ffded2;
    }

    .sub-text {
        font-size: 1.2rem;
        color: #777;
        margin-bottom: 2rem;
    }

    /* Örnek: Degrade blok */
    .block-highlight {
        background: linear-gradient(130deg, #ffe5e0 0%, #ffd9bf 100%);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    }

    .block-highlight h2 {
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
        color: #c94a2c;
    }
    .block-highlight .numbers {
        font-size: 2.2rem;
        color: #f05232;
        margin-bottom: 1rem;
    }
    .block-highlight .desc {
        font-size: 1rem;
        color: #555;
    }

    /* Ist. kutuları için 2 sütun asimetrik yerleşim */
    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 3rem;
    }

    /* Asimetrik tablo kutusu */
    .progress-box {
        border-left: 8px solid #fcbfa1;
        background-color: #fff;
        border-radius: 0 20px 20px 0;
        padding: 2rem 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.03);
    }

    .progress-box h3 {
        margin: 0 0 1rem;
        font-size: 1.5rem;
        color: #f05232;
    }
    .progress-box table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }
    .progress-box th, .progress-box td {
        padding: 0.75rem 0.5rem;
        text-align: left;
        border-bottom: 1px solid #eee;
        font-size: 0.95rem;
    }
    .progress-box th {
        color: #aaa;
        text-transform: uppercase;
        font-size: 0.75rem;
    }
    .progress-box tr:last-child td {
        border-bottom: none;
    }

    /* Basit buton */
    .simple-btn {
        display: inline-block;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        background-color: #f05232;
        color: #fff;
        text-decoration: none;
        font-weight: 600;
        transition: background 0.3s ease;
    }
    .simple-btn:hover {
        background-color: #d74322;
    }

    /* Responsiveness */
    @@media(max-width: 768px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
        .hero-welcome {
            font-size: 2rem;
        }
    }
</style>

<div class="student-dashboard-container">
    <!-- Dekoratif daireler -->
    <div class="circle-decor"></div>
    <div class="circle-decor"></div>

    <!-- Hero Başlık -->
    <div class="hero-welcome">
        Merhaba, Ali!
    </div>
    <div class="sub-text">Güne başlamak için harika bir zaman. Kelime dağarcığını genişletmeye hazır mısın?</div>

    <!-- 2 sütun asimetrik bilgilendirme blokları -->
    <div class="stats-grid">
        <!-- Blok 1 -->
        <div class="block-highlight">
            <h2>Tamamlanan Kurs</h2>
            <div class="numbers">2</div>
            <div class="desc">
                Başarıyla bitirdiğin kurs sayısı. Yeni bir seviye denemeye hazır!
            </div>
        </div>
        <!-- Blok 2 -->
        <div class="block-highlight">
            <h2>Kelime Kartların</h2>
            <div class="numbers">128</div>
            <div class="desc">
                Her gün 5 yeni kelimeyle pratik yapmaya ne dersin?
            </div>
        </div>
    </div>

    <!-- Kurs İlerleme Tablosu -->
    <div class="progress-box">
        <h3>Kurs İlerlemem</h3>
        <table>
            <thead>
                <tr>
                    <th>Kurs</th>
                    <th>Durum</th>
                    <th>İlerleme</th>
                    <th>Son Aktivite</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>A1 (Başlangıç)</td>
                    <td>Devam</td>
                    <td>%40</td>
                    <td>2025-01-20</td>
                </tr>
                <tr>
                    <td>A2 (Temel)</td>
                    <td>Tamam</td>
                    <td>%100</td>
                    <td>2024-12-12</td>
                </tr>
                <tr>
                    <td>B1 (Orta)</td>
                    <td>Devam</td>
                    <td>%10</td>
                    <td>2025-01-18</td>
                </tr>
            </tbody>
        </table>
        <div style="margin-top: 1rem;">
            <a href="#" class="simple-btn">Kurs Detayları</a>
        </div>
    </div>
</div>
