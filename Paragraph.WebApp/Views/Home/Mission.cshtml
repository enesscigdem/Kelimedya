@{
    ViewData["Title"] = "Misyonumuz";
}

<main>
    <section class="td_page_heading td_center td_bg_filed td_heading_bg text-center td_hobble" data-src="/theme/web_UI/assets/img/home_5/page_heading_bg.jpg">
        <div class="container">
            <div class="td_page_heading_in">
                <h1 class="td_white_color td_fs_48 td_mb_10">Misyonumuz</h1>
                <ol class="breadcrumb m-0 td_fs_20 td_opacity_8 td_semibold td_white_color">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Anasayfa</a>
                    </li>
                    <li class="breadcrumb-item active">Misyonumuz</li>
                </ol>
            </div>
        </div>
        <!-- Dekoratif Şekiller -->
        <div class="td_page_heading_shape_1 position-absolute td_hover_layer_3"></div>
        <div class="td_page_heading_shape_2 position-absolute td_hover_layer_5"></div>
        <div class="td_page_heading_shape_3 position-absolute">
            <img src="~/theme/web_UI/assets/img/home_5/page_heading_shape_3.svg" alt="Vizyon Şekli">
        </div>
        <div class="td_page_heading_shape_4 position-absolute">
            <img src="~/theme/web_UI/assets/img/home_5/page_heading_shape_4.svg" alt="Vizyon Şekli">
        </div>
        <div class="td_page_heading_shape_5 position-absolute">
            <img src="~/theme/web_UI/assets/img/home_5/page_heading_shape_5.svg" alt="Vizyon Şekli">
        </div>
        <div class="td_page_heading_shape_6 position-absolute td_hover_layer_3"></div>
    </section>

    <!-- Misyon İçeriği -->
    <section class="mission-section">
        <div class="container">
            <div class="mission-content">
                <div class="mission-text">
                    <h2>Misyonumuz</h2>
                    <p>
                        Misyonumuz, müşterilerimize en yüksek kalitede ürün ve hizmet sunarak onların beklentilerini aşmaktır. Yenilikçi çözümler geliştirerek, sektörümüzde sürdürülebilir büyümeyi hedeflemekteyiz.
                    </p>
                    <p>
                        Eğitim teknolojilerinde öncü olmak, kullanıcı dostu çözümler sunmak ve müşteri memnuniyetini her zaman en üst seviyede tutmak misyonumuzun temel taşlarını oluşturur.
                    </p>
                    <!-- Misyon Maddeleri -->
                    <ul class="mission-list">
                        <li>Yüksek Kaliteli Ürün ve Hizmetler Sunmak</li>
                        <li>Müşteri Memnuniyetini Ön Planda Tutmak</li>
                        <li>Sürdürülebilir Büyümeyi Sağlamak</li>
                        <li>Teknolojik Yenilikleri Takip Etmek</li>
                    </ul>
                </div>
                <div class="mission-graphics">
                    <!-- CSS ile oluşturulan grafikler -->
                    <div class="skill-bars">
                        <div class="skill-bar-container">
                            <span>Topluluk Oluşturma</span>
                            <div class="skill-bar" data-skill="90%"></div>
                        </div>
                        <div class="skill-bar-container">
                            <span>Yenilikçilik</span>
                            <div class="skill-bar" data-skill="85%"></div>
                        </div>
                        <div class="skill-bar-container">
                            <span>Büyüme ve Genişleme</span>
                            <div class="skill-bar" data-skill="80%"></div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Ana Hedefler -->
            <div class="future-goals">
                <h3>Ana Hedeflerimiz</h3>
                <div class="goals-cards">
                    <div class="goal-card">
                        <div class="icon">👥</div>
                        <h4>Topluluk Oluşturma</h4>
                        <p>Eğitimde toplulukları güçlendirerek, bilgi paylaşımını teşvik etmek.</p>
                    </div>
                    <div class="goal-card">
                        <div class="icon">💡</div>
                        <h4>Yenilikçilik</h4>
                        <p>Sürekli yeniliklerle eğitim teknolojilerinde liderlik yapmak.</p>
                    </div>
                    <div class="goal-card">
                        <div class="icon">📈</div>
                        <h4>Büyüme ve Genişleme</h4>
                        <p>Uluslararası pazarlarda etkin varlık göstererek büyümeyi sürdürmek.</p>
                    </div>
                </div>
            </div>

            <!-- İstatistikler -->
            <div class="statistics">
                <h3>Başarılarımız</h3>
                <div class="stats-cards">
                    <div class="stat-card">
                        <div class="stat-icon">👥</div>
                        <h4 class="stat-number" data-target="10000">0</h4>
                        <p>Kullanıcı</p>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">🏆</div>
                        <h4 class="stat-number" data-target="50">0</h4>
                        <p>Ödül</p>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">🌐</div>
                        <h4 class="stat-number" data-target="100">0</h4>
                        <p>Ülke</p>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">🤝</div>
                        <h4 class="stat-number" data-target="500">0</h4>
                        <p>İş Ortaklığı</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

    <style>
        /* Misyon Bölümü */
        .mission-section {
            padding: 80px 0;
            background-color: #fff;
        }

        .mission-content {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 50px;
        }

        .mission-text {
            flex: 1;
            min-width: 300px;
        }

        .mission-text h2 {
            font-size: 36px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .mission-list {
            list-style: none;
            padding: 0;
            margin-top: 20px;
        }

        .mission-list li {
            position: relative;
            padding-left: 30px;
            margin-bottom: 15px;
            font-size: 18px;
        }

        .mission-list li::before {
            content: '✔️';
            position: absolute;
            left: 0;
            top: 0;
            color: #e67e22;
        }

        .mission-graphics {
            flex: 1;
            min-width: 300px;
        }

        /* Geleceğe Yönelik Hedefler */
        .future-goals {
            margin-top: 60px;
            text-align: center;
        }

        .future-goals h3 {
            font-size: 32px;
            margin-bottom: 30px;
            font-weight: 600;
            color: #2c3e50;
        }

        .goals-cards {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
        }

        .goal-card {
            background-color: #fff;
            border: 2px solid #eaeaea;
            border-radius: 15px;
            padding: 30px 20px;
            width: 280px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .goal-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .goal-card .icon {
            font-size: 40px;
            margin-bottom: 20px;
            color: #e67e22;
        }

        .goal-card h4 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .goal-card p {
            font-size: 16px;
            color: #7f8c8d;
        }

        /* İstatistikler */
        .statistics {
            margin-top: 60px;
            text-align: center;
        }

        .statistics h3 {
            font-size: 32px;
            margin-bottom: 30px;
            font-weight: 600;
            color: #2c3e50;
        }

        .stats-cards {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
        }

        .stat-card {
            background-color: #fff;
            border: 2px solid #eaeaea;
            border-radius: 15px;
            padding: 30px 20px;
            width: 220px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .stat-icon {
            font-size: 40px;
            margin-bottom: 20px;
            color: #e67e22;
        }

        .stat-number {
            font-size: 36px;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .stat-text {
            font-size: 16px;
            color: #7f8c8d;
        }

        /* Responsive Ayarlar */
        @@media (max-width: 768px) {
            .mission-content {
                flex-direction: column;
                text-align: center;
            }

            .mission-graphics {
                margin-top: 30px;
            }

            .goals-cards, .stats-cards {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const counters = document.querySelectorAll('.stat-number');

            counters.forEach(counter => {
                const updateCount = () => {
                    const target = +counter.getAttribute('data-target');
                    const count = +counter.innerText;
                    const increment = target / 200; // Hız ayarı

                    if (count < target) {
                        counter.innerText = Math.ceil(count + increment);
                        setTimeout(updateCount, 1);
                    } else {
                        counter.innerText = target;
                    }
                };

                counter.innerText = '0';
                updateCount();
            });
        });
    </script>
}
