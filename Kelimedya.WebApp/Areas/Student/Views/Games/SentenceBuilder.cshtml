@using System.Security.Claims
@{
    bool embed = Context.Request.Query.ContainsKey("embed");
    string singleWord = Context.Request.Query["word"];
    string wordId = Context.Request.Query["id"];
    Layout = embed ? "~/Areas/Student/Views/Shared/_GameLayout.cshtml" : "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cümle Kurma";
    var studentId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<link href="~/css/SentenceBuilder.css" rel="stylesheet" />

<div id="gameRoot" class="container-xl" data-student-id="@studentId" data-game-id="@ViewData["GameId"]" data-word="@singleWord" data-word-id="@wordId" data-embed="@embed.ToString().ToLower()" style="margin-top:1rem;">
  <div class="fullscreen-container">
    <div class="asmaca-header">Cümle Kurma Oyunu</div>
    <div class="fb-gamecard">
      <div class="fb-sentence" id="sbSentence"></div>
      <div id="sbOptions" class="fb-sentence" style="margin-top:1rem;"></div>
      <div class="fb-controls">
        <button id="sbCheck" class="simple-btn">Kontrol Et</button>
        <button id="sbReveal" class="simple-btn">Cevabı Göster</button>
        @if(!embed)
        {
            <button id="sbNext" class="simple-btn">Sonraki</button>
        }
      </div>
      <div class="fb-feedback" id="sbFeedback"></div>
    </div>
  </div>
</div>

@section Scripts {
<script type="module">
import {initSentenceBuilder} from '@Url.Content("~/js/games/SentenceBuilder.js")';
const root=document.getElementById('gameRoot');
initSentenceBuilder(root.dataset.studentId, root.dataset.gameId, root.dataset.word, root.dataset.wordId);
</script>
}
