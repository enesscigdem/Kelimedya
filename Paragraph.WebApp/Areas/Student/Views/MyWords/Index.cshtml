@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kelime Kartlarım";
}

<style>
    body {
        background-color: #fefefe;
        font-family: 'Josefin Sans', sans-serif;
        color: #333;
    }
    .words-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        position: relative;
    }
    .words-hero {
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #f05232;
    }
    .words-sub {
        font-size: 1.1rem;
        color: #777;
        margin-bottom: 2rem;
    }

    /* Dekoratif daireler (opsiyonel) */
    .circle-decor {
        position: absolute;
        width: 140px;
        height: 140px;
        border-radius: 50%;
        background: #ffc2c2;
        z-index: -1;
        opacity: 0.4;
    }
    .circle-decor:nth-child(1) {
        top: -30px;
        left: 70%;
    }
    .circle-decor:nth-child(2) {
        bottom: -40px;
        left: 10%;
        background: #ffded2;
    }

    /* İstatistik üst kısım */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px,1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }
    .stat-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.03);
        padding: 1rem 1.5rem;
        text-align: center;
    }
    .stat-card .subheader {
        font-size: 0.8rem;
        color: #999;
        text-transform: uppercase;
        margin-bottom: 0.2rem;
    }
    .stat-card .h2 {
        font-size: 2rem;
        margin: 0;
        color: #f05232;
    }

    /* Filtre / Ara / Butonlar */
    .tools {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }
    .simple-btn {
        background-color: #f05232;
        color: #fff;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        font-weight: 600;
        transition: background 0.3s ease;
        text-decoration: none;
    }
    .simple-btn:hover {
        background-color: #d74322;
    }

    /* Kart Grid */
    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(240px,1fr));
        gap: 1.5rem;
    }
    .word-card {
        perspective: 1000px; /* flip animasyon */
        position: relative;
    }
    .word-card-inner {
        width: 100%;
        height: 320px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: transform 0.8s cubic-bezier(0.4, 0.2, 0.2, 1);
        transform-style: preserve-3d;
        position: relative;
    }
    .word-card:hover .word-card-inner {
        transform: rotateY(180deg);
    }

    .word-card-front,
    .word-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 12px;
        backface-visibility: hidden;
    }
    .word-card-front {
        background: linear-gradient(130deg, #ffe5e0 0%, #ffd9bf 100%);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 1rem;
    }
    .front-word {
        font-size: 2rem;
        color: #f05232;
        margin-bottom: 0.5rem;
    }
    .front-info {
        font-size: 1rem;
        color: #444;
    }

    .word-card-back {
        background: #fff;
        transform: rotateY(180deg);
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .back-meaning {
        font-size: 1.4rem;
        color: #4caf50;
        margin-bottom: 0.5rem;
    }
    .back-sentence {
        font-size: 0.95rem;
        color: #555;
        text-align: center;
        max-width: 80%;
    }
</style>

<div class="words-container">
    <div class="circle-decor"></div>
    <div class="circle-decor"></div>

    <!-- Başlık & Açıklama -->
    <div class="words-hero">Kelime Kartlarım</div>
    <div class="words-sub">Kartları çevirerek anlamını ve cümle içinde kullanımını görebilirsiniz.</div>

    <!-- İstatistik Kartları -->
    <div class="stats-row">
        <div class="stat-card">
            <div class="subheader">Toplam Kart</div>
            <div class="h2">128</div>
        </div>
        <div class="stat-card">
            <div class="subheader">Ezberlenen</div>
            <div class="h2" style="color:#4caf50;">58</div>
        </div>
        <div class="stat-card">
            <div class="subheader">Bugün Çalışılan</div>
            <div class="h2" style="color:#ff9800;">12</div>
        </div>
    </div>

    <!-- Araçlar: Arama, Filtre, Yeni Kart -->
    <div class="tools">
        <input type="text" class="form-control" placeholder="Kelime ara…" style="max-width:200px;" />
        <button class="simple-btn">Filtre</button>
        <button class="simple-btn">Sırala</button>
        <a href="#" class="simple-btn" style="margin-left:auto;">
            Yeni Kart Ekle
        </a>
    </div>

    <!-- Kelime Kartları Grid (3D Flip) -->
    <div class="cards-grid">
        <!-- Örnek 1 -->
        <div class="word-card">
            <div class="word-card-inner">
                <!-- Ön yüz -->
                <div class="word-card-front">
                    <div class="front-word">Apple</div>
                    <div class="front-info">Kategori: Meyveler</div>
                </div>
                <!-- Arka yüz -->
                <div class="word-card-back">
                    <div class="back-meaning">Elma</div>
                    <div class="back-sentence">“I eat an apple every morning.”</div>
                </div>
            </div>
        </div>
        <!-- Örnek 2 -->
        <div class="word-card">
            <div class="word-card-inner">
                <div class="word-card-front">
                    <div class="front-word">Banana</div>
                    <div class="front-info">Kategori: Meyveler</div>
                </div>
                <div class="word-card-back">
                    <div class="back-meaning">Muz</div>
                    <div class="back-sentence">“Monkeys love bananas!”</div>
                </div>
            </div>
        </div>
        <!-- Daha fazla kart... -->
    </div>
</div>
