@model Kelimedya.WebApp.Areas.Admin.Models.WordCardViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Yeni Kelime Kartı Ekle";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <h2 class="page-title">Yeni Kelime Kartı Ekle</h2>
        <div class="text-muted mt-1">Kelime kartı bilgilerini giriniz.</div>
    </div>
</div>

<div class="page-body pt-2">
    <div class="container-xl">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-area="Admin" asp-controller="WordCards" asp-action="Create" enctype="multipart/form-data">
                    <input type="hidden" asp-for="LessonId" value="@ViewBag.LessonId"/>
                    <div class="mb-3">
                        <label class="form-label">Kelime</label>
                        <input type="text" class="form-control" asp-for="Word" placeholder="Kelime"/>
                        <span asp-validation-for="Word" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Eş Anlam</label>
                        <input type="text" class="form-control" asp-for="Synonym" placeholder="Eş Anlam"/>
                        <span asp-validation-for="Synonym" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tanım</label>
                        <input type="text" class="form-control" asp-for="Definition" placeholder="Tanım"/>
                        <span asp-validation-for="Definition" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Örnek Cümle</label>
                        <textarea class="form-control" asp-for="ExampleSentence" rows="3" placeholder="Örnek cümle"></textarea>
                        <span asp-validation-for="ExampleSentence" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Resim Yükle</label>
                        <input type="file" class="form-control" asp-for="ImageFile"/>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    @for (int i = 0; i < Model.GameQuestions.Count; i++)
                    {
                        <div class="border rounded p-3 mb-3">
                            <h5 class="mb-2">@Model.GameQuestions[i].GameTitle</h5>
                            <input type="hidden" asp-for="GameQuestions[i].GameId" />
                            <div class="mb-2">
                                <label class="form-label">Soru</label>
                                <input type="text" class="form-control" asp-for="GameQuestions[i].QuestionText" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Cevap</label>
                                <input type="text" class="form-control" asp-for="GameQuestions[i].AnswerText" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Resim URL 1</label>
                                <input type="text" class="form-control" asp-for="GameQuestions[i].ImageUrl" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Resim URL 2</label>
                                <input type="text" class="form-control" asp-for="GameQuestions[i].ImageUrl2" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Resim URL 3</label>
                                <input type="text" class="form-control" asp-for="GameQuestions[i].ImageUrl3" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Resim URL 4</label>
                                <input type="text" class="form-control" asp-for="GameQuestions[i].ImageUrl4" />
                            </div>
                            <div class="row g-2">
                                <div class="col-md-6">
                                    <label class="form-label">Seçenek A</label>
                                    <input type="text" class="form-control" asp-for="GameQuestions[i].OptionA" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Seçenek B</label>
                                    <input type="text" class="form-control" asp-for="GameQuestions[i].OptionB" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Seçenek C</label>
                                    <input type="text" class="form-control" asp-for="GameQuestions[i].OptionC" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Seçenek D</label>
                                    <input type="text" class="form-control" asp-for="GameQuestions[i].OptionD" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Doğru Seçenek</label>
                                    <input type="number" class="form-control" asp-for="GameQuestions[i].CorrectOption" />
                                </div>
                            </div>
                        </div>
                    }

                    @for (int i = 0; i < Model.TestQuestions.Count; i++)
                    {
                        <div class="border rounded p-3 mb-3">
                            <h5 class="mb-2">Test Sorusu @(i + 1)</h5>
                            <div class="mb-2">
                                <label class="form-label">Soru</label>
                                <input type="text" class="form-control" asp-for="TestQuestions[i].QuestionText" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">A</label>
                                <input type="text" class="form-control" asp-for="TestQuestions[i].OptionA" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">B</label>
                                <input type="text" class="form-control" asp-for="TestQuestions[i].OptionB" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">C</label>
                                <input type="text" class="form-control" asp-for="TestQuestions[i].OptionC" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">D</label>
                                <input type="text" class="form-control" asp-for="TestQuestions[i].OptionD" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Doğru Seçenek (1-4)</label>
                                <input type="number" class="form-control" asp-for="TestQuestions[i].CorrectOption" />
                            </div>
                        </div>
                    }
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a asp-action="Index" asp-route-lessonId="@ViewBag.LessonId" class="btn btn-link link-secondary">Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}