@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Metin Düzenlemeleri";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <h2 class="page-title">Metin Düzenlemeleri</h2>
        <div class="text-muted mt-1">
            Sistem üzerinde kullanılan bazı metin şablonlarını düzenleyebilirsiniz.
        </div>
    </div>
</div>

<div class="page-body pt-2">
    <div class="container-xl">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Genel Metinler</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- Örnek metin düzenleme alanı -->
                    <div class="mb-3">
                        <label class="form-label">Hoş Geldiniz Metni</label>
                        <textarea class="form-control" name="welcomeText" rows="3">Sisteme hoş geldiniz...</textarea>
                    </div>
                    <!-- Başka metinler... -->
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
