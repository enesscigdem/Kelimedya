
@model Kelimedya.WebApp.Areas.Student.Models.MyLessonsViewModel

@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Course.Title;
}

<link href="~/css/myLessons.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="lessons-container">
    
    <header class="header-area">
        <div class="header-content">
            <h1 class="course-hero">@Model.Course.Title</h1>
            <p class="course-sub">@Model.Course.Description</p>
        </div>
    </header>

    
    <section class="cards-grid">
        @if (Model.Lessons?.Any() == true)
        {
            var ordered = Model.Lessons.OrderBy(l => l.Lesson.SequenceNo).ToList();
            for (int i = 0; i < ordered.Count; i++)
            {
                var lesson = ordered[i];
                bool unlocked = i == 0 || ordered[i - 1].Progress?.IsCompleted == true;
                <div class="lesson-card">
                    <div class="card-header">
                        <span class="lesson-number">Ders @lesson.Lesson.SequenceNo</span>
                        @if (!string.IsNullOrEmpty(lesson.Lesson.ImageUrl))
                        {
                            <img src="@lesson.Lesson.ImageUrl" alt="@lesson.Lesson.Title" class="card-image">
                        }
                        else
                        {
                            <div class="card-emoji">
                                <i class="fas fa-book-open"></i>
                            </div>
                        }
                    </div>
                    
                    <div class="card-body">
                        <h3 class="lesson-title">@lesson.Lesson.Title</h3>
                        <p class="lesson-description">@lesson.Lesson.Description</p>
                        
                        <div class="card-meta">
                            <span class="meta-item">
                                <i class="fas fa-font"></i>
                                @(lesson.Lesson.WordCards?.Count ?? 0) Kelime
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-gamepad"></i>
                                @lesson.Lesson.GameCount Oyun
                            </span>
                        </div>
                    </div>

                    <div class="card-footer">
                        @if (lesson.Progress?.IsCompleted == true)
                        {
                            <button class="ultra-btn success" disabled>
                                <i class="fas fa-check-circle"></i>
                                Tamamlandı
                            </button>
                        }
                        else if (unlocked)
                        {
                            <a class="ultra-btn" asp-action="LessonDetail" asp-route-id="@lesson.Lesson.Id">
                                <i class="fas fa-graduation-cap"></i>
                                @(lesson.Lesson.IsStarted ? "Devam Et" : "Başla")
                            </a>
                        }
                        else
                        {
                            <button class="ultra-btn" disabled title="Önceki dersi tamamlamalısınız" data-bs-toggle="tooltip">
                                <i class="fas fa-lock"></i>
                                Başla
                            </button>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-content">
                <i class="fas fa-info-circle"></i>
                <h3>Henüz bu kursta ders bulunmuyor</h3>
                <p>Lütfen daha sonra tekrar kontrol edin</p>
            </div>
        }
    </section>
</div>