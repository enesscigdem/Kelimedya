@using System.Security.Claims
@{
    bool embed = Context.Request.Query.ContainsKey("embed");
    Layout = embed 
        ? "~/Areas/Student/Views/Shared/_GameLayout.cshtml" 
        : "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Çengel Bulmaca";
    var studentId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<link href="~/css/CrossPuzzle.css" rel="stylesheet" />

<div id="gameRoot" class="gb-container container-xl"
     data-student-id="@studentId"
     data-game-id="@ViewData["GameId"]"
     data-embed="@embed.ToString().ToLower()">
  
    <header class="gb-header">
        <h2>Çengel Bulmaca</h2>
        <div class="gb-progress">
            <div class="gb-progress-bar" style="width:100%"></div>
        </div>
        <p class="gb-subtitle">Yatay ve dikey kelimeleri doldurarak bulmacayı tamamlayın.</p>
    </header>

    <div class="gb-gamecard cp-gamecard">
        <div class="cp-main">
            <div class="cp-grid" id="puzzleGrid"></div>
            <aside class="cp-sidebar">
                <section class="cp-clue-block">
                    <h3>Yatay</h3>
                    <ul id="across-clues"></ul>
                </section>
                <section class="cp-clue-block">
                    <h3>Dikey</h3>
                    <ul id="down-clues"></ul>
                </section>
                <div class="gb-controls cp-controls">
                    <button id="cpCheck"  class="btn-primary">Kontrol Et</button>
                    <button id="cpReveal" class="btn-outline">Cevabı Göster</button>
                    @if(!embed)
                    {
                        <button id="cpBack" class="btn-secondary">Geri Dön</button>
                    }
                </div>
            </aside>
        </div>
        <div class="gb-feedback cp-feedback" id="cpFeedback"></div>
    </div>
</div>

@section Scripts {
    <script type="module">
import {initCrossPuzzle} from '@Url.Content("~/js/games/CrossPuzzle.js")';
const root = document.getElementById('gameRoot');
initCrossPuzzle(
  root.dataset.studentId,
  root.dataset.gameId
);
</script>
}