@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kelime Kartlarım";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <h2 class="page-title">Kelime Kartlarım</h2>
        <div class="text-muted mt-1">
            Kelime öğrenmek için oluşturduğunuz kartları görüntüleyin, düzenleyin.
        </div>
    </div>
</div>

<div class="page-body pt-2">
    <div class="container-xl">
        <!-- İstatistik Kartlar -->
        <div class="row row-cards">
            <div class="col-sm-6 col-lg-3">
                <div class="card card-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="subheader">Toplam Kart</div>
                        <div class="ms-auto lh-1">
                            <span class="h2 mb-0 text-blue">128</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Ezberlenen Kart -->
            <div class="col-sm-6 col-lg-3">
                <div class="card card-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="subheader">Ezberlenen</div>
                        <div class="ms-auto lh-1">
                            <span class="h2 mb-0 text-green">58</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kelime Tablosu -->
        <div class="card mt-3">
            <div class="card-header">
                <h3 class="card-title">Kelimelerim</h3>
                <div class="card-actions">
                    <a href="#" class="btn btn-primary d-flex align-items-center">
                        <!-- Ekle Icon -->
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="icon me-1" width="20" height="20"
                             viewBox="0 0 24 24" stroke-width="2"
                             stroke="currentColor" fill="none" stroke-linecap="round"
                             stroke-linejoin="round">
                            <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                            <circle cx="12" cy="12" r="9"/>
                            <line x1="9" y1="12" x2="15" y2="12"/>
                            <line x1="12" y1="9" x2="12" y2="15"/>
                        </svg>
                        Yeni Kart Ekle
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table card-table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Kelime</th>
                            <th>Anlam</th>
                            <th>Cümle İçinde Kullanımı</th>
                            <th class="w-1 text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Apple</td>
                            <td>Elma</td>
                            <td>I like eating an apple every morning.</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a href="#" class="btn btn-success d-flex align-items-center me-1" title="Düzenle">
                                        <!-- Düzenle Icon -->
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             class="icon me-1" width="20" height="20"
                                             viewBox="0 0 24 24" stroke-width="2"
                                             stroke="currentColor" fill="none" stroke-linecap="round"
                                             stroke-linejoin="round">
                                            <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                                            <path d="M8 18h4"/>
                                            <path d="M4 14v4h4l10 -10a2 2 0 1 0 -4 -4z"/>
                                        </svg>
                                        Düzenle
                                    </a>
                                    <a href="#" class="btn btn-danger d-flex align-items-center" title="Sil">
                                        <!-- Sil Icon -->
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             class="icon me-1" width="20" height="20"
                                             viewBox="0 0 24 24" stroke-width="2"
                                             stroke="currentColor" fill="none" stroke-linecap="round"
                                             stroke-linejoin="round">
                                            <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                                            <path d="M4 7h16"/>
                                            <path d="M10 11v6"/>
                                            <path d="M14 11v6"/>
                                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8
                                                     a2 2 0 0 0 2 -2l1 -12"/>
                                            <path d="M9 7v-2a1 1 0 0 1 1 -1h4
                                                     a1 1 0 0 1 1 1v2"/>
                                        </svg>
                                        Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <!-- Diğer kelimeler -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
