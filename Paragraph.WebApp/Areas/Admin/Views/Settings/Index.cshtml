@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Ayarlar";
}
<h2>Site Ayarları</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Site Adı</label>
        <input type="text" class="form-control" name="SiteName" value="Dil Eğitimi Sitesi" />
    </div>
    <div class="mb-3">
        <label class="form-label">Logo URL</label>
        <input type="text" class="form-control" name="LogoUrl" value="/images/logo.png"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Tema Rengi</label>
        <select class="form-select" name="ThemeColor">
            <option value="light" selected>Light</option>
            <option value="dark">Dark</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>