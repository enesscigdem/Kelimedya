<!-- STİL (CSS) -->
<style>
/* ANA GÖVDE: Pastel degrade */
body {
    margin: 0; 
    padding: 0;
    background: linear-gradient(130deg, #ffe5e0 0%, #ffd9bf 100%) !important;
    font-family: 'Josefin Sans', sans-serif;
    color: #333;
}
/* ÜST BÖLÜM: Asimetrik pastel dalga (clip-path) */
.top-wave {
    width: 100%;
    height: 220px;
    background: linear-gradient(135deg, #ffd2ca 0%, #ffbfb2 100%);
    position: relative;
    clip-path: polygon(0 0, 100% 0, 100% 70%, 0 100%);
}
.top-wave h1 {
    position: absolute;
    top: 50px; 
    width: 100%;
    text-align: center;
    font-size: 2.6rem;
    color: #fff;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.25);
    letter-spacing: 0.5px;
}
/* KAPSAYICI */
.super-container {
    max-width: 1000px;
    margin: -80px auto 0 auto; 
    position: relative;
    z-index: 1;
}
/* İLERLEME ÇUBUĞU */
.progress-area {
    display: flex;
    justify-content: center;
    margin: 1rem 0 1.5rem;
}
.progress-track {
    width: 80%;
    height: 12px;
    background: rgba(255,255,255,0.5);
    border-radius: 6px;
    overflow: hidden;
    position: relative;
}
.progress-fill {
    width: 0;
    height: 100%;
    background: linear-gradient(90deg, #ff9e85, #ff8466);
    transition: width 0.3s ease;
}
/* KART SAHNE: 520px */
.kart-sahne {
    position: relative;
    width: 100%;
    height: 520px;
    border-radius: 12px;
    background: #fff;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
}
/* KART - sağdan sola, hızlı 0.3s */
.kelime-card {
    position: absolute;
    width: 100%;
    height: 100%;
    padding: 2rem;
    text-align: center;
    background: #fff;
    border-radius: 12px;
    box-shadow: inset 0 0 30px rgba(0,0,0,0.03);
    opacity: 0;
    transform: translateX(120%);
    transition: transform 0.3s cubic-bezier(0.65,0.05,0.36,1), opacity 0.2s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.kelime-card.aktif {
    opacity: 1;
    transform: translateX(0);
    z-index: 5;
}
.kelime-card.cikis-sola {
    transform: translateX(-120%) !important;
    opacity: 0 !important;
}
/* KART İÇERİKLERİ */
.card-index {
    font-size: 0.9rem;
    color: #aaa;
    margin-bottom: 0.5rem;
}
.card-emoji {
    width: 130px; 
    height: 130px;
    border-radius: 50%;
    background: linear-gradient(130deg, #ffe5e0, #ffd9bf);
    box-shadow: 0 5px 15px rgba(0,0,0,0.07);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    color: #d85c5c;
    margin-bottom: 1rem;
    transition: transform 0.2s ease;
}
.card-emoji:hover {
    transform: scale(1.1);
}
.word-title {
    font-size: 2.2rem;
    color: #f05a5a;
    margin-bottom: 0.5rem;
}
.sentence {
    font-size: 1.1rem;
    color: #555;
    margin-bottom: 1rem;
    max-width: 75%;
    margin: 0 auto 1rem auto;
}
.info-area {
    font-size: 0.95rem;
    color: #666;
    margin-bottom: 1rem;
    line-height: 1.3;
}
.info-area .bold {
    font-weight: 600;
    color: #333;
}
/* BUTONLAR */
.btn-row {
    display: flex;
    gap: 1rem;
    justify-content: center;
}
.pastel-btn {
    background: linear-gradient(135deg, #ffe5e0, #ffd9bf);
    border: none;
    border-radius: 8px;
    color: #333;
    padding: 0.7rem 1.4rem;
    font-weight: 600;
    cursor: pointer;
    transition: box-shadow 0.2s, transform 0.2s;
}
.pastel-btn:hover {
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transform: translateY(-2px);
}
.finish-btn {
    background: linear-gradient(135deg, #5edb8c, #4caf50) !important;
    color: #fff !important;
}
/* RESPONSIVE */
@@media(max-width:768px){
    .kart-sahne {
        height: 460px;
    }
    .word-title {
        font-size: 2rem;
    }
    .sentence {
        font-size: 1rem;
    }
}

/* -------------------------------------
   MODAL (POPUP) STİLİ
------------------------------------- */
#gameModal {
    position: fixed;
    top: 50%;
    left: 50%;
    width: 400px;
    max-width: 90vw;
    background: #fff;
    border-radius: 12px;
    transform: translate(-50%, -50%) scale(0);
    box-shadow: 0 8px 20px rgba(0,0,0,0.25);
    z-index: 9999;
    padding: 2rem;
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
#gameModal.show {
    transform: translate(-50%, -50%) scale(1);
}
.modal-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #f05a5a;
}
.modal-btns {
    display: flex; 
    gap: 1rem;
    margin-top: 1rem;
}
.modal-overlay {
    position: fixed;
    top: 0; left: 0; 
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 9998;
    display: none; 
}
.modal-overlay.show {
    display: block;
}
</style>

