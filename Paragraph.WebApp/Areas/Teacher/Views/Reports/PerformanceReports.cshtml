@model IEnumerable<Paragraph.WebApp.Areas.Teacher.Models.CoursePerformanceViewModel>

@{
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Performans Raporları";
}

<link href="~/css/teacherReports.css" rel="stylesheet" />

<div class="performance-page container-xl">
    <h2 class="performance-title">Performans Raporları</h2>
    <div class="performance-sub">Kurs bazında öğrencilerin ders ilerleme istatistiklerini inceleyin.</div>
    
    <table class="performance-table">
        <thead>
            <tr>
                <th>Ders Adı</th>
                <th>Ortalama İlerleme (%)</th>
                <th>Toplam Deneme</th>
                <th>Toplam Süre (sn)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var perf in Model)
            {
                <tr>
                    <td>@perf.Title</td>
                    <td>@string.Format("{0:0}%", perf.AverageCompletion)</td>
                    <td>@perf.TotalAttempts</td>
                    <td>@perf.TotalTimeSpentSeconds</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
        // Örnek: Grafik oluşturma (isteğe bağlı, buraya rapor grafik ayarlarınızı ekleyebilirsiniz)
        document.addEventListener("DOMContentLoaded", function() {
            // Grafik kodlarınızı buraya ekleyin.
        });
    </script>
}
