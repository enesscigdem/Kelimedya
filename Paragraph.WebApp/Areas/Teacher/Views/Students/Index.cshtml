@{
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Öğrenci Yönetimi";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <h2 class="page-title">Öğrenciler</h2>
        <div class="text-muted mt-1">
            Öğrencilerinizi buradan görüntüleyip yönetebilirsiniz.
        </div>
    </div>
</div>

<div class="page-body pt-2">
    <div class="container-xl">
        <!-- Kartlarla mini istatistik -->
        <div class="row row-cards">
            <div class="col-sm-6 col-lg-3">
                <div class="card card-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="subheader">Toplam Öğrenci</div>
                        <div class="ms-auto lh-1">
                            <span class="h2 mb-0 text-blue">45</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Başka istatistik kartları -->
            <div class="col-sm-6 col-lg-3">
                <div class="card card-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="subheader">Mezun Olanlar</div>
                        <div class="ms-auto lh-1">
                            <span class="h2 mb-0 text-green">10</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Arama / Tablo -->
        <div class="row mb-3 mt-3">
            <div class="col-12 col-lg-4">
                <form>
                    <div class="input-icon">
                        <span class="input-icon-addon">
                            <!-- Arama Iconu -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                 viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                 fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M0 0h24v24H0z" fill="none"/>
                                <path d="M10 10a7 7 0 1 0 7 7"/>
                                <path d="M21 21l-6 -6"/>
                            </svg>
                        </span>
                        <input type="text" class="form-control" placeholder="Öğrenci ara…"/>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tüm Öğrenciler</h3>
            </div>
            <div class="table-responsive">
                <table class="table card-table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Öğrenci Adı</th>
                            <th>E-posta</th>
                            <th>Kayıt Tarihi</th>
                            <th>Kur</th>
                            <th class="w-1 text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Ali Yılmaz</td>
                            <td>ali@example.com</td>
                            <td>2025-01-15</td>
                            <td>A1</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-area="Teacher"
                                       asp-controller="Students"
                                       asp-action="Details"
                                       asp-route-id="1"
                                       class="btn btn-primary d-flex align-items-center me-1"
                                       title="Detay">
                                        <!-- Detay Icon -->
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             class="icon me-1" width="20" height="20"
                                             viewBox="0 0 24 24" stroke-width="2"
                                             stroke="currentColor" fill="none" stroke-linecap="round"
                                             stroke-linejoin="round">
                                            <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                                            <circle cx="12" cy="12" r="2"/>
                                            <path d="M22 12c-2 -5 -7 -9 -10 -9s-8 4 -10 9
                                                     c2 5 7 9 10 9s8 -4 10 -9"/>
                                        </svg>
                                        Detay
                                    </a>
                                    <a asp-area="Teacher"
                                       asp-controller="Students"
                                       asp-action="Edit"
                                       asp-route-id="1"
                                       class="btn btn-success d-flex align-items-center me-1"
                                       title="Düzenle">
                                        <!-- Düzenle Icon -->
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             class="icon me-1" width="20" height="20"
                                             viewBox="0 0 24 24" stroke-width="2"
                                             stroke="currentColor" fill="none" stroke-linecap="round"
                                             stroke-linejoin="round">
                                            <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                                            <path d="M8 18h4"/>
                                            <path d="M4 14v4h4l10 -10a2 2 0 1 0 -4 -4z"/>
                                        </svg>
                                        Düzenle
                                    </a>
                                    <a asp-area="Teacher"
                                       asp-controller="Students"
                                       asp-action="Delete"
                                       asp-route-id="1"
                                       class="btn btn-danger d-flex align-items-center"
                                       title="Sil">
                                        <!-- Sil Icon -->
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             class="icon me-1" width="20" height="20"
                                             viewBox="0 0 24 24" stroke-width="2"
                                             stroke="currentColor" fill="none" stroke-linecap="round"
                                             stroke-linejoin="round">
                                            <path d="M0 0h24v24H0z" fill="none" stroke="none"/>
                                            <path d="M4 7h16"/>
                                            <path d="M10 11v6"/>
                                            <path d="M14 11v6"/>
                                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8
                                                     a2 2 0 0 0 2 -2l1 -12"/>
                                            <path d="M9 7v-2a1 1 0 0 1 1 -1h4
                                                     a1 1 0 0 1 1 1v2"/>
                                        </svg>
                                        Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <!-- Diğer öğrenciler -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
