@model Paragraph.WebApp.Areas.Teacher.Models.TeacherDashboardViewModel

@{
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Öğretmen Paneli - Ultra Profesyonel Dashboard";
}

<style>
    /* Ana dış container */
    .dashboard-container {
        margin-top: 1.5rem;
        margin-bottom: 2.5rem;
    }
    /* --------- HERO BÖLÜMÜ --------- */
    .hero-section {
        position: relative;
        color: #fff;
        margin-bottom: 2rem;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 14px rgba(0,0,0,0.2);
    }
    .hero-bg {
        background: linear-gradient(to right, #2b4055, #3f5872);
        padding: 2.5rem 2rem;
        border-radius: 12px 12px 0 0;
        clip-path: polygon(0 0, 100% 0, 100% 80%, 0 100%);
    }
    .hero-content {
        position: relative;
        z-index: 2;
    }
    .hero-title {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }
    .hero-subtitle {
        margin-top: 0.5rem;
        font-size: 1.1rem;
        color: #f0f0f0;
    }
    .hero-overlay {
        position: absolute;
        bottom: -16px;
        left: 0;
        width: 100%;
        height: 70px;
        background: #2b4055;
        clip-path: polygon(0 0, 100% 30%, 100% 100%, 0 100%);
        z-index: 1;
    }
    /* --------- İSTATİSTİK KARTLARI --------- */
    .stat-row {
        margin-bottom: 2rem;
    }
    .stat-card-pro {
        background: #fff;
        border-radius: 8px;
        border-left: 5px solid var(--color-accent);
        box-shadow: 0 3px 10px rgba(0,0,0,0.07);
        padding: 1.2rem;
        transition: 0.3s;
        position: relative;
        overflow: hidden;
    }
    .stat-card-pro:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }
    .stat-icon {
        position: absolute;
        top: -20px;
        right: -20px;
        font-size: 5rem;
        color: rgba(0,0,0,0.05);
    }
    .stat-title {
        font-size: 0.85rem;
        text-transform: uppercase;
        color: #888;
        margin-bottom: 0.2rem;
        font-weight: 600;
    }
    .stat-value {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--color-accent);
    }
    .stat-desc {
        font-size: 0.8rem;
        color: #aaa;
    }
    /* Öğrenci Kartları */
    .student-card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }
    .student-info {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }
    .student-avatar {
        width: 50px;
        height: 50px;
        background: #3498db;
        color: #fff;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-right: 1rem;
    }
    .student-name {
        font-size: 1.2rem;
        font-weight: 700;
        margin: 0;
    }
    .student-meta {
        font-size: 0.85rem;
        color: #666;
    }
    .btn-report {
        margin-top: 1rem;
    }
</style>

<div class="dashboard-container container-xl">
    <!-- HERO BÖLÜMÜ -->
    <div class="hero-section">
        <div class="hero-bg">
            <div class="hero-content">
                <h1 class="hero-title">Öğretmen Paneli</h1>
                <p class="hero-subtitle">
                    Merhaba <strong>@Model.TeacherName</strong>, bugünkü genel görünümünüz aşağıda:
                </p>
            </div>
        </div>
        <div class="hero-overlay"></div>
    </div>

    <!-- İSTATİSTİK KARTLARI -->
    <div class="stat-row row">
        <div class="col-sm-6 col-lg-4">
            <div class="stat-card-pro">
                <i class="stat-icon icon icon-tabler icon-tabler-users"></i>
                <div class="stat-title">Toplam Öğrenci</div>
                <div class="stat-value">@Model.TotalStudents</div>
                <div class="stat-desc">Aktif kayıtlı</div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-4">
            <div class="stat-card-pro">
                <i class="stat-icon icon icon-tabler icon-tabler-user-plus"></i>
                <div class="stat-title">Bugün Yeni Kayıt</div>
                <div class="stat-value">@Model.NewStudents</div>
                <div class="stat-desc">Bugün eklenen</div>
            </div>
        </div>
        <div class="col-sm-12 col-lg-4">
            <div class="stat-card-pro">
                <i class="stat-icon icon icon-tabler icon-tabler-clipboard-check"></i>
                <div class="stat-title">Ortalama İlerleme</div>
                <div class="stat-value">@Model.AverageProgress.ToString("0.##")%</div>
                <div class="stat-desc">Tüm öğrenciler</div>
            </div>
        </div>
    </div>

    <!-- ÖĞRENCİ RAPOR KARTLARI -->
    <div class="row">
        @if(Model.StudentReports != null && Model.StudentReports.Any())
        {
            @foreach(var student in Model.StudentReports)
            {
                <div class="col-md-6 col-xl-4">
                    <div class="student-card">
                        <div class="student-info">
                            <div class="student-avatar">
                                @student.FullName.Substring(0,1)
                            </div>
                            <div>
                                <p class="student-name">@student.FullName</p>
                                <p class="student-meta">ID: @student.StudentId</p>
                            </div>
                        </div>
                        <p><strong>E-posta:</strong> @student.Email</p>
                        <p><strong>Kayıt Tarihi:</strong> @student.CreatedAt.ToString("yyyy-MM-dd")</p>
                        <p>
                            <strong>Ortalama Ders Tamamlanma:</strong> 
                            @(
                                student.CompletedLessons.Any()
                                ? student.CompletedLessons.Average(l => l.CompletionPercentage).ToString("0.##")
                                : "0"
                             )%
                        </p>
                        <a class="btn btn-primary btn-report" asp-area="Teacher" asp-controller="Reports" asp-action="StudentReports" asp-route-studentId="@student.StudentId">
                            Rapor Görüntüle
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    Henüz rapor verisi bulunmamaktadır.
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // İhtiyaç duyulursa modal ya da ek AJAX kodları eklenebilir.
    </script>
}
