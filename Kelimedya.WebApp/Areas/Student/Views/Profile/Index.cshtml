@model Kelimedya.WebApp.Areas.Student.Models.StudentProfileViewModel
@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Profilim";
}

<div class="relative min-h-screen bg-gradient-to-br from-orange-50 via-white to-yellow-50">
    <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-orange-200 to-orange-300 rounded-full opacity-15 -translate-x-48 -translate-y-48 blur-3xl"></div>
    <div class="absolute top-32 right-0 w-80 h-80 bg-gradient-to-bl from-yellow-200 to-orange-200 rounded-full opacity-10 translate-x-32 blur-3xl"></div>
    <div class="absolute bottom-0 left-1/3 w-64 h-64 bg-gradient-to-tr from-orange-300 to-yellow-300 rounded-full opacity-20 translate-y-32 blur-3xl"></div>

    <div class="absolute top-20 left-20 w-3 h-3 bg-orange-400 rounded-full opacity-40 animate-bounce" style="animation-delay: 0s;"></div>
    <div class="absolute top-40 right-32 w-2 h-2 bg-yellow-500 rounded-full opacity-50 animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-32 left-1/4 w-4 h-4 bg-orange-300 rounded-full opacity-30 animate-ping" style="animation-delay: 2s;"></div>

    <div class="relative z-10 p-6">
        <div class="mb-12">
            <div class="flex items-center gap-4 mb-6">
                <div class="relative">
                    <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center shadow-xl">
                        <i class="fas fa-user text-white text-2xl"></i>
                    </div>
                    <div class="absolute -top-1 -right-1 w-6 h-6 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-edit text-white text-xs"></i>
                    </div>
                </div>
                <div>
                    <h1 class="text-5xl font-bold bg-gradient-to-r from-orange-600 via-orange-500 to-yellow-500 bg-clip-text text-transparent mb-2">
                        Profilim
                    </h1>
                    <p class="text-xl text-gray-600">Kişisel bilgilerinizi düzenleyin ve güncelleyin ✨</p>
                </div>
            </div>
        </div>

        <div class="max-w-4xl mx-auto">
            <div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl border border-orange-100 overflow-hidden">
                <!-- Card Header -->
                <div class="bg-gradient-to-r from-orange-500 to-orange-600 p-8 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -translate-y-16 translate-x-16"></div>
                    <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/5 rounded-full translate-y-12 -translate-x-12"></div>
                    <div class="relative z-10">
                        <h2 class="text-2xl font-bold mb-2">Kişisel Bilgiler</h2>
                        <p class="text-orange-100">Profil bilgilerinizi güncelleyebilirsiniz</p>
                    </div>
                </div>

                <div class="p-8">
                    <form method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                            <div class="space-y-6">
                                <div class="group">
                                    <label asp-for="UserName" class="block text-sm font-bold text-gray-700 mb-2 flex items-center gap-2">
                                        <i class="fas fa-user text-orange-500"></i>
                                        Kullanıcı Adı
                                    </label>
                                    <input asp-for="UserName" 
                                           class="w-full px-4 py-3 border-2 border-orange-200 rounded-xl text-sm bg-white focus:outline-none focus:ring-4 focus:ring-orange-200 focus:border-orange-400 transition-all duration-300 shadow-sm hover:shadow-md" 
                                           placeholder="Kullanıcı adınızı girin" />
                                    <span asp-validation-for="UserName" class="text-red-500 text-sm mt-1 block"></span>
                                </div>

                                <div class="group">
                                    <label asp-for="Email" class="block text-sm font-bold text-gray-700 mb-2 flex items-center gap-2">
                                        <i class="fas fa-envelope text-orange-500"></i>
                                        E-posta
                                    </label>
                                    <input asp-for="Email" 
                                           class="w-full px-4 py-3 border-2 border-orange-200 rounded-xl text-sm bg-white focus:outline-none focus:ring-4 focus:ring-orange-200 focus:border-orange-400 transition-all duration-300 shadow-sm hover:shadow-md" 
                                           placeholder="E-posta adresinizi girin" />
                                    <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
                                </div>

                                <div class="group">
                                    <label asp-for="Name" class="block text-sm font-bold text-gray-700 mb-2 flex items-center gap-2">
                                        <i class="fas fa-id-card text-orange-500"></i>
                                        Ad
                                    </label>
                                    <input asp-for="Name" 
                                           class="w-full px-4 py-3 border-2 border-orange-200 rounded-xl text-sm bg-white focus:outline-none focus:ring-4 focus:ring-orange-200 focus:border-orange-400 transition-all duration-300 shadow-sm hover:shadow-md" 
                                           placeholder="Adınızı girin" />
                                </div>

                                <div class="group">
                                    <label asp-for="Surname" class="block text-sm font-bold text-gray-700 mb-2 flex items-center gap-2">
                                        <i class="fas fa-id-card text-orange-500"></i>
                                        Soyad
                                    </label>
                                    <input asp-for="Surname" 
                                           class="w-full px-4 py-3 border-2 border-orange-200 rounded-xl text-sm bg-white focus:outline-none focus:ring-4 focus:ring-orange-200 focus:border-orange-400 transition-all duration-300 shadow-sm hover:shadow-md" 
                                           placeholder="Soyadınızı girin" />
                                </div>

                                <div class="group">
                                    <label asp-for="PhoneNumber" class="block text-sm font-bold text-gray-700 mb-2 flex items-center gap-2">
                                        <i class="fas fa-phone text-orange-500"></i>
                                        Telefon
                                    </label>
                                    <input asp-for="PhoneNumber" 
                                           class="w-full px-4 py-3 border-2 border-orange-200 rounded-xl text-sm bg-white focus:outline-none focus:ring-4 focus:ring-orange-200 focus:border-orange-400 transition-all duration-300 shadow-sm hover:shadow-md" 
                                           placeholder="Telefon numaranızı girin" />
                                </div>

                                <div class="group">
                                    <label asp-for="ClassGrade" class="block text-sm font-bold text-gray-700 mb-2 flex items-center gap-2">
                                        <i class="fas fa-graduation-cap text-orange-500"></i>
                                        Sınıf
                                    </label>
                                    <input asp-for="ClassGrade" 
                                           class="w-full px-4 py-3 border-2 border-orange-200 rounded-xl text-sm bg-white focus:outline-none focus:ring-4 focus:ring-orange-200 focus:border-orange-400 transition-all duration-300 shadow-sm hover:shadow-md" 
                                           placeholder="Sınıfınızı girin" />
                                </div>
                            </div>

                            <div class="space-y-6">
                                <div class="text-center">
                                    <div class="relative inline-block">
                                        <img src="@(string.IsNullOrEmpty(Model.ProfilePicture) ? Url.Content("~/theme/tabler/static/avatars/000m.jpg") : Model.ProfilePicture)" 
                                             class="w-48 h-48 rounded-3xl object-cover shadow-xl border-4 border-orange-200 mx-auto" 
                                             alt="Profil Resmi" />
                                        <div class="absolute -bottom-2 -right-2 w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center shadow-lg">
                                            <i class="fas fa-camera text-white text-lg"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="bg-gradient-to-br from-orange-50 to-yellow-50 rounded-2xl p-6 border border-orange-200">
                                    <label asp-for="ImageFile" class="block text-sm font-bold text-gray-700 mb-3 flex items-center gap-2">
                                        <i class="fas fa-upload text-orange-500"></i>
                                        Yeni Profil Resmi
                                    </label>
                                    <div class="relative">
                                        <input asp-for="ImageFile" 
                                               type="file" 
                                               class="w-full px-4 py-3 border-2 border-orange-200 rounded-xl text-sm bg-white focus:outline-none focus:ring-4 focus:ring-orange-200 focus:border-orange-400 transition-all duration-300 shadow-sm hover:shadow-md file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100" 
                                               accept="image/*" />
                                    </div>
                                    <p class="text-xs text-gray-500 mt-2">JPG, PNG veya GIF formatında, maksimum 5MB</p>
                                </div>

                                <div class="grid grid-cols-2 gap-4">
                                    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-4 text-center border border-green-200">
                                        <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center mx-auto mb-2">
                                            <i class="fas fa-trophy text-white text-sm"></i>
                                        </div>
                                        <div class="text-lg font-bold text-green-600">@ViewBag.TotalScore</div>
                                        <div class="text-xs text-gray-600">Toplam Puan</div>
                                    </div>
                                    <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-4 text-center border border-blue-200">
                                        <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center mx-auto mb-2">
                                            <i class="fas fa-book text-white text-sm"></i>
                                        </div>
                                        <div class="text-lg font-bold text-blue-600">@ViewBag.LearnedWords</div>
                                        <div class="text-xs text-gray-600">Öğrenilen Kelime</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-8 text-center">
                            <button type="submit" 
                                    class="bg-gradient-to-r from-orange-500 to-orange-600 text-white py-4 px-12 rounded-2xl font-bold hover:from-orange-600 hover:to-orange-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 flex items-center gap-3 mx-auto">
                                <i class="fas fa-save text-xl"></i>
                                Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>