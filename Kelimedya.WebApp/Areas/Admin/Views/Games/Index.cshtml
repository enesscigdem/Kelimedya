@model IEnumerable<Kelimedya.WebApp.Areas.Admin.Models.GameViewModel>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Oyunlar";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="page-title">Oyunlar</h2>
            </div>
            <div class="col-auto ms-auto d-print-none">
                <a class="btn btn-primary" asp-action="Create">Yeni Oyun Ekle</a>
            </div>
        </div>
    </div>
</div>

<div class="page-body pt-2">
    <div class="container-xl">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Mevcut Oyunlar</h3>
            </div>
            <div class="table-responsive">
                <table class="table card-table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Oyun Adı</th>
                            <th>Türü</th>
                            <th>Zorluk</th>
                            <th>Aktif mi?</th>
                            <th class="w-1 text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var game in Model)
                        {
                            <tr>
                                <td>@game.Title</td>
                                <td>@game.GameType</td>
                                <td>@game.Difficulty</td>
                                <td>
                                   <span class="badge @(game.IsActive ? "bg-green-lt text-green" : "bg-red-lt")">
                                       <svg xmlns="http://www.w3.org/2000/svg"
                                            class="icon icon-tabler icon-tabler-device-gamepad-2 me-1"
                                            width="16" height="16" viewBox="0 0 24 24"
                                            fill="none" stroke="currentColor" stroke-width="2"
                                            stroke-linecap="round" stroke-linejoin="round">
                                           <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                           <path d="M12 5h3.5a5 5 0 0 1 0 10h-5.5l-4.015 4.227a2.3 2.3 0 0 1 -3.923 -2.035l1.634 -8.173a5 5 0 0 1 4.904 -4.019h3.4z" />
                                           <path d="M8 9v2" />
                                           <path d="M7 10h2" />
                                           <path d="M14 10h2" />
                                           <path d="M15 15l4.07 4.284a2.3 2.3 0 0 0 3.925 -2.023l-1.6 -8.232" />
                                       </svg>
                                       @(game.IsActive ? "Evet" : "Hayır")
                                   </span>

                                    
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-success me-1">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-danger delete-btn">Sil</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
