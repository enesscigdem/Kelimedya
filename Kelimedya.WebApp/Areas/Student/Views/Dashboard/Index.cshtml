@model Kelimedya.WebApp.Areas.Student.Models.StudentDashboardViewModel
@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Öğrenci Paneli - Dashboard";
}

<div class="relative">
    <div class="absolute top-0 left-0 w-80 h-80 bg-pink-300 rounded-full decorative-circle -translate-x-32 -translate-y-32"></div>
<div class="absolute top-20 right-10 md:right-0 w-60 h-60 bg-orange-300 rounded-full decorative-circle translate-x-20"></div>
    <div class="absolute bottom-0 right-1/2 w-40 h-40 bg-yellow-300 rounded-full decorative-circle translate-x-1/2 translate-y-20"></div>
    
    <div class="relative z-10">
        <div class="text-center mb-12">
            <h1 class="text-5xl font-bold text-orange-custom mb-4">Merhaba, @(ViewBag.FullName ?? "")!</h1>
            <p class="text-lg text-gray-600">Güne başlamak için harika bir zaman. Kelime dağarcığını genişletmeye hazır mısın?</p>
        </div>
        
        @if (Model.TotalCourses > 0)
        {
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
                <div class="bg-pink-light border border-pink-200 rounded-2xl p-6 relative overflow-hidden">
                    <div class="absolute top-4 right-4">
                        <div class="w-10 h-10 bg-orange-custom rounded-lg flex items-center justify-center">
                            <i class="fas fa-book text-white"></i>
                        </div>
                    </div>
                    <div class="mb-2">
                        <h3 class="text-sm font-medium text-gray-600 mb-1">Toplam Eğitim</h3>
                        <div class="text-4xl font-bold text-orange-custom mb-2">@Model.TotalCourses</div>
                        <p class="text-sm text-gray-600">Başarıyla bitirdiğin eğitim sayısı. Yeni bir seviye denemeye hazır!</p>
                    </div>
                </div>
                
                <div class="bg-green-light border border-green-200 rounded-2xl p-6 relative overflow-hidden">
                    <div class="absolute top-4 right-4">
                        <div class="w-10 h-10 bg-green-custom rounded-lg flex items-center justify-center">
                            <i class="fas fa-bullseye text-white"></i>
                        </div>
                    </div>
                    <div class="mb-2">
                        <h3 class="text-sm font-medium text-gray-600 mb-1">Tamamlanan Dersler</h3>
                        <div class="text-4xl font-bold text-green-custom mb-2">@Model.CompletedLessons</div>
                        <p class="text-sm text-gray-600">Öğrendiğin derslerin sayısı. Yeni derslerle kendini geliştirmeye devam et.</p>
                    </div>
                </div>
                
                <div class="bg-yellow-light border border-yellow-200 rounded-2xl p-6 relative overflow-hidden">
                    <div class="absolute top-4 right-4">
                        <div class="w-10 h-10 bg-yellow-custom rounded-lg flex items-center justify-center">
                            <i class="fas fa-chart-line text-white"></i>
                        </div>
                    </div>
                    <div class="mb-2">
                        <h3 class="text-sm font-medium text-gray-600 mb-1">Öğrenilen Kelimeler</h3>
                        <div class="text-4xl font-bold text-yellow-custom mb-2">@Model.LearnedWords</div>
                        <p class="text-sm text-gray-600">Her gün 5 yeni kelimeyle pratik yapmaya ne dersin?</p>
                    </div>
                </div>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
                <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center justify-between mb-2">
                        <h2 class="text-lg font-semibold text-gray-900">Kurs İlerlemelerim</h2>
                        <a href="#" class="text-orange-custom text-sm font-medium flex items-center space-x-1 hover:text-orange-600">
                            <span>Kurs Detayları</span>
                            <i class="fas fa-chevron-right text-xs"></i>
                        </a>
                    </div>
                    <p class="text-xs text-gray-500 mb-4">
                        Oran: bu kurstaki derslerin tamamlanma yüzdelerinin ortalaması
                    </p>

                    
                    <div class="space-y-4">
                        @if(Model.CourseProgresses != null && Model.CourseProgresses.Any())
                        {
                            foreach (var cp in Model.CourseProgresses)
                            {
                                <div class="space-y-2">
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm font-medium text-gray-700">@cp.CourseTitle</span>
                                        <span class="text-sm font-semibold text-orange-custom">@string.Format("{0:0}%", cp.AverageCompletion)</span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="bg-orange-custom h-2 rounded-full transition-all duration-300" style="width: @(cp.AverageCompletion)%"></div>
                                    </div>
                                </div>
                            }
                        }
                       else
                       {
                           <div class="flex items-center gap-3 p-4 rounded-xl bg-gray-50 border border-gray-200">
                               <i class="fas fa-info-circle text-gray-400"></i>
                               <span class="text-sm text-gray-600">Henüz kurs ilerlemesi bulunmuyor.</span>
                           </div>
                       }
                    </div>
                </div>
                
                <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-900">Ders İlerlemelerim</h2>
                    </div>
                    
                    <div class="space-y-4">
                        @if(Model.LessonProgresses != null && Model.LessonProgresses.Any())
                        {
                            foreach (var lp in Model.LessonProgresses)
                            {
                                <div class="space-y-2">
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm font-medium text-gray-700">@lp.LessonTitle</span>
                                        <div class="flex items-center space-x-2">
                                            @if(lp.IsCompleted)
                                            {
                                                <span class="px-2 py-1 bg-green-light text-green-800 text-xs font-medium rounded-full">Tamamlandı</span>
                                                <span class="text-sm font-semibold text-green-custom">@string.Format("{0:0}%", lp.CompletionPercentage)</span>
                                            }
                                            else
                                            {
                                                <span class="px-2 py-1 bg-yellow-light text-yellow-800 text-xs font-medium rounded-full">Devam Ediyor</span>
                                                <span class="text-sm font-semibold text-yellow-custom">@string.Format("{0:0}%", lp.CompletionPercentage)</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="bg-orange-custom h-2 rounded-full transition-all duration-300" style="width: @(lp.CompletionPercentage)%"></div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="flex items-center gap-3 p-4 rounded-xl bg-gray-50 border border-gray-200">
                                <i class="fas fa-info-circle text-gray-400"></i>
                                <span class="text-sm text-gray-600">Henüz ders ilerlemesi bulunmuyor.</span>
                            </div>
                        }

                    </div>
                </div>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center space-x-3 mb-6">
                        <div class="w-12 h-12 bg-orange-light rounded-xl flex items-center justify-center">
                            <i class="fas fa-play text-orange-custom text-lg"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900">Oyun İstatistiklerim</h3>
                    </div>
                    
                    <div class="space-y-4">
                        @if (Model.GameStats != null && Model.GameStats.Any())
                        {
                            foreach (var gs in Model.GameStats)
                            {
                                <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0">
                                    <div>
                                        <div class="font-medium text-gray-900">@gs.GameTitle</div>
                                        <div class="text-sm text-gray-500">@gs.PlayCount kez oynandı</div>
                                    </div>
                                   <div class="text-right">
                                       <div class="text-lg font-semibold text-orange-custom">@string.Format("{0:0.#}", gs.AverageScore)</div>
                                       <div class="text-xs text-gray-500">Oyun başına ortalama skor</div>
                                       <div class="text-[11px] text-gray-400">@gs.PlayCount kayıt üzerinden</div>
                                   </div>
                                </div>
                            }
                        }
                       else
                       {
                           <div class="flex items-center gap-3 p-4 rounded-xl bg-gray-50 border border-gray-200">
                               <i class="fas fa-gamepad text-gray-400"></i>
                               <span class="text-sm text-gray-600">Henüz oyun istatistiği bulunmuyor.</span>
                           </div>
                       }

                    </div>
                </div>
                
                <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center space-x-3 mb-6">
                        <div class="w-12 h-12 bg-blue-light rounded-xl flex items-center justify-center">
                            <i class="fas fa-clock text-blue-custom text-lg"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900">Test İstatistiklerim</h3>
                    </div>
                    
                    <div class="space-y-4">
                        @if (Model.QuizStats != null && Model.QuizStats.Any())
                        {
                            foreach (var qs in Model.QuizStats)
                            {
                                <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0">
                                    <div>
                                        <div class="font-medium text-gray-900">@qs.LessonTitle</div>
                                        <div class="text-sm text-gray-500">@qs.AttemptCount deneme</div>
                                    </div>
                                   <div class="text-right">
                                       <div class="text-lg font-semibold text-blue-custom">@string.Format("{0:0.#}", qs.AverageScore)</div>
                                       <div class="text-xs text-gray-500">Deneme başına ortalama skor</div>
                                       <div class="text-[11px] text-gray-400">@qs.AttemptCount deneme</div>
                                   </div>

                                </div>
                            }
                        }
                        else
                        {
                            <div class="flex items-center gap-3 p-4 rounded-xl bg-gray-50 border border-gray-200">
                                <i class="fas fa-clipboard-check text-gray-400"></i>
                                <span class="text-sm text-gray-600">Henüz test istatistiği bulunmuyor.</span>
                            </div>
                        }

                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <p class="text-gray-600">Henüz kayıtlı eğitiminiz bulunmamaktadır.</p>
            </div>
        }
    </div>
</div>
