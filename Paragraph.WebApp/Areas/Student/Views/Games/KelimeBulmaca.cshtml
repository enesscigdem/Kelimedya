@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kelime Bulmaca - Fullscreen";
}

<style>
    .fullscreen-container {
        width: 100%;
        height: 80vh;
        background: #fffef2;
        position: relative;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        margin-top: 1rem;
    }
    .kelime-header {
        background: linear-gradient(130deg, #ffe5e0, #ffd9bf);
        padding: 1rem;
        border-radius: 8px 8px 0 0;
        font-size: 1.3rem;
        color: #c94a2c;
        text-align: center;
        font-weight: bold;
        box-shadow: inset 0 -1px 0 rgba(0,0,0,0.06);
    }
    .game-area {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        height: calc(100% - 60px);
        position: relative;
    }
    .simple-btn {
        background-color: #f05232;
        color: #fff;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        cursor: pointer;
    }
    .simple-btn:hover {
        background-color: #d74322;
    }
    /* Örnek: Sorular, çoktan seçmeli */
    .question-box {
        background: #fff;
        border: 2px dotted #ccc;
        width: 400px;
        min-height: 200px;
        margin-bottom:1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        border-radius: 8px;
    }
    .option-btn {
        display: block;
        margin: 0.5rem auto;
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        background: #ffc2c2;
        border: none;
        cursor: pointer;
        font-weight: bold;
        color: #333;
    }
    .option-btn:hover {
        background: #ffb0a8;
    }
</style>

<div class="container-xl" style="margin-top:1rem;">
    <div class="fullscreen-container">
        <div class="kelime-header">
            Kelime Bulmaca Oyunu
        </div>
        <div class="game-area">
            <div class="question-box" id="questionBox">
                Soru burada görünecek...
            </div>
            <div id="optionsArea">
                <button class="option-btn">Seçenek 1</button>
                <button class="option-btn">Seçenek 2</button>
                <button class="option-btn">Seçenek 3</button>
                <button class="option-btn">Seçenek 4</button>
            </div>
            <div style="margin-top: 2rem;">
                <button class="simple-btn" onclick="EndGame()">Oyunu Sonlandır</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function EndGame() {
            window.location = '@Url.Action("Index","Games", new {area="Student"})';
        }

        // Kelime Bulmaca logic...
        document.addEventListener("DOMContentLoaded", function(){
            // Oyun verilerini yükle, soruları göster, vb.
        });
    </script>
}
