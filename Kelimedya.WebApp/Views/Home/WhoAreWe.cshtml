    <style>
        .about-section {
            padding: 80px 0;
            background-color: #f9f9f9;
        }

        .about-content {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 50px;
        }

        .about-text {
            flex: 1;
            min-width: 300px;
        }

        .about-text h2 {
            font-size: 36px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .about-text h3 {
            font-size: 28px;
            margin-top: 30px;
            margin-bottom: 15px;
            color: #2c3e50;
        }

        .timeline {
            position: relative;
            padding-left: 30px;
            border-left: 2px solid #eaeaea;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 30px;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -11px;
            top: 5px;
            width: 20px;
            height: 20px;
            background-color: #3498db;
            border-radius: 50%;
            border: 2px solid #fff;
            box-shadow: 0 0 0 2px #3498db;
        }

        .timeline-item h4 {
            font-size: 20px;
            margin-bottom: 5px;
            color: #2c3e50;
        }

        .timeline-item p {
            font-size: 16px;
            color: #7f8c8d;
        }

        .team-section {
            margin-top: 60px;
            text-align: center;
        }

        .team-section h3 {
            font-size: 32px;
            margin-bottom: 30px;
            font-weight: 600;
            color: #2c3e50;
        }

        .team-cards {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
        }

        .team-card {
            background-color: #fff;
            border: 2px solid #eaeaea;
            border-radius: 15px;
            padding: 20px;
            width: 280px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .team-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .team-member {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .team-info h4 {
            font-size: 24px;
            margin-bottom: 5px;
            color: #2c3e50;
        }

        .team-info p {
            font-size: 16px;
            color: #7f8c8d;
            margin-bottom: 10px;
        }

        .team-social a {
            margin: 0 5px;
            color: #3498db;
            font-size: 18px;
            transition: color 0.3s ease;
        }

        .team-social a:hover {
            color: #2980b9;
        }

        .achievements-section {
            margin-top: 60px;
            text-align: center;
        }

        .achievements-section h3 {
            font-size: 32px;
            margin-bottom: 30px;
            font-weight: 600;
            color: #2c3e50;
        }

        .achievements-cards {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
        }

        .achievement-card {
            background-color: #fff;
            border: 2px solid #eaeaea;
            border-radius: 15px;
            padding: 30px 20px;
            width: 220px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .achievement-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .achievement-icon {
            font-size: 40px;
            margin-bottom: 20px;
            color: #e67e22;
        }

        .achievement-card p {
            font-size: 16px;
            color: #7f8c8d;
        }

        @@media (max-width: 768px) {
            .about-content {
                flex-direction: column;
                text-align: center;
            }

            .mission-content, .about-content {
                text-align: center;
            }

            .timeline {
                padding-left: 0;
                border-left: none;
            }

            .timeline-item::before {
                left: 50%;
                transform: translateX(-50%);
            }

            .goals-cards, .team-cards, .achievements-cards, .stats-cards {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const counters = document.querySelectorAll('.stat-number');

            counters.forEach(counter => {
                const updateCount = () => {
                    const target = +counter.getAttribute('data-target');
                    const count = +counter.innerText;
                    const increment = target / 200;

                    if (count < target) {
                        counter.innerText = Math.ceil(count + increment);
                        setTimeout(updateCount, 1);
                    } else {
                        counter.innerText = target;
                    }
                };

                counter.innerText = '0';
                updateCount();
            });
        });
    </script>
