@model Kelimedya.WebApp.Models.CartDto

@{
    Layout = "_Layout";
}

<div class="td_height_120 td_height_lg_80"></div>
<div class="container">
    <!-- Sepet Tablosu -->
    <div class="td_table_1">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr class="td_accent_bg">
                        <th class="td_white_color td_bold">Ürün</th>
                        <th class="td_white_color td_bold">Birim Fiyatı</th>
                        <th class="td_white_color td_bold">Adet</th>
                        <th class="td_white_color td_bold">Ara Toplam</th>
                        <th class="td_white_color td_bold">Kaldır</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.Items != null && Model.Items.Any())
                    {
                        foreach(var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="td_table_meta d-flex align-items-center">
                                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? Url.Content("~/theme/web_UI/assets/img/no_image.png") : item.ImageUrl)"
                                             alt="@item.ProductName" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                        <span class="td_fs_18 td_semibold td_heading_color ms-2">@item.ProductName</span>
                                    </div>
                                </td>
                                <td class="unit-price">@item.Price.ToString("C")</td>
                                <td>
                                    <!-- Miktar Güncelleme Formu -->
                                    <form method="post" asp-controller="Home" asp-action="UpdateCartItem" class="d-inline">
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <div class="td_quantity d-flex align-items-center">
                                            <button class="td_quantity_btn btn btn-outline-secondary btn-sm" type="submit" name="newQuantity" value="@(item.Quantity - 1)" @(item.Quantity <= 1 ? "disabled" : "")>
                                                <i class="fa-solid fa-minus"></i>
                                            </button>
                                            <span class="td_quantity_number mx-2">@item.Quantity</span>
                                            <button class="td_quantity_btn btn btn-outline-secondary btn-sm" type="submit" name="newQuantity" value="@(item.Quantity + 1)">
                                                <i class="fa-solid fa-plus"></i>
                                            </button>
                                        </div>
                                    </form>
                                </td>
                                <td class="line-total">@item.Total.ToString("C")</td>
                                <td>
                                    <!-- Sepetten Kaldırma Formu -->
                                    <form method="post" asp-controller="Home" asp-action="RemoveCartItem">
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <button class="td_table_close_btn btn btn-danger btn-sm" type="submit">
                                            <i class="fa-solid fa-xmark"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">Sepetiniz boş.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="td_height_60 td_height_lg_40"></div>

    <!-- Özet Kart Bölümü: Kupon & Sepet Toplamı & İşlem Butonları -->
    <div class="row td_gap_y_30 td_row_gap_30">
        <!-- Kupon Alanı -->
        <div class="col-xl-6 td_gap_y_50">
            <form action="#" class="td_cupon td_mb_50">
                <input type="text" placeholder="Kupon kodu" class="td_cupon_input form-control" name="couponCode" />
                <button type="submit" class="td_cupon_btn btn btn-secondary">Uygula</button>
            </form>
        </div>
        <!-- Sepet Toplamı -->
        <div class="col-xl-6">
            <div class="td_total_card p-3 rounded shadow-sm">
                <h3 class="td_fs_16 td_mb_2">Sepet Toplamı</h3>
                <div class="td_mb_14">
                    <ul class="td_total_card_list td_mp_0 td_heading_color list-unstyled">
                        <li class="d-flex justify-content-between border-bottom pb-2 mb-2">
                            <span>Ara Toplam</span>
                            <span class="td_bold" id="cartSubtotal">@Model.TotalPrice.ToString("C")</span>
                        </li>
                        <li class="d-flex justify-content-between">
                            <span>Toplam</span>
                            <span class="td_bold td_fs_20" id="cartTotal">@Model.TotalPrice.ToString("C")</span>
                        </li>
                    </ul>
                </div>
                <a asp-controller="Home" asp-action="Payment" class="td_btn td_style_1 td_radius_10 td_medium w-100 btn btn-primary btn-lg">
                    <span class="td_btn_in td_white_color td_accent_bg">
                        <span>Ödeme Yap</span>
                    </span>
                </a>
            </div>
        </div>
    </div>
    <div class="td_height_120 td_height_lg_80"></div>
</div>
