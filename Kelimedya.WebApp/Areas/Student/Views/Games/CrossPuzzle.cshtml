@using System.Security.Claims
@{
    bool embed = Context.Request.Query.ContainsKey("embed");
    Layout = embed 
        ? "~/Areas/Student/Views/Shared/_GameLayout.cshtml"
        : "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Çengel Bulmaca";
    var studentId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .cp-cell {
            width: @(embed ? "20px" : "24px");
            height: @(embed ? "20px" : "24px");
            text-align: center;
            font-weight: bold;
            color: #ea580c;
            border: 1px solid #fdba74;
            background: white;
            font-size: @(embed ? "10px" : "12px");
        }

        .cp-cell:focus {
            outline: none;
            ring: 2px;
            ring-color: #f97316;
            border-color: #f97316;
        }

        .cp-cell.blocked {
            background: #374151;
            border-color: #374151;
        }

        .cp-cell.wrong {
            background: #fee2e2;
            border-color: #fca5a5;
        }

        .cp-num {
            position: absolute;
            top: 0;
            left: 0;
            font-size: @(embed ? "8px" : "10px");
            font-weight: bold;
            color: #ea580c;
            background: #fed7aa;
            border-radius: 0 0 4px 0;
            padding: 1px 2px;
            pointer-events: none;
        }

        #puzzleGrid {
            display: grid;
            gap: 1px;
            position: relative;
        }

        #puzzleGrid .cp-cell {
            position: relative;
        }

        @@if (embed) {
            .game-container {
                height: 100vh;
                max-height: 500px;
                overflow: hidden;
                display: flex;
                flex-direction: column;
            }
            
            .game-header {
                flex-shrink: 0;
                padding: 12px;
                text-align: center;
            }
            
            .game-content {
                flex: 1;
                padding: 12px;
                overflow-y: auto;
                display: flex;
                flex-direction: column;
            }
            
            .puzzle-area {
                flex: 1;
                display: grid;
                grid-template-columns: 1fr 200px;
                gap: 12px;
                margin-bottom: 12px;
            }
            
            .grid-container {
                display: flex;
                justify-content: center;
                align-items: center;
                overflow: auto;
            }
            
            .clues-container {
                display: flex;
                flex-direction: column;
                gap: 8px;
            }
            
            .controls-area {
                flex-shrink: 0;
            }
        }
    </style>
</head>
<body>
    <div class="@(embed ? "game-container bg-gradient-to-br from-orange-50 to-yellow-50" : "relative min-h-screen bg-gradient-to-br from-orange-50 via-white to-yellow-50")">
        @if (!embed)
        {
            <!-- Decorative Circles for non-embed -->
            <div class="absolute top-0 left-0 w-80 h-80 bg-orange-300 rounded-full opacity-10 -translate-x-32 -translate-y-32" style="filter: blur(60px);"></div>
            <div class="absolute top-20 right-0 w-60 h-60 bg-yellow-300 rounded-full opacity-10 translate-x-20" style="filter: blur(60px);"></div>
        }
        
        @if (embed)
        {
            <!-- Compact Header for Embed -->
            <div class="game-header">
                <h2 class="text-xl font-bold text-orange-600 mb-2">Çengel Bulmaca</h2>
                <div class="w-full bg-gray-200 rounded-full h-2 max-w-xs mx-auto">
                    <div class="bg-gradient-to-r from-orange-500 to-orange-600 h-2 rounded-full" style="width: 100%;"></div>
                </div>
            </div>
            
            <!-- Compact Game Content -->
            <div class="game-content">
                <div id="gameRoot" data-student-id="@studentId" data-game-id="@ViewData["GameId"]" data-embed="@embed.ToString().ToLower()">
                    
                    <div class="puzzle-area">
                        <!-- Puzzle Grid -->
                        <div class="grid-container">
                            <div class="bg-white/90 rounded-xl p-3 border border-orange-200 overflow-auto">
                                <div id="puzzleGrid" class="inline-block"></div>
                            </div>
                        </div>
                        
                        <!-- Sidebar with Clues -->
                        <div class="clues-container">
                            <!-- Across Clues -->
                            <div class="bg-orange-50 rounded-xl p-3 border border-orange-200">
                                <h3 class="text-sm font-bold text-orange-800 mb-2 flex items-center gap-1">
                                    <i class="fas fa-arrow-right text-xs"></i>
                                    Yatay
                                </h3>
                                <ul id="across-clues" class="space-y-1 text-xs text-orange-700 max-h-24 overflow-y-auto"></ul>
                            </div>
                            
                            <!-- Down Clues -->
                            <div class="bg-yellow-50 rounded-xl p-3 border border-yellow-200">
                                <h3 class="text-sm font-bold text-yellow-800 mb-2 flex items-center gap-1">
                                    <i class="fas fa-arrow-down text-xs"></i>
                                    Dikey
                                </h3>
                                <ul id="down-clues" class="space-y-1 text-xs text-yellow-700 max-h-24 overflow-y-auto"></ul>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Controls -->
                    <div class="controls-area">
                        <div class="flex justify-center gap-2 mb-3">
                            <button id="cpCheck" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white py-2 px-3 rounded-lg font-bold hover:from-orange-600 hover:to-orange-700 transition-all duration-200 text-sm">
                                Kontrol Et
                            </button>
                            <button id="cpReveal" class="bg-gradient-to-r from-gray-500 to-gray-600 text-white py-2 px-3 rounded-lg font-bold hover:from-gray-600 hover:to-gray-700 transition-all duration-200 text-sm">
                                Cevabı Göster
                            </button>
                        </div>
                        
                        <!-- Feedback Area -->
                        <div id="cpFeedback" class="text-center text-lg font-bold"></div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Full Page Layout -->
            <div id="gameRoot" class="relative z-10 max-w-6xl mx-auto px-4 py-8"
                 data-student-id="@studentId"
                 data-game-id="@ViewData["GameId"]"
                 data-embed="@embed.ToString().ToLower()">
                
                <!-- Game Header -->
                <header class="text-center mb-8">
                    <h2 class="text-4xl font-bold text-orange-600 mb-2">Çengel Bulmaca</h2>
                    <p class="text-lg text-gray-600 mb-4">Yatay ve dikey kelimeleri doldurarak bulmacayı tamamlayın.</p>
                    <div class="w-full bg-gray-200 rounded-full h-3 max-w-md mx-auto">
                        <div class="bg-gradient-to-r from-orange-500 to-orange-600 h-3 rounded-full transition-all duration-300" style="width: 100%"></div>
                    </div>
                </header>
                
                <!-- Game Card -->
                <div class="bg-white/95 backdrop-blur-sm rounded-3xl shadow-2xl border border-orange-100 p-8">
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                        <!-- Puzzle Grid -->
                        <div class="lg:col-span-2">
                            <div class="bg-gradient-to-br from-orange-50 to-yellow-50 rounded-2xl p-6 flex justify-center border border-orange-200 overflow-auto">
                                <div id="puzzleGrid" class="inline-block"></div>
                            </div>
                        </div>
                        
                        <!-- Sidebar with Clues -->
                        <div class="space-y-6">
                            <!-- Across Clues -->
                            <div class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-2xl p-6 border border-orange-200">
                                <h3 class="text-xl font-bold text-orange-800 mb-4 flex items-center gap-2">
                                    <i class="fas fa-arrow-right"></i>
                                    Yatay
                                </h3>
                                <ul id="across-clues" class="space-y-2 text-sm text-orange-700"></ul>
                            </div>
                            
                            <!-- Down Clues -->
                            <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-2xl p-6 border border-yellow-200">
                                <h3 class="text-xl font-bold text-yellow-800 mb-4 flex items-center gap-2">
                                    <i class="fas fa-arrow-down"></i>
                                    Dikey
                                </h3>
                                <ul id="down-clues" class="space-y-2 text-sm text-yellow-700"></ul>
                            </div>
                            
                            <!-- Controls -->
                            <div class="space-y-3">
                                <button id="cpCheck" class="w-full bg-gradient-to-r from-orange-500 to-orange-600 text-white py-3 px-4 rounded-xl font-bold hover:from-orange-600 hover:to-orange-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
                                    Kontrol Et
                                </button>
                                <button id="cpReveal" class="w-full bg-gradient-to-r from-gray-500 to-gray-600 text-white py-3 px-4 rounded-xl font-bold hover:from-gray-600 hover:to-gray-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
                                    Cevabı Göster
                                </button>
                                <button id="cpBack" class="w-full bg-gradient-to-r from-gray-100 to-gray-200 text-gray-700 py-3 px-4 rounded-xl font-bold hover:from-gray-200 hover:to-gray-300 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
                                    Geri Dön
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Feedback Area -->
                    <div id="cpFeedback" class="mt-8 text-center text-xl font-bold"></div>
                </div>
            </div>
        }
    </div>

    @section Scripts {
        <script type="module">
            import {initCrossPuzzle} from '@Url.Content("~/js/games/CrossPuzzle.js")';
            const root = document.getElementById('gameRoot');
            initCrossPuzzle(
                root.dataset.studentId,
                root.dataset.gameId
            );
        </script>
    }
</body>
</html>
