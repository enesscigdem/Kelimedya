@using System.Security.Claims
@{
    bool popUp = Context.Request.Query.ContainsKey("popUp");
    string singleWord = Context.Request.Query["word"];
    string wordId = Context.Request.Query["id"];
    Layout = popUp
        ? "~/Areas/Student/Views/Shared/_GameLayout.cshtml"
        : "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Boşluk Doldurma";
    var studentId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .fb-input {
            border-bottom: 2px solid #fb923c;
            background: transparent;
            text-align: center;
            font-weight: bold;
            color: #ea580c;
            margin: 0 2px;
            padding: 4px 8px;
            min-width: 100px;
            font-size: 16px;
        }

        .fb-input:focus {
            outline: none;
            border-bottom-color: #f97316;
        }

        .fb-input.correct {
            border-bottom-color: #22c55e;
            color: #16a34a;
        }

        .fb-input.wrong {
            border-bottom-color: #ef4444;
            color: #dc2626;
        }
    </style>
</head>
<body>
<div class="relative min-h-screen bg-gradient-to-br from-orange-50 via-white to-yellow-50">
    <div class="absolute top-0 left-0 w-80 h-80 bg-orange-300 rounded-full opacity-10 -translate-x-32 -translate-y-32" style="filter: blur(60px);"></div>
    <div class="absolute top-20 right-0 w-60 h-60 bg-yellow-300 rounded-full opacity-10 translate-x-20" style="filter: blur(60px);"></div>

    <div id="gameRoot" class="relative z-10 max-w-4xl mx-auto px-4 py-8"
         data-student-id="@studentId"
         data-game-id="@ViewData["GameId"]"
         data-word="@singleWord"
         data-word-id="@wordId"
         data-embed="@popUp.ToString().ToLower()">

        @if (!popUp)
        {
            <header class="text-center mb-8">
                <h2 class="text-4xl font-bold text-orange-600 mb-4">Boşluk Doldurma Oyunu</h2>
                <div class="w-full bg-gray-200 rounded-full h-3 max-w-md mx-auto">
                    <div class="bg-gradient-to-r from-orange-500 to-orange-600 h-3 rounded-full transition-all duration-300"
                         style="width: calc( (var(--gb-current, 1) / var(--gb-total, 1)) * 100% );">
                    </div>
                </div>
            </header>
        }
        <div class="bg-white/95 backdrop-blur-sm rounded-3xl shadow-2xl border border-orange-100 p-8">
            <div class="bg-gradient-to-br from-orange-50 to-yellow-50 rounded-2xl p-8 mb-8 border border-orange-200">
                <div id="fbSentence" class="text-xl leading-relaxed text-orange-800 text-center font-medium">
                </div>
            </div>

            <div class="flex flex-wrap justify-center gap-4 mb-6">
                <button id="fbCheck" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-8 py-3 rounded-xl font-bold hover:from-orange-600 hover:to-orange-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
                    Kontrol Et
                </button>
                <button id="fbReveal" class="bg-gradient-to-r from-gray-500 to-gray-600 text-white px-8 py-3 rounded-xl font-bold hover:from-gray-600 hover:to-gray-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
                    Cevabı Göster
                </button>
                <button id="fbNext" class="bg-gradient-to-r from-gray-100 to-gray-200 text-gray-700 px-8 py-3 rounded-xl font-bold hover:from-gray-200 hover:to-gray-300 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
                    Sonraki
                </button>
            </div>

            <div id="fbFeedback" class="text-center text-xl font-bold"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module">
            import {initFillBlanks} from '@Url.Content("~/js/games/FillBlanks.js")';
            const root = document.getElementById('gameRoot');
            initFillBlanks(
                root.dataset.studentId,
                root.dataset.gameId,
                root.dataset.word,
                root.dataset.wordId,
                (current, total) => {
                    root.style.setProperty('--gb-current', current);
                    root.style.setProperty('--gb-total', total);
                }
            );
        </script>
}

</body>
</html>