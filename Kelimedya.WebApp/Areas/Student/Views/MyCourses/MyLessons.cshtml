@model Kelimedya.WebApp.Areas.Student.Models.MyLessonsViewModel
@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Course.Title;
}

<div class="relative min-h-screen bg-gradient-to-br from-orange-50 via-white to-yellow-50">
    <!-- Advanced Decorative Elements -->
    <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-orange-200 to-orange-300 rounded-full opacity-20 -translate-x-48 -translate-y-48 blur-3xl"></div>
    <div class="absolute top-32 right-0 w-80 h-80 bg-gradient-to-bl from-yellow-200 to-orange-200 rounded-full opacity-15 translate-x-32 blur-3xl"></div>
    <div class="absolute bottom-0 left-1/3 w-64 h-64 bg-gradient-to-tr from-orange-300 to-yellow-300 rounded-full opacity-10 translate-y-32 blur-3xl"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-4 h-4 bg-orange-300 rounded-full opacity-30 animate-pulse"></div>
    <div class="absolute top-40 right-32 w-3 h-3 bg-yellow-400 rounded-full opacity-40 animate-bounce"></div>
    <div class="absolute bottom-32 left-1/4 w-2 h-2 bg-orange-400 rounded-full opacity-50"></div>
    
    <div class="relative z-10 p-6">
        <!-- Premium Header Section -->
        <div class="mb-12">
            <!-- Advanced Progress Section -->
            
                <div class="bg-white/90 backdrop-blur-sm rounded-3xl p-8 shadow-xl border border-orange-100 relative overflow-hidden">
                    <!-- Background Pattern -->
                    <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-orange-100 to-transparent rounded-full -translate-y-16 translate-x-16"></div>
                    <div class="absolute bottom-0 left-0 w-24 h-24 bg-gradient-to-tr from-yellow-100 to-transparent rounded-full translate-y-12 -translate-x-12"></div>
                    
                    <div class="relative z-10">
                        <div class="flex items-center justify-between mb-6">
                            <div>
                                <h3 class="text-2xl font-bold text-gray-900 mb-2">Kurs İlerlemen</h3>
                                <p class="text-gray-600">Harika gidiyorsun! Devam et 🚀</p>
                            </div>
                            <div class="text-right">
                                <div class="text-4xl font-bold bg-gradient-to-r from-orange-600 to-orange-500 bg-clip-text text-transparent">
                                    @string.Format("{0:0}%", 37)
                                </div>
                                <div class="text-sm text-gray-500">Tamamlandı</div>
                            </div>
                        </div>
                        
                        <!-- Advanced Progress Bar -->
                        <div class="relative">
                            <div class="w-full bg-gray-200 rounded-full h-4 shadow-inner">
                                <div class="bg-gradient-to-r from-orange-500 via-orange-400 to-yellow-400 h-4 rounded-full transition-all duration-1000 ease-out shadow-lg relative overflow-hidden" 
                                     style="width: 37%">
                                    <!-- Shimmer Effect -->
                                    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent animate-pulse"></div>
                                </div>
                            </div>
                            <!-- Progress Markers -->
                            <div class="flex justify-between mt-2 text-xs text-gray-500">
                                <span>Başlangıç</span>
                                <span>%25</span>
                                <span>%50</span>
                                <span>%75</span>
                                <span>Tamamlandı</span>
                            </div>
                        </div>
                        
                        <!-- Stats Grid -->
                        <div class="grid grid-cols-3 gap-4 mt-6">
                            <div class="text-center p-4 bg-gradient-to-br from-orange-50 to-orange-100 rounded-2xl">
                                <div class="text-2xl font-bold text-orange-600">@(Model.Lessons?.Count(l => l.Progress?.IsCompleted == true) ?? 0)</div>
                                <div class="text-sm text-gray-600">Tamamlanan Ders</div>
                            </div>
                            <div class="text-center p-4 bg-gradient-to-br from-green-50 to-green-100 rounded-2xl">
                                <div class="text-2xl font-bold text-green-600">111</div>
                                <div class="text-sm text-gray-600">Öğrenilen Kelime</div>
                            </div>
                            <div class="text-center p-4 bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-2xl">
                                <div class="text-2xl font-bold text-yellow-600">@(Model.Lessons?.Count ?? 0)</div>
                                <div class="text-sm text-gray-600">Toplam Ders</div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        
        <!-- Premium Lessons Grid -->
        <div class="grid grid-cols-1 xl:grid-cols-2 gap-8">
            @if (Model.Lessons?.Any() == true)
            {
                var ordered = Model.Lessons.OrderBy(l => l.Lesson.SequenceNo).ToList();
                for (int i = 0; i < ordered.Count; i++)
                {
                    var lesson = ordered[i];
                    bool unlocked = i == 0 || ordered[i - 1].Progress?.IsCompleted == true;
                    bool isCompleted = lesson.Progress?.IsCompleted == true;
                    bool isInProgress = lesson.Progress != null && !isCompleted;
                    
                    <div class="group lesson-card bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 @(unlocked ? "hover:-translate-y-2 hover:scale-[1.02]" : "opacity-60") relative">
                        <!-- Card Background Pattern -->
                        <div class="absolute inset-0 bg-gradient-to-br from-orange-50/50 via-transparent to-yellow-50/30 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                        
                        <!-- Lock Overlay -->
                        @if (!unlocked)
                        {
                            <div class="absolute inset-0 bg-gray-900/20 backdrop-blur-[1px] z-20 flex items-center justify-center">
                                <div class="bg-white/90 rounded-2xl p-4 shadow-lg">
                                    <i class="fas fa-lock text-2xl text-gray-600 mb-2"></i>
                                    <p class="text-sm text-gray-600 text-center">Önceki dersi<br>tamamlayın</p>
                                </div>
                            </div>
                        }
                        
                        <div class="relative z-10 p-8">
                            <div class="flex items-start gap-6">
                                <!-- Enhanced Lesson Visual -->
                                <div class="relative flex-shrink-0">
                                    <div class="w-24 h-24 bg-gradient-to-br from-orange-400 to-orange-600 rounded-2xl flex items-center justify-center shadow-lg relative overflow-hidden">
                                        @if (!string.IsNullOrEmpty(lesson.Lesson.ImageUrl))
                                        {
                                            <img src="@lesson.Lesson.ImageUrl" 
                                                 alt="@lesson.Lesson.Title" 
                                                 class="w-full h-full object-cover rounded-2xl">
                                        }
                                        else
                                        {
                                            <i class="fas fa-book-open text-white text-2xl"></i>
                                        }
                                        
                                        <!-- Shimmer Effect -->
                                        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
                                    </div>
                                    
                                    <!-- Lesson Number Badge -->
                                    <div class="absolute -top-2 -right-2 w-8 h-8 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full flex items-center justify-center shadow-lg">
                                        <span class="text-white text-sm font-bold">@lesson.Lesson.SequenceNo</span>
                                    </div>
                                </div>
                                
                                <!-- Lesson Content -->
                                <div class="flex-1 min-w-0">
                                    <!-- Header -->
                                    <div class="flex items-start justify-between mb-4">
                                        <div>
                                            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-orange-600 transition-colors duration-300">
                                                @lesson.Lesson.Title
                                            </h3>
                                            <p class="text-gray-600 text-sm line-clamp-2">@lesson.Lesson.Description</p>
                                        </div>
                                        
                                        <!-- Status Badge -->
                                        @if (isCompleted)
                                        {
                                            <div class="bg-gradient-to-r from-green-500 to-green-600 text-white rounded-full px-4 py-2 text-sm font-medium flex items-center gap-2 shadow-lg">
                                                <i class="fas fa-check-circle"></i>
                                                Tamamlandı
                                            </div>
                                        }
                                        else if (isInProgress)
                                        {
                                            <div class="bg-gradient-to-r from-yellow-500 to-orange-500 text-white rounded-full px-4 py-2 text-sm font-medium flex items-center gap-2 shadow-lg">
                                                <i class="fas fa-clock"></i>
                                                Devam Ediyor
                                            </div>
                                        }
                                        else if (unlocked)
                                        {
                                            <div class="bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-full px-4 py-2 text-sm font-medium flex items-center gap-2 shadow-lg">
                                                <i class="fas fa-play"></i>
                                                Hazır
                                            </div>
                                        }
                                    </div>
                                    
                                    <!-- Enhanced Stats -->
                                    <div class="flex items-center gap-6 mb-4">
                                        <div class="flex items-center gap-2 text-sm text-gray-600">
                                            <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center">
                                                <i class="fas fa-font text-orange-600"></i>
                                            </div>
                                            <span class="font-medium">@(lesson.Lesson.WordCards?.Count ?? 0) Kelime</span>
                                        </div>
                                        <div class="flex items-center gap-2 text-sm text-gray-600">
                                            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                                                <i class="fas fa-gamepad text-blue-600"></i>
                                            </div>
                                            <span class="font-medium">@lesson.Lesson.GameCount Oyun</span>
                                        </div>
                                    </div>
                                    
                                    <!-- Advanced Progress Bar -->
                                    @if (lesson.Progress != null)
                                    {
                                        <div class="mb-6">
                                            <div class="flex justify-between items-center mb-2">
                                                <span class="text-sm font-medium text-gray-700">İlerleme</span>
                                                <span class="text-sm font-bold text-orange-600">@string.Format("{0:0}%", lesson.Progress.CompletionPercentage)</span>
                                            </div>
                                            <div class="w-full bg-gray-200 rounded-full h-3 shadow-inner">
                                                <div class="bg-gradient-to-r from-orange-500 to-orange-400 h-3 rounded-full transition-all duration-700 shadow-sm relative overflow-hidden" 
                                                     style="width: @(lesson.Progress.CompletionPercentage)%">
                                                    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent animate-pulse"></div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    
                                    <!-- Enhanced Action Button -->
                                    @if (isCompleted)
                                    {
                                        <button class="w-full bg-gradient-to-r from-green-500 to-green-600 text-white py-4 px-6 rounded-2xl font-bold flex items-center justify-center gap-3 shadow-lg cursor-default">
                                            <i class="fas fa-trophy text-xl"></i>
                                            Tamamlandı
                                        </button>
                                    }
                                    else if (unlocked)
                                    {
                                        <a class="w-full bg-gradient-to-r from-orange-500 to-orange-600 text-white py-4 px-6 rounded-2xl font-bold hover:from-orange-600 hover:to-orange-700 transition-all duration-300 flex items-center justify-center gap-3 shadow-lg hover:shadow-xl transform hover:scale-105"
                                           asp-action="LessonDetail" 
                                           asp-route-id="@lesson.Lesson.Id">
                                            <i class="fas fa-@(isInProgress ? "play" : "rocket") text-xl"></i>
                                            @(isInProgress ? "Devam Et" : "Başla")
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="w-full bg-gray-200 text-gray-500 py-4 px-6 rounded-2xl font-bold flex items-center justify-center gap-3 cursor-not-allowed">
                                            <i class="fas fa-lock text-xl"></i>
                                            Kilitli
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-span-full">
                    <div class="text-center py-20">
                        <div class="w-32 h-32 mx-auto mb-8 bg-gradient-to-br from-orange-100 to-orange-200 rounded-full flex items-center justify-center">
                            <i class="fas fa-info-circle text-6xl text-orange-400"></i>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-700 mb-4">Henüz bu kursta ders bulunmuyor</h3>
                        <p class="text-gray-500 text-lg">Lütfen daha sonra tekrar kontrol edin</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
@@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
}

.lesson-card {
    animation: float 6s ease-in-out infinite;
}

.lesson-card:nth-child(even) {
    animation-delay: -3s;
}

.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
