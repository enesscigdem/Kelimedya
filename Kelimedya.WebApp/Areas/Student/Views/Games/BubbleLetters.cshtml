@using System.Security.Claims
@{
    bool embed = Context.Request.Query.ContainsKey("embed");
    string singleWord = Context.Request.Query["word"];
    string wordId = Context.Request.Query["id"];
    Layout = embed 
      ? "~/Areas/Student/Views/Shared/_GameLayout.cshtml" 
      : "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kabarcık Harfler";
    var studentId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<link href="~/css/BubbleLetters.css" rel="stylesheet" />

<div id="gameRoot" class="gb-container container-xl"
     data-student-id="@studentId"
     data-game-id="@ViewData["GameId"]"
     data-word="@singleWord"
     data-word-id="@wordId"
     data-embed="@embed.ToString().ToLower()">

  <header class="gb-header">
    <h2>Kabarcık Harfler</h2>
    <div class="gb-progress">
      <div class="gb-progress-bar" style="width:100%"></div>
    </div>
    <p class="gb-subtitle">Doğru kelimeyi oluşturmak için baloncuklara tıklayın veya klavyenizle yazın.</p>
  </header>

  <div class="gb-gamecard bl-gamecard">
    <div class="bl-hint">
      <div class="hint-line"><strong>Eş anlamı:</strong> <span id="hintSynonym"></span></div>
      <div class="hint-line"><strong>Anlamı:</strong> <span id="hintDefinition"></span></div>
      <div class="hint-line"><strong>Cümle:</strong> <em id="hintSentence"></em></div>
    </div>

    <div class="bl-target" id="targetSlots"></div>
    <div class="bl-bubbles" id="bubblesArea"></div>

    <div class="gb-controls bl-controls">
      <button id="blClear"  class="btn-secondary">Temizle</button>
      <button id="blSubmit" class="btn-primary">Kontrol Et</button>
      <button id="blReveal" class="btn-outline">Cevabı Göster</button>
    </div>

    <div class="gb-feedback bl-feedback" id="blFeedback"></div>

    <div class="bl-footer gb-controls">
      @if(!embed) {
        <button id="blBack" class="btn-secondary">Geri Dön</button>
        <button id="blNext" class="btn-primary">Sonraki</button>
      }
    </div>
  </div>
</div>

@section Scripts {
<script type="module">
import {initBubbleLetters} from '@Url.Content("~/js/games/BubbleLetters.js")';
const root = document.getElementById('gameRoot');
initBubbleLetters(
  root.dataset.studentId,
  root.dataset.gameId,
  root.dataset.word,
  root.dataset.wordId
);
</script>
}
