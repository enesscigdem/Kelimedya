@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Adam Asmaca - Fullscreen";
}

<style>
    /* Tüm sayfayı kaplayan container */
    .fullscreen-container {
        width: 100%;
        height: 80vh; /* ya da calc(100vh - navbar-height) */
        background: #fff8f4;
        position: relative;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        margin-top: 1rem;
    }
    .asmaca-header {
        background: linear-gradient(130deg, #ffd9bf, #ffe5e0);
        padding: 1rem;
        border-radius: 8px 8px 0 0;
        font-size: 1.3rem;
        color: #c94a2c;
        text-align: center;
        font-weight: bold;
        box-shadow: inset 0 -1px 0 rgba(0,0,0,0.06);
    }
    .game-area {
        padding: 2rem;
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(100% - 60px); /* header approx */
        position: relative;
    }
    .simple-btn {
        background-color: #f05232;
        color: #fff;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        cursor: pointer;
    }
    .simple-btn:hover {
        background-color: #d74322;
    }
    /* Örnek: Merkezde AdamAsmacayla ilgili canvas, harf butonları, vb. */
    .hangman-canvas {
        background: #fff;
        border: 2px dashed #ccc;
        width: 300px;
        height: 300px;
        margin-right: 2rem;
    }
    /* Harfler */
    .letters {
        display: flex;
        flex-wrap: wrap;
        max-width: 300px;
        gap: 0.5rem;
    }
    .letter-btn {
        padding: 0.4rem 0.8rem;
        border-radius: 4px;
        background: #ffc2c2;
        border: none;
        cursor: pointer;
        font-weight: bold;
    }
</style>

<div class="container-xl" style="margin-top:1rem;">
    <div class="fullscreen-container">
        <div class="asmaca-header">
            Adam Asmaca Oyunu
        </div>
        <div class="game-area">
            
            <div class="hangman-canvas" id="hangmanCanvas">
                
            </div>
            <div>
                <div class="letters">
                    
                    @foreach (var c in "ABCÇDEFGĞHIİJKLMNOÖPRSŞTUÜVYZ".ToCharArray())
                    {
                        <button class="letter-btn">@c</button>
                    }
                </div>
                <div style="margin-top:1rem;">
                    <button class="simple-btn" onclick="EndGame()">Oyunu Sonlandır</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function EndGame() {
            // Örnek: Yönlendirme ya da popup
            window.location = '@Url.Action("Index","Games", new {area="Student"})';
        }

        // Burada AdamAsmaca oyununun JS logic'i, canvas çizimi vb. devreye girebilir
        document.addEventListener("DOMContentLoaded", function(){
            // init game...
        });
    </script>
}
