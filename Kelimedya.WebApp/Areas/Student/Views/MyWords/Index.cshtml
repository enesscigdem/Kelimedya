@model Kelimedya.WebApp.Areas.Student.Models.MyWordsViewModel
@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kelime Kartlarım";
}

<div class="relative min-h-screen bg-gradient-to-br from-orange-50 via-white to-yellow-50">
    <!-- Premium Decorative Elements -->
    <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-orange-200 to-orange-300 rounded-full opacity-15 -translate-x-48 -translate-y-48 blur-3xl"></div>
    <div class="absolute top-32 right-0 w-80 h-80 bg-gradient-to-bl from-yellow-200 to-orange-200 rounded-full opacity-10 translate-x-32 blur-3xl"></div>
    <div class="absolute bottom-0 left-1/3 w-64 h-64 bg-gradient-to-tr from-orange-300 to-yellow-300 rounded-full opacity-20 translate-y-32 blur-3xl"></div>
    
    <!-- Animated Floating Elements -->
    <div class="absolute top-20 left-20 w-3 h-3 bg-orange-400 rounded-full opacity-40 animate-bounce" style="animation-delay: 0s;"></div>
    <div class="absolute top-40 right-32 w-2 h-2 bg-yellow-500 rounded-full opacity-50 animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-32 left-1/4 w-4 h-4 bg-orange-300 rounded-full opacity-30 animate-ping" style="animation-delay: 2s;"></div>
    
    <div class="relative z-10 p-6">
        <!-- Ultra Premium Header -->
        <div class="mb-12">
            <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-8">
                <!-- Title Section -->
                <div class="flex-1">
                    <div class="flex items-center gap-4 mb-6">
                        <div class="relative">
                            <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center shadow-xl">
                                <i class="fas fa-book-open text-white text-2xl"></i>
                            </div>
                            <div class="absolute -top-1 -right-1 w-6 h-6 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full flex items-center justify-center">
                                <i class="fas fa-star text-white text-xs"></i>
                            </div>
                        </div>
                        <div>
                            <h1 class="text-5xl font-bold bg-gradient-to-r from-orange-600 via-orange-500 to-yellow-500 bg-clip-text text-transparent mb-2">
                                Kelime Koleksiyonum
                            </h1>
                            <p class="text-xl text-gray-600">Öğrendiğin kelimelerin muhteşem arşivi ✨</p>
                        </div>
                    </div>
                </div>
                
                <!-- Advanced Search & Controls -->
                <div class="flex flex-col sm:flex-row gap-4 lg:min-w-[400px]">
                    <!-- Premium Search Box -->
                    <div class="relative flex-1">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fas fa-search text-orange-400"></i>
                        </div>
                        <input type="text" 
                               id="searchInput"
                               class="w-full pl-12 pr-4 py-4 border-2 border-orange-200 rounded-2xl text-sm bg-white/80 backdrop-blur-sm focus:outline-none focus:ring-4 focus:ring-orange-200 focus:border-orange-400 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
                               placeholder="Kelime ara...">
                        <div class="absolute inset-0 bg-gradient-to-r from-orange-500/10 to-yellow-500/10 rounded-2xl opacity-0 hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
                    </div>
                    
                    <!-- Premium Sort Button -->
                    <button id="sortBtn" 
                            class="px-6 py-4 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-2xl font-bold hover:from-orange-600 hover:to-orange-700 transition-all duration-300 flex items-center gap-3 shadow-lg hover:shadow-xl transform hover:scale-105">
                        <i class="fas fa-sort-alpha-down"></i>
                        Sırala
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Premium Stats Dashboard -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12">
            <div class="group bg-white/90 backdrop-blur-sm rounded-3xl p-6 shadow-xl border border-orange-100 text-center hover:shadow-2xl transition-all duration-500 hover:-translate-y-1 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-orange-500/5 to-orange-600/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="relative z-10">
                    <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <i class="fas fa-layer-group text-white"></i>
                    </div>
                    <div class="text-3xl font-bold text-gray-900 mb-2">@Model.LearnedWords.Count</div>
                    <div class="text-sm text-gray-600 font-medium">Toplam Kart</div>
                </div>
            </div>
            
            <div class="group bg-white/90 backdrop-blur-sm rounded-3xl p-6 shadow-xl border border-orange-100 text-center hover:shadow-2xl transition-all duration-500 hover:-translate-y-1 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-green-600/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="relative z-10">
                    <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <i class="fas fa-check-circle text-white"></i>
                    </div>
                    <div class="text-3xl font-bold text-green-600 mb-2">@Model.LearnedWords.Count(x => x.Progress.IsLearned)</div>
                    <div class="text-sm text-gray-600 font-medium">Öğrenilenler</div>
                </div>
            </div>
            
            <div class="group bg-white/90 backdrop-blur-sm rounded-3xl p-6 shadow-xl border border-orange-100 text-center hover:shadow-2xl transition-all duration-500 hover:-translate-y-1 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-yellow-500/5 to-yellow-600/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="relative z-10">
                    <div class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <i class="fas fa-calendar-day text-white"></i>
                    </div>
                    <div class="text-3xl font-bold text-yellow-600 mb-2">@Model.LearnedWords.Count(x => x.Progress.LastSeenDate?.Date == DateTime.Today)</div>
                    <div class="text-sm text-gray-600 font-medium">Bugün Çalışılan</div>
                </div>
            </div>
            
            <div class="group bg-white/90 backdrop-blur-sm rounded-3xl p-6 shadow-xl border border-orange-100 text-center hover:shadow-2xl transition-all duration-500 hover:-translate-y-1 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-blue-600/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="relative z-10">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                        <i class="fas fa-eye text-white"></i>
                    </div>
                    <div class="text-3xl font-bold text-blue-600 mb-2">@Model.LearnedWords.Sum(x => x.Progress.ViewCount)</div>
                    <div class="text-sm text-gray-600 font-medium">Toplam Gösterim</div>
                </div>
            </div>
        </div>
        
        <!-- Ultra Premium Words Grid -->
        <div id="cardsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            @if(Model.LearnedWords?.Any() == true)
            {
                @foreach (var item in Model.LearnedWords)
                {
                    <div class="group word-card bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 hover:scale-105 relative">
                        <!-- Card Background Effects -->
                        <div class="absolute inset-0 bg-gradient-to-br from-orange-50/50 via-transparent to-yellow-50/30 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                        
                        <!-- Premium Progress Header -->
                        <div class="relative bg-gradient-to-r from-orange-500 to-orange-600 p-6 text-white overflow-hidden">
                            <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
                            <div class="absolute bottom-0 left-0 w-16 h-16 bg-white/5 rounded-full translate-y-8 -translate-x-8"></div>
                            <div class="relative z-10 flex items-center justify-between">
                                <div>
                                    <span class="text-sm font-medium opacity-90">Gösterim Sayısı</span>
                                    <div class="text-2xl font-bold">@item.Progress.ViewCount</div>
                                </div>
                                <div class="w-12 h-12 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
                                    <i class="fas fa-chart-line text-xl"></i>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Enhanced Word Visual -->
                        <div class="relative h-40 bg-gradient-to-br from-orange-50 to-orange-100 overflow-hidden">
                            @if (!string.IsNullOrEmpty(item.WordCard.ImageUrl))
                            {
                                <img src="@item.WordCard.ImageUrl" 
                                     alt="@item.WordCard.Word" 
                                     class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
                                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center relative">
                                    <div class="w-20 h-20 bg-gradient-to-br from-orange-500 to-orange-600 rounded-3xl flex items-center justify-center shadow-xl group-hover:scale-110 group-hover:rotate-6 transition-all duration-500">
                                        <span class="text-white text-2xl font-bold">@item.WordCard.Word.Substring(0, 1).ToUpper()</span>
                                    </div>
                                    <!-- Decorative Elements -->
                                    <div class="absolute top-4 left-4 w-3 h-3 bg-orange-300 rounded-full opacity-60"></div>
                                    <div class="absolute bottom-4 right-4 w-2 h-2 bg-yellow-400 rounded-full opacity-80"></div>
                                </div>
                            }
                            
                            <!-- Learned Badge -->
                            @if(item.Progress.IsLearned)
                            {
                                <div class="absolute top-4 right-4">
                                    <div class="bg-green-500 text-white rounded-full px-3 py-1 text-xs font-bold flex items-center gap-2 shadow-lg backdrop-blur-sm">
                                        <i class="fas fa-trophy"></i>
                                        Öğrenildi
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Premium Content -->
                        <div class="relative z-10 p-6">
                            <h3 class="word-title text-xl font-bold text-gray-900 mb-3 group-hover:text-orange-600 transition-colors duration-300">
                                @item.WordCard.Word
                            </h3>
                            <p class="word-definition text-gray-600 text-sm mb-4 line-clamp-2 leading-relaxed">
                                @item.WordCard.Definition
                            </p>
                            
                            <!-- Enhanced Meta Info -->
                            <div class="flex items-center justify-between text-xs mb-4">
                                <div class="flex items-center gap-2 bg-gray-100 rounded-full px-3 py-2">
                                    <i class="fas fa-history text-gray-500"></i>
                                    <span class="text-gray-700 font-medium">
                                        @(item.Progress.LastSeenDate?.ToString("dd MMM") ?? "Henüz görülmedi")
                                    </span>
                                </div>
                                <div class="flex items-center gap-2 bg-orange-100 rounded-full px-3 py-2">
                                    <i class="fas fa-eye text-orange-600"></i>
                                    <span class="text-orange-700 font-bold">@item.Progress.ViewCount</span>
                                </div>
                            </div>
                            
                            <!-- Premium Example Sentence -->
                            @if (!string.IsNullOrEmpty(item.WordCard.ExampleSentence))
                            {
                                <div class="bg-gradient-to-r from-orange-50 to-yellow-50 rounded-2xl p-4 border border-orange-100">
                                    <div class="flex items-start gap-3">
                                        <div class="w-8 h-8 bg-orange-200 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                                            <i class="fas fa-quote-left text-orange-600 text-xs"></i>
                                        </div>
                                        <p class="text-xs text-gray-700 italic line-clamp-2 leading-relaxed">
                                            @item.WordCard.ExampleSentence
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Hover Effect Overlay -->
                        <div class="absolute inset-0 bg-gradient-to-br from-orange-500/5 to-yellow-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
                    </div>
                }
            }
            else
            {
                <div class="col-span-full">
                    <div class="text-center py-20">
                        <div class="w-32 h-32 mx-auto mb-8 bg-gradient-to-br from-orange-100 to-orange-200 rounded-full flex items-center justify-center shadow-xl">
                            <i class="fas fa-book-open text-6xl text-orange-400"></i>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-700 mb-4">Henüz kelime kartınız bulunmamaktadır</h3>
                        <p class="text-gray-500 text-lg mb-8">Eğitimlere katılarak kelime dağarcığınızı genişletin</p>
                        <button class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-8 py-4 rounded-2xl font-bold hover:from-orange-600 hover:to-orange-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
                            Eğitimlere Başla
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('searchInput');
            const sortBtn = document.getElementById('sortBtn');
            let sortAsc = true;
            
            // Enhanced Search Function with Animation
            searchInput.addEventListener('input', (e) => {
                const searchTerm = e.target.value.toLowerCase();
                const cards = document.querySelectorAll('.word-card');
                
                cards.forEach((card, index) => {
                    const word = card.querySelector('.word-title').textContent.toLowerCase();
                    const definition = card.querySelector('.word-definition').textContent.toLowerCase();
                    const shouldShow = word.includes(searchTerm) || definition.includes(searchTerm);
                    
                    if (shouldShow) {
                        card.style.display = 'block';
                        setTimeout(() => {
                            card.style.opacity = '1';
                            card.style.transform = 'translateY(0)';
                        }, index * 50);
                    } else {
                        card.style.opacity = '0';
                        card.style.transform = 'translateY(20px)';
                        setTimeout(() => {
                            card.style.display = 'none';
                        }, 300);
                    }
                });
            });
            
            // Enhanced Sort Function with Animation
            sortBtn.addEventListener('click', () => {
                const container = document.getElementById('cardsGrid');
                const cards = Array.from(container.children);
                
                // Add loading state
                sortBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sıralanıyor...';
                sortBtn.disabled = true;
                
                setTimeout(() => {
                    cards.sort((a, b) => {
                        const wordA = a.querySelector('.word-title').textContent.trim();
                        const wordB = b.querySelector('.word-title').textContent.trim();
                        return sortAsc ? 
                            wordA.localeCompare(wordB, 'tr') : 
                            wordB.localeCompare(wordA, 'tr');
                    });
                    
                    // Animate cards out
                    cards.forEach((card, index) => {
                        card.style.transform = 'translateY(-20px)';
                        card.style.opacity = '0';
                    });
                    
                    setTimeout(() => {
                        cards.forEach(card => container.appendChild(card));
                        
                        // Animate cards back in
                        cards.forEach((card, index) => {
                            setTimeout(() => {
                                card.style.transform = 'translateY(0)';
                                card.style.opacity = '1';
                            }, index * 50);
                        });
                        
                        sortAsc = !sortAsc;
                        sortBtn.innerHTML = `<i class="fas fa-sort-alpha-${sortAsc ? 'down' : 'up'}"></i> Sırala`;
                        sortBtn.disabled = false;
                    }, 300);
                }, 500);
            });
            
            // Add stagger animation on load
            const cards = document.querySelectorAll('.word-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
}

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.word-card {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.word-card:hover {
    transform: translateY(-8px) scale(1.02);
}

@@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

.group:hover .shimmer {
    animation: shimmer 1s ease-in-out;
}
</style>
