@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kurslarım - Profesyonel Görünüm";
}

<style>
/* Arkaplan degrade + animasyon */
body {
    background: linear-gradient(120deg, #fffdfd 0%, #ffe5e0 100%);
    animation: bodyBg 10s infinite alternate ease-in-out;
    font-family: 'Josefin Sans', sans-serif;
    color: #333;
}
/* Ana kapsayıcı */
.courses-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
}

/* Dekoratif daireler (pulsing effect) */
.pulse-decor {
    position: absolute;
    border-radius: 50%;
    filter: blur(20px);
    opacity: 0.6;
    animation: pulseAni 6s infinite alternate ease-in-out;
    z-index: -1;
}
@@keyframes pulseAni {
    0% { transform: scale(0.9); }
    100% { transform: scale(1.2); }
}
.pulse-decor:nth-child(1) {
    top: -30px; right: 15%;
    width: 160px; height: 160px;
    background: rgba(240,82,50,0.3);
}
.pulse-decor:nth-child(2) {
    bottom: -30px; left: 10%;
    width: 180px; height: 180px;
    background: rgba(240,82,50,0.2);
    animation-delay: 3s;
}

/* Başlıklar */
.courses-hero {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #f05232;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.15);
    text-align: center;
}
.courses-sub {
    font-size: 1.1rem;
    color: #777;
    margin-bottom: 2.5rem;
    text-align: center;
}

/* Araçlar: Arama / Filtre / Sırala / Kurs Kaydı */
.courses-tools {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 2rem;
    align-items: center;
}
.courses-tools input {
    flex: 1;
    max-width: 250px;
    padding: 0.7rem 1.2rem;
    border: 1px solid #ddd;
    border-radius: 10px;
    transition: 0.3s;
}
.courses-tools input:focus {
    border-color: #f05232;
    box-shadow: 0 0 0 3px rgba(240,82,50,0.15);
    outline: none;
}
.course-btn {
    background-color: #f05232;
    color: #fff;
    padding: 0.7rem 1.5rem;
    border-radius: 10px;
    border: none;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.3s, transform 0.3s;
    text-decoration: none;
}
.course-btn:hover {
    background-color: #d74322;
    transform: translateY(-2px);
}

/* Kurs Kart Grid */
.courses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(270px, 1fr));
    gap: 1.5rem;
}
/* Kurs Blok */
.course-block {
    background: linear-gradient(130deg, #ffe5e0 0%, #ffd9bf 100%);
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.06);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s, box-shadow 0.3s;
}
.course-block:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.09);
}
.course-block h3 {
    margin: 0 0 0.5rem;
    font-size: 1.3rem;
    color: #c94a2c;
}
.course-block p {
    color: #555;
    font-size: 0.95rem;
    flex: 1;
    margin-bottom: 1rem;
}
.course-block .course-btn {
    align-self: flex-start;
}

/* Responsive ayarlar */
@@media(max-width: 768px){
    .courses-hero { font-size: 2rem; }
    .course-block h3 { font-size: 1.2rem; }
}
</style>

<div class="courses-container">
    <!-- Pulsing Dekorlar -->
    <div class="pulse-decor"></div>
    <div class="pulse-decor"></div>

    <!-- Başlık & Alt Yazı -->
    <h1 class="courses-hero">Kurslarım</h1>
    <div class="courses-sub">
        Buradan kayıtlı veya yeni başlayacağınız kursları yönetebilirsiniz.
    </div>

    <!-- Araçlar (Arama, Filtre, Sırala, Kurs Kaydı) -->
    <div class="courses-tools">
        <input type="text" placeholder="Kurs ara…" />
        <button class="course-btn">Filtre</button>
        <button class="course-btn">Sırala</button>
        <a href="#" class="course-btn" style="margin-left:auto;">
            Kurs Kaydı
        </a>
    </div>

    <!-- Kurs Kartları Grid -->
    <div class="courses-grid">
        <!-- Kurs 1 -->
        <div class="course-block">
            <h3>A1 (Başlangıç)</h3>
            <p>En temel seviye İngilizce konuları. 10 adet kelime kartı içerir.</p>
            <a class="course-btn"
               asp-controller="MyCourses"
               asp-action="CoursePlay"
               asp-route-id="1"
               asp-route-level="A1">
               Kursa Başla
            </a>
        </div>
        <!-- Kurs 2 -->
        <div class="course-block">
            <h3>A2 (Temel)</h3>
            <p>Bir seviye ileri konular. 10 yeni kelime ve 1 sürpriz oyun.</p>
            <a class="course-btn"
               asp-controller="MyCourses"
               asp-action="CoursePlay"
               asp-route-id="2"
               asp-route-level="A2">
               Devam Et
            </a>
        </div>
        <!-- Diğer kurs örnekleri... -->
    </div>
</div>
