@model IEnumerable<Paragraph.WebApp.Areas.Admin.Models.OrderViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Siparişler";
}

<!-- Sayfa Başlığı -->
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Sipariş Listesi
                </h2>
                <div class="text-muted mt-1">
                    Tüm siparişleri ve detaylarını görüntüleyebilirsiniz.
                </div>
            </div>
            <div class="col-auto ms-auto d-print-none">
                <a class="btn btn-primary" asp-action="Create">Yeni Sipariş</a>
            </div>
        </div>
    </div>
</div>

<!-- Arama / Filtre Alanı -->
<div class="page-body pt-1">
    <div class="container-xl">
        <div class="row mb-3">
            <div class="col-12 col-lg-4">
                <div class="input-icon">
                    <span class="input-icon-addon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-search" width="24"
                            height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                            stroke-linecap="round" stroke-linejoin="round">
                            <path d="M0 0h24v24H0z" fill="none" stroke="none" />
                            <path d="M10 10a7 7 0 1 0 7 7" />
                            <path d="M21 21l-6 -6" />
                        </svg>
                    </span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Sipariş ara..." />
                </div>
            </div>
            <div class="col-12 col-lg-8 text-end">
                <select id="sortSelect" class="form-select d-inline-block w-auto me-2">
                    <option value="">-- Sıralama Seçeneği --</option>
                    <option value="orderNoAsc">Sipariş No (Küçükten Büyüğe)</option>
                    <option value="orderNoDesc">Sipariş No (Büyükten Küçüğe)</option>
                    <option value="customerAsc">Müşteri Adı (A - Z)</option>
                    <option value="customerDesc">Müşteri Adı (Z - A)</option>
                    <option value="dateAsc">Tarih (Eskiden Yeniye)</option>
                    <option value="dateDesc">Tarih (Yeniden Eskiye)</option>
                    <option value="amountAsc">Tutar (Küçükten Büyüğe)</option>
                    <option value="amountDesc">Tutar (Büyükten Küçüğe)</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Siparişler Tablosu -->
<div class="page-body pt-2">
    <div class="container-xl">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sipariş Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table card-table table-vcenter">
                    <thead class="table-dark">
                        <tr>
                            <th>Sipariş No</th>
                            <th>Müşteri Adı</th>
                            <th>Tarih</th>
                            <th>Tutar</th>
                            <th class="w-1 text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderNumber</td>
                                <td>@order.CustomerName</td>
                                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                <td>@($"{order.TotalAmount} TL")</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@order.Id"
                                            class="btn btn-success me-1 d-flex align-items-center" title="Düzenle">
                                            Düzenle
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@order.Id"
                                            class="btn btn-danger d-flex align-items-center delete-btn" title="Sil">
                                            Sil
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Arama işlevi
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function () {
                    var orderNoText = $(this).find("td:first").text().toLowerCase();
                    var customerText = $(this).find("td:eq(1)").text().toLowerCase();
                    $(this).toggle(orderNoText.indexOf(value) > -1 || customerText.indexOf(value) > -1);
                });
            });

            // Sıralama işlevi
            $("#sortSelect").on("change", function () {
                var option = $(this).val();
                var rows = $("table tbody tr").get();

                rows.sort(function (a, b) {
                    var orderNoA = $(a).find("td:first").text();
                    var orderNoB = $(b).find("td:first").text();
                    var customerA = $(a).find("td:eq(1)").text().toUpperCase();
                    var customerB = $(b).find("td:eq(1)").text().toUpperCase();
                    var dateA = new Date($(a).find("td:eq(2)").text());
                    var dateB = new Date($(b).find("td:eq(2)").text());
                    var amountA = parseFloat($(a).find("td:eq(3)").text().replace(" TL", ""));
                    var amountB = parseFloat($(b).find("td:eq(3)").text().replace(" TL", ""));

                    switch (option) {
                        case "orderNoAsc":
                            return orderNoA.localeCompare(orderNoB, undefined, { numeric: true });
                        case "orderNoDesc":
                            return orderNoB.localeCompare(orderNoA, undefined, { numeric: true });
                        case "customerAsc":
                            return (customerA < customerB) ? -1 : (customerA > customerB) ? 1 : 0;
                        case "customerDesc":
                            return (customerA > customerB) ? -1 : (customerA < customerB) ? 1 : 0;
                        case "dateAsc":
                            return dateA - dateB;
                        case "dateDesc":
                            return dateB - dateA;
                        case "amountAsc":
                            return amountA - amountB;
                        case "amountDesc":
                            return amountB - amountA;
                        default:
                            return 0;
                    }
                });

                $.each(rows, function (index, row) {
                    $("table tbody").append(row);
                });
            });
        });
    </script>
}
