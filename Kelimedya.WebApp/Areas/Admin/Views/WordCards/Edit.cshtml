@model Kelimedya.WebApp.Areas.Admin.Models.WordCardViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kelime Kartı Düzenle";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <h2 class="page-title">Kelime Kartı Düzenle</h2>
        <div class="text-muted mt-1">Kelime kartı bilgilerini güncelleyin.</div>
    </div>
</div>

<div class="page-body pt-2">
    <div class="container-xl">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id"/>
                    <input type="hidden" asp-for="LessonId"/>
                    <div class="mb-3">
                        <label class="form-label">Kelime</label>
                        <input type="text" class="form-control" asp-for="Word"/>
                        <span asp-validation-for="Word" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Eş Anlam</label>
                        <input type="text" class="form-control" asp-for="Synonym" placeholder="Eş Anlam"/>
                        <span asp-validation-for="Synonym" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tanım</label>
                        <input type="text" class="form-control" asp-for="Definition"/>
                        <span asp-validation-for="Definition" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Örnek Cümle</label>
                        <textarea class="form-control" asp-for="ExampleSentence" rows="3"></textarea>
                        <span asp-validation-for="ExampleSentence" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mevcut Resim</label>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Kelime Kartı Resmi" style="max-height:50px;"/>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yeni Resim Yükle (Değiştirmek için)</label>
                        <input type="file" class="form-control" asp-for="ImageFile"/>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    @for (int i = 0; i < Model.GameQuestions.Count; i++)
                    {
                        <div class="border rounded p-3 mb-3">
                            <h5 class="mb-2">@Model.GameQuestions[i].GameTitle</h5>
                            <input type="hidden" asp-for="GameQuestions[i].GameId" />
                            <div class="mb-2">
                                <label class="form-label">Soru</label>
                                <input type="text" class="form-control" asp-for="GameQuestions[i].QuestionText" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Cevap</label>
                                <input type="text" class="form-control" asp-for="GameQuestions[i].AnswerText" />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">Resim URL</label>
                                <input type="text" class="form-control" asp-for="GameQuestions[i].ImageUrl" />
                            </div>
                        </div>
                    }
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a asp-action="Index" asp-route-lessonId="@Model.LessonId" class="btn btn-link link-secondary">Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}