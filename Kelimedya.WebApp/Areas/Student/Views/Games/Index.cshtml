@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Oyunlar";
}

<div class="relative min-h-screen bg-gradient-to-br from-orange-50 via-white to-yellow-50">
    <!-- Decorative Circles -->
    <div class="absolute top-0 left-0 w-80 h-80 bg-orange-300 rounded-full opacity-10 -translate-x-32 -translate-y-32" style="filter: blur(60px);"></div>
    <div class="absolute top-20 right-0 w-60 h-60 bg-yellow-300 rounded-full opacity-10 translate-x-20" style="filter: blur(60px);"></div>
    <div class="absolute bottom-0 right-1/2 w-40 h-40 bg-orange-300 rounded-full opacity-10 translate-x-1/2 translate-y-20" style="filter: blur(60px);"></div>
    
    <div class="relative z-10 p-6">
        <!-- Header Section -->
        <div class="mb-12">
            <div class="text-center mb-8">
                <h1 class="text-5xl font-bold bg-gradient-to-r from-orange-600 to-orange-500 bg-clip-text text-transparent mb-4">
                    Eğlenceli Oyunlar
                </h1>
                <p class="text-xl text-gray-600">Öğrenirken eğlen, eğlenirken öğren! 🎮</p>
            </div>
        </div>
        
        @{ bool disabled = !(ViewBag.HasCourses as bool? ?? false); }
        
        @if (disabled)
        {
            <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-6 mb-8">
                <div class="flex items-center gap-3">
                    <i class="fas fa-info-circle text-yellow-600 text-xl"></i>
                    <div>
                        <h3 class="font-semibold text-yellow-800">Oyunlara Erişim</h3>
                        <p class="text-yellow-700">Oyunlara erişmek için önce bir eğitime kaydolmalısınız.</p>
                    </div>
                </div>
            </div>
        }
        
        <!-- Games Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            <!-- Adam Asmaca -->
            <div class="group bg-white rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 @(disabled ? "opacity-60 pointer-events-none" : "")">
                <div class="bg-gradient-to-br from-orange-500 to-orange-600 p-6 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
                    <i class="fas fa-user-secret text-4xl mb-4"></i>
                    <h3 class="text-xl font-bold">Adam Asmaca</h3>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 mb-4">Harfleri tahmin ederek kelimeleri bul!</p>
                    <a href="/Student/Games/AdamAsmaca" 
                       class="w-full bg-orange-500 text-white py-3 px-4 rounded-xl font-medium hover:bg-orange-600 transition-colors duration-200 flex items-center justify-center gap-2 @(disabled ? "opacity-50" : "")">
                        <i class="fas fa-play"></i>
                        Oyna
                    </a>
                </div>
            </div>
            
            <!-- Kelime Bulmaca -->
            <div class="group bg-white rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 @(disabled ? "opacity-60 pointer-events-none" : "")">
                <div class="bg-gradient-to-br from-green-500 to-green-600 p-6 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
                    <i class="fas fa-search text-4xl mb-4"></i>
                    <h3 class="text-xl font-bold">Kelime Bulmaca</h3>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 mb-4">Karışık harflerden doğru kelimeyi oluştur!</p>
                    <a href="/Student/Games/KelimeBulmaca" 
                       class="w-full bg-green-500 text-white py-3 px-4 rounded-xl font-medium hover:bg-green-600 transition-colors duration-200 flex items-center justify-center gap-2 @(disabled ? "opacity-50" : "")">
                        <i class="fas fa-play"></i>
                        Oyna
                    </a>
                </div>
            </div>
            
            <!-- Görselden Soru -->
            <div class="group bg-white rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 @(disabled ? "opacity-60 pointer-events-none" : "")">
                <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 p-6 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
                    <i class="fas fa-image text-4xl mb-4"></i>
                    <h3 class="text-xl font-bold">Görselden Soru</h3>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 mb-4">Görsellere bakarak soruları yanıtla!</p>
                    <a href="/Student/Games/VisualPrompt" 
                       class="w-full bg-yellow-500 text-white py-3 px-4 rounded-xl font-medium hover:bg-yellow-600 transition-colors duration-200 flex items-center justify-center gap-2 @(disabled ? "opacity-50" : "")">
                        <i class="fas fa-play"></i>
                        Oyna
                    </a>
                </div>
            </div>
            
            <!-- Kelimeden Görsel -->
            <div class="group bg-white rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 @(disabled ? "opacity-60 pointer-events-none" : "")">
                <div class="bg-gradient-to-br from-purple-500 to-purple-600 p-6 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
                    <i class="fas fa-images text-4xl mb-4"></i>
                    <h3 class="text-xl font-bold">Kelimeden Görsel</h3>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 mb-4">Kelimeye uygun görseli seçin!</p>
                    <a href="/Student/Games/WordImage" 
                       class="w-full bg-purple-500 text-white py-3 px-4 rounded-xl font-medium hover:bg-purple-600 transition-colors duration-200 flex items-center justify-center gap-2 @(disabled ? "opacity-50" : "")">
                        <i class="fas fa-play"></i>
                        Oyna
                    </a>
                </div>
            </div>
            
            <!-- Kabarcık Harfler -->
            <div class="group bg-white rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 @(disabled ? "opacity-60 pointer-events-none" : "")">
                <div class="bg-gradient-to-br from-orange-500 to-orange-600 p-6 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
                    <i class="fas fa-circle text-4xl mb-4"></i>
                    <h3 class="text-xl font-bold">Kabarcık Harfler</h3>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 mb-4">Kabarcıkları patlatarak kelimeleri oluştur!</p>
                    <a href="/Student/Games/BubbleLetters" 
                       class="w-full bg-orange-500 text-white py-3 px-4 rounded-xl font-medium hover:bg-orange-600 transition-colors duration-200 flex items-center justify-center gap-2 @(disabled ? "opacity-50" : "")">
                        <i class="fas fa-play"></i>
                        Oyna
                    </a>
                </div>
            </div>
            
            <!-- Çengel Bulmaca -->
            <div class="group bg-white rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 @(disabled ? "opacity-60 pointer-events-none" : "")">
                <div class="bg-gradient-to-br from-green-500 to-green-600 p-6 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
                    <i class="fas fa-puzzle-piece text-4xl mb-4"></i>
                    <h3 class="text-xl font-bold">Çengel Bulmaca</h3>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 mb-4">Çapraz bulmacayı çözerek kelimeleri bul!</p>
                    <a href="/Student/Games/CrossPuzzle" 
                       class="w-full bg-green-500 text-white py-3 px-4 rounded-xl font-medium hover:bg-green-600 transition-colors duration-200 flex items-center justify-center gap-2 @(disabled ? "opacity-50" : "")">
                        <i class="fas fa-play"></i>
                        Oyna
                    </a>
                </div>
            </div>
            
            <!-- Boşluk Doldurma -->
            <div class="group bg-white rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 @(disabled ? "opacity-60 pointer-events-none" : "")">
                <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 p-6 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
                    <i class="fas fa-edit text-4xl mb-4"></i>
                    <h3 class="text-xl font-bold">Boşluk Doldurma</h3>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 mb-4">Cümlelerdeki boşlukları doğru kelimelerle doldur!</p>
                    <a href="/Student/Games/FillBlanks" 
                       class="w-full bg-yellow-500 text-white py-3 px-4 rounded-xl font-medium hover:bg-yellow-600 transition-colors duration-200 flex items-center justify-center gap-2 @(disabled ? "opacity-50" : "")">
                        <i class="fas fa-play"></i>
                        Oyna
                    </a>
                </div>
            </div>
            
            <!-- Eş Yakın Eşleştirme -->
            <div class="group bg-white rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 @(disabled ? "opacity-60 pointer-events-none" : "")">
                <div class="bg-gradient-to-br from-orange-500 to-orange-600 p-6 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
                    <i class="fas fa-link text-4xl mb-4"></i>
                    <h3 class="text-xl font-bold">Eş Yakın Eşleştirme</h3>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 mb-4">Kelimeleri eş anlamlarıyla eşleştir!</p>
                    <a href="/Student/Games/SynonymMatch" 
                       class="w-full bg-orange-500 text-white py-3 px-4 rounded-xl font-medium hover:bg-orange-600 transition-colors duration-200 flex items-center justify-center gap-2 @(disabled ? "opacity-50" : "")">
                        <i class="fas fa-play"></i>
                        Oyna
                    </a>
                </div>
            </div>
            
            <!-- Cümle Kurma -->
            <div class="group bg-white rounded-3xl shadow-xl border border-orange-100 overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 @(disabled ? "opacity-60 pointer-events-none" : "")">
                <div class="bg-gradient-to-br from-green-500 to-green-600 p-6 text-white relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
                    <i class="fas fa-align-left text-4xl mb-4"></i>
                    <h3 class="text-xl font-bold">Cümle Kurma</h3>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 mb-4">Verilen kelimelerle anlamlı cümleler kur!</p>
                    <a href="/Student/Games/SentenceBuilder" 
                       class="w-full bg-green-500 text-white py-3 px-4 rounded-xl font-medium hover:bg-green-600 transition-colors duration-200 flex items-center justify-center gap-2 @(disabled ? "opacity-50" : "")">
                        <i class="fas fa-play"></i>
                        Oyna
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
