@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kelime Kartlarım - Ultra Profesyonel Tasarım";
}

<style>
/* Gövde (arka plan): pastel degrade, animasyonlu dalga hissi */
body {
    margin: 0;
    padding: 0;
    font-family: 'Josefin Sans', sans-serif;
    color: #2c3e50;
    background: linear-gradient(120deg, #fefefe 0%, #ffe5e0 100%);
    animation: bodyAnim 15s infinite alternate ease-in-out;
}
/* Ana kapsayıcı */
.words-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
    position: relative;
}

/* Dekoratif daireler: hafif pulsing */
.pulse-circle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.6;
    animation: pulseAnim 5s infinite alternate ease-in-out;
    filter: blur(30px);
    z-index: -1;
}
@@keyframes pulseAnim {
    0% { transform: scale(0.8); }
    100% { transform: scale(1.2); }
}
.pulse-circle:nth-child(1) {
    width: 220px; height: 220px;
    top: -60px; right: 10%;
    background: rgba(240, 82, 50, 0.2);
}
.pulse-circle:nth-child(2) {
    width: 180px; height: 180px;
    bottom: -50px; left: 15%;
    background: rgba(76, 175, 80, 0.2);
    animation-delay: 2s;
}

/* Başlıklar */
.words-hero {
    font-size: 3rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 0.5rem;
    color: #ff5b5b;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
}
.words-sub {
    text-align: center;
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 2.5rem;
}

/* İstatistik kartları */
.stats-row {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
}
.stat-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
}
.stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.08);
}
.stat-card .subheader {
    font-size: 0.85rem;
    text-transform: uppercase;
    color: #aaa;
    margin-bottom: 0.5rem;
}
.stat-card .h2 {
    font-size: 2.2rem;
    margin: 0;
    color: #f05232;
}
.stat-card .h2.green {
    color: #4caf50;
}
.stat-card .h2.orange {
    color: #ff9800;
}

/* Araçlar: Arama, Filtre, Sırala, Yeni Kart */
.tools {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 2rem;
    align-items: center;
}
.tools input[type="text"] {
    flex: 1;
    max-width: 300px;
    padding: 0.8rem 1.2rem;
    border: 1px solid #ddd;
    border-radius: 12px;
    font-size: 1rem;
    transition: 0.3s ease;
}
.tools input[type="text"]:focus {
    border-color: #ff5b5b;
    box-shadow: 0 0 0 3px rgba(255, 90, 90, 0.15);
    outline: none;
}
.ultra-btn {
    background: linear-gradient(135deg, #ff5b5b, #f05232);
    color: #fff;
    padding: 0.8rem 1.6rem;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.3s, box-shadow 0.3s;
    text-decoration: none;
}
.ultra-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
}
.ultra-btn.secondary {
    background: linear-gradient(135deg, #64dd17, #4caf50) !important;
}

/* Kartlar: 3D flip + ek detay */
.cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 2rem;
}
.word-card {
    perspective: 1000px;
    position: relative;
    height: 350px; /* Biraz daha uzun */
}
.word-card-inner {
    width: 100%;
    height: 100%;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    transition: transform 0.6s cubic-bezier(0.4,0.2,0.2,1);
    transform-style: preserve-3d;
    position: relative;
}
.word-card:hover .word-card-inner {
    transform: rotateY(180deg);
}
.card-front,
.card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 16px;
    backface-visibility: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}
.card-front {
    background: linear-gradient(135deg, #ffe5e0, #ffd9bf);
}
.card-back {
    background: #fff;
    transform: rotateY(180deg);
}
/* ÖN YÜZ */
.card-front .word-title {
    font-size: 2rem;
    color: #333;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 5px rgba(0,0,0,0.05);
}
.card-front .word-category {
    font-size: 0.85rem;
    color: #555;
    background: rgba(255,255,255,0.4);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}
.card-front .progress-badge {
    margin-top: 0.8rem;
    font-size: 0.85rem;
    color: #f05232;
    background: #fff;
    padding: 0.4rem 0.8rem;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.07);
}

/* ARKA YÜZ */
.card-back .meaning {
    font-size: 1.5rem;
    color: #4caf50;
    margin-bottom: 1rem;
    position: relative;
}
.card-back .meaning::after {
    content: "";
    position: absolute;
    width: 50px; height: 2px;
    background: #4caf50; opacity: 0.3;
    left: 50%; bottom: -8px;
    transform: translateX(-50%);
}
.card-back .example {
    font-size: 0.95rem;
    color: #777;
    text-align: center;
    margin-bottom: 1rem;
    line-height: 1.4;
}
.card-back .synonyms {
    font-size: 0.85rem;
    color: #999;
    font-style: italic;
}

/* Responsive ayarlar */
@@media(max-width: 768px) {
    .word-card { height: 320px; }
    .word-card-inner { padding: 1rem; }
    .card-front .word-title { font-size: 1.6rem; }
    .cards-grid { gap: 1.5rem; }
}
</style>

<div class="words-container">
    <!-- Pulsing Daireler -->
    <div class="pulse-circle"></div>
    <div class="pulse-circle"></div>

    <!-- Başlık & Alt Açıklama -->
    <h1 class="words-hero">Kelime Kartlarım</h1>
    <div class="words-sub">
        Yeni kelimeler ekleyerek ezberini güçlendirebilirsin. Kartları çevirerek anlamları ve örnek cümleleri keşfet!
    </div>

    <!-- İstatistik Kartları -->
    <div class="stats-row">
        <div class="stat-card">
            <div class="subheader">Toplam Kart</div>
            <div class="h2">150</div>
        </div>
        <div class="stat-card">
            <div class="subheader">Ezberlenen</div>
            <div class="h2 green">70</div>
        </div>
        <div class="stat-card">
            <div class="subheader">Bugün Çalışılan</div>
            <div class="h2 orange">15</div>
        </div>
    </div>

    <!-- Araçlar: Arama / Filtre / Sırala / Yeni Kart -->
    <div class="tools">
        <input type="text" placeholder="Kelime ara…" />
        <button class="ultra-btn">Filtre</button>
        <button class="ultra-btn">Sırala</button>
        <a href="#" class="ultra-btn secondary" style="margin-left:auto;">
            Yeni Kart Ekle
        </a>
    </div>

    <!-- Kartlar Grid -->
    <div class="cards-grid">
        <!-- Kart Örneği 1 -->
        <div class="word-card">
            <div class="word-card-inner">
                <!-- Ön Yüz -->
                <div class="card-front">
                    <div class="word-title">Elma</div>
                    <div class="word-category">Meyve</div>
                    <div class="progress-badge">Ezber: %40</div>
                </div>
                <!-- Arka Yüz -->
                <div class="card-back">
                    <div class="meaning">Tatlı kırmızı meyve</div>
                    <div class="example">
                        “Her sabah bir elma yemek sağlıklı bir alışkanlıktır.”
                    </div>
                    <div class="synonyms">
                        Eş Anlam: <strong>Malus domestica</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kart Örneği 2 -->
        <div class="word-card">
            <div class="word-card-inner">
                <div class="card-front">
                    <div class="word-title">Muz</div>
                    <div class="word-category">Meyve</div>
                    <div class="progress-badge">Ezber: %60</div>
                </div>
                <div class="card-back">
                    <div class="meaning">Sarı kabuklu meyve</div>
                    <div class="example">
                        “Maymunlar en çok muzu seviyor.”
                    </div>
                    <div class="synonyms">
                        Benzer: <strong>Musa sapientum</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kart Örneği 3 -->
        <div class="word-card">
            <div class="word-card-inner">
                <div class="card-front">
                    <div class="word-title">Kedi</div>
                    <div class="word-category">Hayvan</div>
                    <div class="progress-badge">Ezber: %80</div>
                </div>
                <div class="card-back">
                    <div class="meaning">Evcil memeli hayvan</div>
                    <div class="example">
                        “Kediler, sessiz adımlarla avlanır.”
                    </div>
                    <div class="synonyms">
                        Eş Anlam: <strong>Felis catus</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kart Örneği 4 -->
        <div class="word-card">
            <div class="word-card-inner">
                <div class="card-front">
                    <div class="word-title">Çiçek</div>
                    <div class="word-category">Doğa</div>
                    <div class="progress-badge">Ezber: %20</div>
                </div>
                <div class="card-back">
                    <div class="meaning">Renkli bitki bölümü</div>
                    <div class="example">
                        “Bahçedeki çiçekler bahar geldiğinde açıyor.”
                    </div>
                    <div class="synonyms">
                        Diğer: <strong>Flora</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Daha fazla kart eklenebilir... -->
    </div>
</div>
