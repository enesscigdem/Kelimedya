@model Paragraph.WebApp.Areas.Admin.Models.ProductViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <h2 class="page-title">Ürün Düzenle</h2>
        <div class="text-muted mt-1">
            Ürün bilgilerini güncelleyin.
        </div>
    </div>
</div>

<div class="page-body pt-2">
    <div class="container-xl">
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
        {
            <div class="alert alert-danger" role="alert">
                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
            </div>
        }
        <div class="card">
            <div class="card-body">
                <form method="post" asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id"/>
                    <!-- Ürün Adı -->
                    <div class="mb-3">
                        <label class="form-label">Ürün Adı</label>
                        <input type="text" class="form-control" asp-for="Name"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <!-- Fiyat -->
                    <div class="mb-3">
                        <label class="form-label">Fiyat</label>
                        <input type="number" step="0.01" class="form-control" asp-for="Price"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <!-- Açıklama (TinyMCE) -->
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea id="tinymceEditDescription" class="form-control" asp-for="Description" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <!-- Ürün Fotoğrafı -->
                    <div class="mb-3">
                        <label class="form-label">Ürün Fotoğrafı</label>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-1">
                                <img src="@Model.ImageUrl" alt="Ürün Fotoğrafı" style="max-width: 200px;"/>
                            </div>
                        }
                        <input type="file" name="ImageFile" class="form-control"/>
                    </div>
                    <!-- Dahil Edilen Eğitimler -->
                    <div class="mb-3">
                        <label class="form-label">Dahil Edilen Eğitimler</label>
                        <select asp-for="SelectedCourseIds" class="form-select" multiple="multiple"
                            asp-items="@(new MultiSelectList(Model.AvailableCourses, "Id", "Title", Model.SelectedCourseIds))">
                        </select>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a asp-action="Index" class="btn btn-link link-secondary">Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- TinyMCE -->
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            tinyMCE.init({
                selector: '#tinymceEditDescription',
                height: 300,
                menubar: false,
                plugins: [
                  'advlist autolink lists link image charmap print preview anchor',
                  'searchreplace visualblocks code fullscreen',
                  'insertdatetime media table paste code help wordcount'
                ],
                toolbar: 'undo redo | formatselect | ' +
                         'bold italic backcolor | alignleft aligncenter ' +
                         'alignright alignjustify | bullist numlist outdent indent | ' +
                         'removeformat | help',
                content_style: 'body { font-family:Inter, sans-serif; font-size:14px }'
            });
        });
    </script>
}
