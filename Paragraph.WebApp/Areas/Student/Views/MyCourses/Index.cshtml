@{
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kurslarım";
}

<style>
    .courses-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        position: relative;
    }
    .courses-hero {
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #f05232;
    }
    .courses-sub {
        font-size: 1.1rem;
        color: #777;
        margin-bottom: 2rem;
    }

    .circle-decor {
        position: absolute;
        border-radius: 50%;
        opacity: 0.4;
        z-index: -1;
    }
    .circle-decor:nth-child(1) {
        top: -30px;
        right: 15%;
        width: 130px; height: 130px;
        background: #ffded2;
    }
    .circle-decor:nth-child(2) {
        bottom: -30px;
        left: 10%;
        width: 150px; height: 150px;
        background: #ffc2c2;
    }

    .courses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px,1fr));
        gap: 1.5rem;
    }
    .course-block {
        background: linear-gradient(130deg, #ffe5e0 0%, #ffd9bf 100%);
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        padding: 1.5rem;
        position: relative;
    }
    .course-block h3 {
        margin: 0 0 0.5rem;
        font-size: 1.4rem;
        color: #c94a2c;
    }
    .course-block p {
        color: #555;
        margin-bottom: 1rem;
    }

    .simple-btn {
        background-color: #f05232;
        color: #fff;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        font-weight: 600;
        transition: background 0.3s ease;
        text-decoration: none;
    }
    .simple-btn:hover {
        background-color: #d74322;
    }
</style>

<div class="courses-container">
    <div class="circle-decor"></div>
    <div class="circle-decor"></div>

    <div class="courses-hero">Kurslarım</div>
    <div class="courses-sub">Buradan kayıtlı veya yeni başlayacağınız kursları yönetebilirsiniz.</div>

    <!-- Örnek Araçlar (Arama / Filtre) -->
    <div style="margin-bottom:1rem; display:flex; gap:1rem;">
        <input type="text" class="form-control" placeholder="Kurs ara…" style="max-width:250px;" />
        <button class="simple-btn">Filtre</button>
        <button class="simple-btn">Sırala</button>
        <a href="#" class="simple-btn" style="margin-left:auto;">
            Kurs Kaydı
        </a>
    </div>

    <div class="courses-grid">
        <!-- Kurs 1 -->
        <div class="course-block">
            <h3>A1 (Başlangıç)</h3>
            <p>En temel seviye İngilizce konuları. 10 adet kelime kartı içerir.</p>
            <a class="simple-btn"
                    asp-controller="MyCourses"
                    asp-action="CoursePlay"
                    asp-route-id="1"
                    asp-route-level="A1">
                Kursa Başla
            </a>
        </div>
        <!-- Kurs 2 -->
        <div class="course-block">
            <h3>A2 (Temel)</h3>
            <p>Bir seviye ileri konular. 10 yeni kelime ve 1 sürpriz oyun.</p>
            <a class="simple-btn"
                    asp-controller="MyCourses"
                    asp-action="CoursePlay"
                    asp-route-id="2"
                    asp-route-level="A2">
                Devam Et
            </a>
        </div>
        <!-- Diğer kurslar... -->
    </div>
</div>
