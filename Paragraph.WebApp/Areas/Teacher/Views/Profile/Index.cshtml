@{
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Profilim";
}

<style>
    .profile-wrapper {
        margin-top: 2rem;
    }
    .profile-card {
        background: #fff;
        border-left: 5px solid #c8a800;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.07);
        padding: 2rem;
        position: relative;
    }
    .profile-title {
        font-size: 1.4rem;
        margin-bottom: 1rem;
        color: #2f3b5d;
    }
    .form-label {
        font-weight: 600;
    }
    .gold-btn {
        background: #c8a800;
        border: none;
        color: #fff;
        padding: 0.6rem 1.2rem;
        border-radius: 6px;
        margin-top: 1rem;
        font-weight: 500;
    }
    .gold-btn:hover {
        background: #b08f00;
    }
</style>

<div class="page-body">
    <div class="container-xl profile-wrapper">
        <div class="profile-card">
            <div class="profile-title">Kişisel Bilgiler</div>
            <form>
                <div class="mb-3">
                    <label class="form-label">Ad Soyad</label>
                    <input type="text" class="form-control" value="Öğretmen Adı" />
                </div>
                <div class="mb-3">
                    <label class="form-label">E-posta</label>
                    <input type="email" class="form-control" value="teacher@example.com" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Şifre</label>
                    <input type="password" class="form-control" />
                </div>
                <button class="gold-btn" type="submit">Kaydet</button>
            </form>
        </div>
    </div>
</div>
