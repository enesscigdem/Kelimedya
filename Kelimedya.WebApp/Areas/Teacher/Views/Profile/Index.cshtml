@model Kelimedya.WebApp.Areas.Teacher.Models.TeacherProfileViewModel
@{
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Profilim";
}

<style>
    .profile-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
        position: relative;
    }
    .profile-hero {
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    .profile-sub {
        font-size: 1.1rem;
        color: #777;
        margin-bottom: 2rem;
    }
    .circle-decor {
        position: absolute;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: #ffc2c2;
        z-index: -1;
        opacity: 0.4;
    }
    .circle-decor:nth-child(1) {
        top: -30px;
        right: 20%;
    }
    .circle-decor:nth-child(2) {
        bottom: -30px;
        left: 15%;
        background: #ffded2;
    }

    .profile-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.03);
        padding: 1.5rem;
    }
    .profile-card h3 {
        margin: 0;
        font-size: 1.3rem;
        color: #f05232;
        margin-bottom: 1rem;
    }
    .form-label {
        font-weight: 600;
    }
    .btn-primary {
        background-color: #f05232;
        color: #fff;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        font-weight: 600;
        transition: background 0.3s ease;
        text-decoration: none;
    }
    .btn-primary:hover {
        background-color: #d74322;
    }
</style>

<div class="profile-container">
    <div class="circle-decor"></div>
    <div class="circle-decor"></div>

    <div class="profile-hero">Profilim</div>
    <div class="profile-sub">Kişisel bilgilerinizi düzenleyin.</div>

    <div class="profile-card">
        <h3>Bilgiler</h3>
        <form method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Surname" class="form-label"></label>
                <input asp-for="Surname" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Mevcut Resim</label><br />
                <img src="@(string.IsNullOrEmpty(Model.ProfilePicture) ? Url.Content("~/theme/tabler/static/avatars/000m.jpg") : Model.ProfilePicture)" style="width:120px;" class="img-thumbnail" />
            </div>
            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label">Profil Resmi</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>
            <button class="btn-primary" type="submit">Kaydet</button>
        </form>
    </div>
    
</div>
