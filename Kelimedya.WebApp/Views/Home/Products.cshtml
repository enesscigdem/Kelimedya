@model IEnumerable<Kelimedya.WebApp.Areas.Admin.Models.ProductViewModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Ürün Listesi";
}

<main style="min-height: 960px">
    <section>
        <div class="td_height_120 td_height_lg_80"></div>
        <div class="container">
            <div class="td_section_head_2">
                <div class="td_section_head_2_left">
                    <div class="td_view_btns">
                        <a href="courses-grid-view.html" class="td_view_btn td_center active">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M1.99902 18.0016C1.99902 16.4611 1.99902 15.6909 2.34575 15.1251C2.53977 14.8085 2.80596 14.5423 3.12256 14.3483C3.68837 14.0016 4.45859 14.0016 5.99902 14.0016C7.53946 14.0016 8.30968 14.0016 8.87549 14.3483C9.19209 14.5423 9.45828 14.8085 9.65229 15.1251C9.99902 15.6909 9.99902 16.4611 9.99902 18.0016C9.99902 19.542 9.99902 20.3122 9.65229 20.8781C9.45828 21.1947 9.19209 21.4608 8.87549 21.6549C8.30968 22.0016 7.53946 22.0016 5.99902 22.0016C4.45859 22.0016 3.68837 22.0016 3.12256 21.6549C2.80596 21.4608 2.53977 21.1947 2.34575 20.8781C1.99902 20.3122 1.99902 19.542 1.99902 18.0016Z"
                                      stroke="currentColor" stroke-width="1.5"/>
                                <path d="M13.999 18.0016C13.999 16.4611 13.999 15.6909 14.3458 15.1251C14.5398 14.8085 14.806 14.5423 15.1226 14.3483C15.6884 14.0016 16.4586 14.0016 17.999 14.0016C19.5395 14.0016 20.3097 14.0016 20.8755 14.3483C21.1921 14.5423 21.4583 14.8085 21.6523 15.1251C21.999 15.6909 21.999 16.4611 21.999 18.0016C21.999 19.542 21.999 20.3122 21.6523 20.8781C21.4583 21.1947 21.1921 21.4608 20.8755 21.6549C20.3097 22.0016 19.5395 22.0016 17.999 22.0016C16.4586 22.0016 15.6884 22.0016 15.1226 21.6549C14.806 21.4608 14.5398 21.1947 14.3458 20.8781C13.999 20.3122 13.999 19.542 13.999 18.0016Z"
                                      stroke="currentColor" stroke-width="1.5"/>
                            </svg>
                        </a>
                    </div>
                    <span class="td_heading_color td_medium">50 üründen @Model.Count() adet ürün gösteriliyor</span>
                </div>
                <div class="td_section_head_2_right">
                    <div class="td_section_head_select td_fs_20">
                        <b class="td_semibold td_heading_color">Filtre: </b>
                        <select class="td_form_field td_medium">
                            <option value="0">Öne Çıkarılan</option>
                            <option value="1">Popüler</option>
                            <option value="2">Yeni</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="td_height_60 td_height_lg_40"></div>
            <div class="row td_gap_y_30 td_row_gap_30">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="td_card td_style_3 d-block td_radius_10">
                            <span class="td_card_label td_accent_bg td_white_color">Yeni</span>
                            <a asp-controller="Home" asp-action="Product" asp-route-id="@product.Id" class="td_card_thumb">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="@product.Name"/>
                                }
                                else
                                {
                                    <img src="~/theme/web_UI/assets/img/no_image.png" alt="Resim Yok"/>
                                }
                            </a>
                            <div class="td_card_info td_white_bg">
                                <div class="td_card_info_in">
                                    <ul class="td_card_meta td_mp_0 td_fs_18 td_medium td_heading_color">
                                        <li>
                                            <img src="~/theme/web_UI/assets/img/icons/user_3.svg" alt="">
                                            <span class="td_opacity_7">150 Adet</span>
                                        </li>
                                        <li>
                                            <img src="~/theme/web_UI/assets/img/icons/book.svg" alt="">
                                            <span class="td_opacity_7">12 Ay</span>
                                        </li>
                                    </ul>
                                    @if (product.Courses != null && product.Courses.Any())
                                    {
                                        <a href="#" class="td_card_category td_fs_14 td_bold td_heading_color td_mb_14">
                                            <span>@string.Join(", ", product.Courses.Select(c => c.Title))</span>
                                        </a>
                                    }
                                    <h2 class="td_card_title td_fs_24 td_mb_16">
                                        <a asp-controller="Home" asp-action="Product" asp-route-id="@product.Id">@product.Name</a>
                                    </h2>
                                    <p class="td_card_subtitle td_heading_color td_opacity_7 td_mb_20">
                                        @if (!string.IsNullOrEmpty(product.Description) && product.Description.Length > 200)
                                        {
                                            @Html.Raw(product.Description.Substring(0, 300) + "...")
                                        }
                                        else
                                        {
                                            @Html.Raw(product.Description)
                                        }
                                    </p>
                                    <div class="td_card_review">
                                        <div class="td_rating" data-rating="4.5">
                                            <i class="fa-regular fa-star"></i>
                                            <i class="fa-regular fa-star"></i>
                                            <i class="fa-regular fa-star"></i>
                                            <i class="fa-regular fa-star"></i>
                                            <i class="fa-regular fa-star"></i>
                                            <div class="td_rating_percentage">
                                                <i class="fa-solid fa-star fa-fw"></i>
                                                <i class="fa-solid fa-star fa-fw"></i>
                                                <i class="fa-solid fa-star fa-fw"></i>
                                                <i class="fa-solid fa-star fa-fw"></i>
                                                <i class="fa-solid fa-star fa-fw"></i>
                                            </div>
                                        </div>
                                        <span class="td_heading_color td_opacity_5 td_medium">(5.0/5 Puan)</span>
                                    </div>
                                    <div class="td_card_btn">
                                        <a asp-controller="Home" asp-action="Product" asp-route-id="@product.Id" class="td_btn td_style_1 td_radius_10 td_medium">
                                            <span class="td_btn_in td_white_color td_accent_bg">
                                                <span>Ürün Detayları</span>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="td_height_120 td_height_lg_80"></div>
    </section>
</main>