@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Teacher Panel</title>

    <!-- Tabler CSS -->
    <link href="~/theme/tabler/dist/css/tabler.min.css" rel="stylesheet"/>
    <link href="~/theme/tabler/dist/css/tabler-flags.min.css" rel="stylesheet"/>
    <link href="~/theme/tabler/dist/css/tabler-payments.min.css" rel="stylesheet"/>
    <link href="~/theme/tabler/dist/css/tabler-vendors.min.css" rel="stylesheet"/>
    <link href="~/theme/tabler/dist/css/demo.min.css" rel="stylesheet"/>

    <!-- Google Fonts -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=IBM+Plex+Sans&display=swap"/>

    <!-- Custom CSS (opsiyonel) -->
    <link href="~/theme/custom-styles.css" rel="stylesheet"/>

    <!-- Tabler Demo Theme -->
    <script src="~/theme/tabler/dist/js/demo-theme.min.js"></script>

    <style>
        :root {
            /* Kurumsal fontlar */
            --tblr-font-sans-serif: 'IBM Plex Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        }

        body {
            /* Arkaplanda çok açık gri/doku hissi */
            background-color: #f8f9fb;
            color: #333;
            font-family: var(--tblr-font-sans-serif);
        }

        /* Sidebar (Navbar vertical): Koyu lacivert degrade */
        .navbar-vertical {
            background: linear-gradient(135deg, #1e2a44, #2f3b5d) !important;
            border-right: none !important;
        }
        /* Sidebar linkler – gold hover */
        .navbar-nav .nav-link {
            color: #cfd3e1 !important;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        .navbar-nav .nav-link:hover {
            background-color: rgba(255,215,0,0.1) !important; /* altın yansıma */
            color: #fff !important;
        }
        .navbar-nav .nav-link.active {
            background-color: rgba(255,215,0,0.2) !important;
            color: #fff !important;
        }

        /* Header (navbar): beyaz arka plan + altın link hover */
        .navbar-light {
            background-color: #fff !important;
            box-shadow: 0 1px 5px rgba(0,0,0,0.1);
        }
        .navbar-light .navbar-nav .nav-link {
            color: #444 !important;
        }
        .navbar-light .navbar-nav .nav-link:hover {
            color: #b38b00 !important; /* altına çalan bir ton */
        }

        /* Footer */
        .footer {
            background-color: #f1f2f6 !important;
            border-top: 1px solid #eaeaea !important;
        }
        .footer a {
            color: #b38b00 !important; /* altın */
            text-decoration: none !important;
        }

        /* Dropdown menü beyaz, hafif gölge */
        .dropdown-menu {
            background-color: #ffffff;
            border: 1px solid rgba(0,0,0,0.1);
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        }

        /* Navbar toggler */
        .navbar-toggler {
            border-color: #ccc;
        }
        .navbar-toggler-icon {
            color: #fff;
        }
    </style>
</head>
<body class="theme-light">

<div class="page">
    <!-- Side Navbar -->
    <aside class="navbar navbar-vertical navbar-expand-lg" data-bs-theme="dark">
        <div class="container-fluid">
            <!-- Sidebar Toggle (mobile) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar-menu"
                    aria-controls="sidebar-menu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Brand / Logo -->
            <h1 class="navbar-brand navbar-brand-autodark">
                <a asp-area="Teacher" asp-controller="Dashboard" asp-action="Index">
                    <img src="~/theme/tabler/static/logo.svg" width="110" height="32" alt="Logo"
                         class="navbar-brand-image">
                </a>
            </h1>

            <!-- Sidebar Nav Items -->
            <div class="collapse navbar-collapse" id="sidebar-menu">
                <ul class="navbar-nav pt-lg-3">
                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Teacher"
                           asp-controller="Dashboard" asp-action="Index">
                            <span class="nav-link-icon d-md-none d-lg-inline-block">
                                <!-- Dashboard Icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                     viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                     stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <polyline points="3 13 9 13 9 21 15 21 15 13 21 13"/>
                                    <polyline points="9 3 9 13 15 13 15 3"/>
                                    <line x1="9" y1="13" x2="15" y2="13"/>
                                </svg>
                            </span>
                            <span class="nav-link-title">
                                Dashboard
                            </span>
                        </a>
                    </li>
                    <!-- Kullanıcı Yönetimi -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#navbar-users"
                           data-bs-toggle="dropdown"
                           data-bs-auto-close="false"
                           role="button"
                           aria-expanded="false">
                            <span class="nav-link-icon d-md-none d-lg-inline-block">
                                <!-- Users Icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                     viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                     stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="9" cy="7" r="4"/>
                                    <path d="M5 21v-2a4 4 0 0 1 8 0v2"/>
                                    <path d="M20 21v-2a4 4 0 0 0 -3 -3.87"/>
                                </svg>
                            </span>
                            <span class="nav-link-title">
                                Kullanıcı Yönetimi
                            </span>
                        </a>
                        <div class="dropdown-menu show">
                            <div class="dropdown-menu-columns">
                                <div class="dropdown-menu-column">
                                    <a class="dropdown-item"
                                       asp-area="Teacher"
                                       asp-controller="Students"
                                       asp-action="Index">
                                        Tüm Öğrenciler
                                    </a>
                                    <a class="dropdown-item"
                                       asp-area="Teacher"
                                       asp-controller="Students"
                                       asp-action="Add">
                                        Yeni Öğrenci Ekle
                                        <span class="badge badge-sm bg-green-lt text-uppercase ms-auto">Yeni</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <!-- Raporlar -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           data-bs-toggle="dropdown"
                           role="button"
                           aria-expanded="false">
                            <span class="nav-link-icon d-md-none d-lg-inline-block">
                                <!-- Reports Icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                     viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                     stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M3 3h18v18h-18z"/>
                                    <path d="M9 3v18"/>
                                    <path d="M3 9h18"/>
                                </svg>
                            </span>
                            <span class="nav-link-title">
                                Raporlar
                            </span>
                        </a>
                        <div class="dropdown-menu show">
                            <div class="dropdown-menu-columns">
                                <div class="dropdown-menu-column">
                                    <a class="dropdown-item"
                                       asp-area="Teacher"
                                       asp-controller="Reports"
                                       asp-action="Index">
                                        Öğrenci Raporları
                                    </a>
                                    <a class="dropdown-item"
                                       asp-area="Teacher"
                                       asp-controller="Reports"
                                       asp-action="Performance">
                                        Performans Raporları
                                        <span class="badge badge-sm bg-green-lt text-uppercase ms-auto">Yeni</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <!-- Profilim -->
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area="Teacher"
                           asp-controller="Profile"
                           asp-action="Index">
                            <span class="nav-link-icon d-md-none d-lg-inline-block">
                                <!-- Profile Icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                     viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                     stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="7" r="4"/>
                                    <path d="M5.5 21a9 9 0 0 1 13 0"/>
                                </svg>
                            </span>
                            <span class="nav-link-title">
                                Profilim
                            </span>
                        </a>
                    </li>
                    <!-- Çıkış Yap -->
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area="Teacher"
                           asp-controller="Logout"
                           asp-action="Index">
                            <span class="nav-link-icon d-md-none d-lg-inline-block">
                                <!-- Logout Icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                     viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                     stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M14 8v-3a2 2 0 0 0 -2 -2h-7
                                             a2 2 0 0 0 -2 2v14
                                             a2 2 0 0 0 2 2h7
                                             a2 2 0 0 0 2 -2v-3"/>
                                    <path d="M7 12l9 -9"/>
                                    <path d="M16 3v6h-6"/>
                                </svg>
                            </span>
                            <span class="nav-link-title">
                                Çıkış Yap
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </aside>

    <!-- Page Wrapper -->
    <div class="page-wrapper">
        <!-- Header -->
        <header class="navbar navbar-expand-md navbar-light d-none d-lg-flex d-print-none">
            <div class="container-xl">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbar-menu"
                        aria-controls="navbar-menu"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Sağ nav -->
                <div class="navbar-nav flex-row order-md-last">
                    <div class="d-none d-md-flex">
                        <!-- Dark Mode -->
                        <a href="?theme=dark" class="nav-link px-0 hide-theme-dark"
                           title="Enable dark mode"
                           data-bs-toggle="tooltip"
                           data-bs-placement="bottom">
                            <!-- Moon Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                                 viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M12 3c.132 0 .263 0 .393 0
                                         a7.5 7.5 0 0 0 7.92 12.446
                                         a9 9 0 1 1 -8.313 -12.454z"/>
                            </svg>
                        </a>
                        <!-- Light Mode -->
                        <a href="?theme=light" class="nav-link px-0 hide-theme-light"
                           title="Enable light mode"
                           data-bs-toggle="tooltip"
                           data-bs-placement="bottom">
                            <!-- Sun Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24"
                                 height="24"
                                 viewBox="0 0 24 24"
                                 stroke-width="2" stroke="currentColor" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z"
                                      fill="none"/>
                                <path d="M12 12m-4 0a4 4 0 1 0 8 0
                                         a4 4 0 1 0 -8 0"/>
                                <path d="M3 12h1m8 -9v1m8 8h1m-9 8v1
                                         m-6.4 -15.4l.7 .7
                                         m12.1 -.7l-.7 .7
                                         m0 11.4l.7 .7
                                         m-12.1 -.7l-.7 .7"/>
                            </svg>
                        </a>
                    </div>
                    <!-- Bildirimler (opsiyonel) -->
                    <div class="nav-item dropdown d-none d-md-flex me-3">
                        <a href="#" class="nav-link px-0"
                           data-bs-toggle="dropdown"
                           tabindex="-1"
                           aria-label="Show notifications">
                            <!-- Bell Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon"
                                 width="24" height="24"
                                 viewBox="0 0 24 24" stroke-width="2"
                                 stroke="currentColor" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z"
                                      fill="none"/>
                                <path d="M10 5a2 2 0 1 1 4 0
                                             a7 7 0 0 1 4 6v3a4 4 0 0 0 2 3
                                             h-16a4 4 0 0 0 2 -3v-3
                                             a7 7 0 0 1 4 -6"/>
                                <path d="M9 17v1a3 3 0 0 0 6 0v-1"/>
                            </svg>
                            <span class="badge bg-yellow"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-end dropdown-menu-card">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Bildirimler</h3>
                                </div>
                                <div class="list-group list-group-flush list-group-hoverable">
                                    <div class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <span class="status-dot status-dot-animated bg-red d-block"></span>
                                            </div>
                                            <div class="col text-truncate">
                                                <a href="#" class="text-body d-block">Örnek</a>
                                                <div class="d-block text-secondary text-truncate mt-n1">
                                                    Bir bildirim detay mesajı
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <a href="#" class="list-group-item-actions">
                                                    <!-- Star Icon -->
                                                    <svg xmlns="http://www.w3.org/2000/svg"
                                                         class="icon text-muted"
                                                         width="24" height="24"
                                                         viewBox="0 0 24 24"
                                                         stroke-width="2"
                                                         stroke="currentColor"
                                                         fill="none"
                                                         stroke-linecap="round"
                                                         stroke-linejoin="round">
                                                        <path stroke="none"
                                                              d="M0 0h24v24H0z"
                                                              fill="none"/>
                                                        <path d="M12 17.75l-6.172 3.245l1.179 -6.873
                                                                 l-5 -4.867l6.9 -1
                                                                 l3.086 -6.253
                                                                 l3.086 6.253
                                                                 l6.9 1
                                                                 l-5 4.867
                                                                 l1.179 6.873z"/>
                                                    </svg>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Diğer bildirimler -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Kullanıcı Menüsü -->
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link d-flex lh-1 text-reset p-0"
                           data-bs-toggle="dropdown"
                           aria-label="Open user menu">
                            <span class="avatar avatar-sm"
                                  style="background-image: url('~/theme/tabler/static/avatars/000m.jpg')"></span>
                            <div class="d-none d-xl-block ps-2">
                                <div>Öğretmen Adı</div>
                                <div class="mt-1 small text-secondary">Teacher</div>
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                            <a asp-area="Teacher" asp-controller="Profile" asp-action="Index" class="dropdown-item">
                                Profil
                            </a>
                            <div class="dropdown-divider"></div>
                            <a asp-area="Teacher" asp-controller="Logout" asp-action="Index" class="dropdown-item">
                                Çıkış Yap
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Arama -->
                <div class="collapse navbar-collapse" id="navbar-menu">
                    <div>
                        <form action="#" method="get" autocomplete="off" novalidate>
                            <div class="input-icon">
                                <span class="input-icon-addon">
                                    <!-- Search Icon -->
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="icon"
                                         width="24"
                                         height="24"
                                         viewBox="0 0 24 24"
                                         stroke-width="2"
                                         stroke="currentColor"
                                         fill="none"
                                         stroke-linecap="round"
                                         stroke-linejoin="round">
                                        <path stroke="none"
                                              d="M0 0h24v24H0z"
                                              fill="none"/>
                                        <path d="M10 10m-7 0a7 7 0 1 0 14 0
                                                 a7 7 0 1 0 -14 0"/>
                                        <path d="M21 21l-6 -6"/>
                                    </svg>
                                </span>
                                <input type="text" class="form-control"
                                       placeholder="Arama…"
                                       aria-label="Arama">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </header>

        <!-- İçerik -->
        <main class="page-body">
            <div class="container-xl">
                @RenderBody()
            </div>
        </main>

        <!-- Footer -->
        <footer class="footer footer-transparent d-print-none">
            <div class="container-xl">
                <div class="row text-center align-items-center flex-row-reverse">
                    <div class="col-lg-auto ms-lg-auto">
                        <ul class="list-inline list-inline-dots mb-0">
                            <li class="list-inline-item">
                                <a href="#" class="link-secondary">Dokümantasyon</a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#" class="link-secondary">Destek</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                        <ul class="list-inline list-inline-dots mb-0">
                            <li class="list-inline-item">
                                &copy; 2025 Şirketiniz. Tüm hakları saklıdır.
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>

<!-- JS -->
<script src="~/theme/tabler/dist/libs/apexcharts/dist/apexcharts.min.js" defer></script>
<script src="~/theme/tabler/dist/libs/jsvectormap/dist/js/jsvectormap.min.js" defer></script>
<script src="~/theme/tabler/dist/libs/jsvectormap/dist/maps/world.js" defer></script>
<script src="~/theme/tabler/dist/libs/jsvectormap/dist/maps/world-merc.js" defer></script>
<script src="~/theme/tabler/dist/js/tabler.min.js" defer></script>
<script src="~/theme/tabler/dist/js/demo.min.js" defer></script>
<script src="~/theme/tabler/dist/libs/tinymce/tinymce.min.js"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
